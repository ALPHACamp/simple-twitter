  <!-- dashboard start-->
    <div class="dashboard u-showborder">

      <!-- dashboardProfile field start -->
      <div class="dashboardProfile">
        <div class="dashboardProfile-avatar">
          <%= image_tag user.avatar , class: "img-responsive"%>
        </div>
        <div class="dashboardProfile-userfield">
          <div class="dashboardProfile-username"><%= user.name %></div>
          <div class="dashboardProfile-userintro"><%= user.introduction %></div>
          
        </div>
        <!-- show count of likes,  follwings,  followers -->
        <div class="dashboardProfile-state">
          <div class="dashboardProfile-statelist">
           like following
          </div>
        </div>

      </div>
      <!-- dashboardProfile field end -->

      <!-- dashboardContorl button start -->
      <div class="dashboardContorl">

        <!-- if current_user,  show edit button , or follow -->
        <% if user == current_user %>
        <div class="dashboardContorl-edit"><%= link_to "edit profile", edit_user_path(user), class: "btn btn-primary"%></div> 
        <%else%>
          <div class="dashboardContorl-follow">
            <div class="btn btn-primary">follow</div>
          </div>
        <%end%>
      </div>
      <!-- dashboardContorl button end -->

    </div>  
    <!-- dashboard end-->
