    Unlike (<%=tweet.likes.size%>)
  <%end%>
<% else %>
  <%= link_to like_tweet_path(tweet), method: :post,class:"like_link" do %>
    Like (<%=tweet.likes.size%>) 
  <%end%>
<%end%>
