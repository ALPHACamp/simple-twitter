<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample Twitter", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <% if current_user&.admin? %>
            <li><%= link_to 'Admin Panel', admin_tweets_path %></li>
          <% end %>

          <li>
            <%= link_to tweets_user_path(current_user), class: "navbar-brand" do %>
              <%= image_tag current_user.avatar.thumb.url , size: "40", style: "position:relative;top:-10px" %>
            <% end %>
          </li>

          <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
        <% else %>
          <li><%= link_to('註冊', new_user_registration_path) %></li>
          <li><%= link_to('登入', new_user_session_path) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
