<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya|Montserrat+Alternates" rel="stylesheet">
  </head>

  <body>
    <nav class="my-nav navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to root_path do %>
            <span id="logo"><%= image_tag("logo.png") %></span>
            <span id="nav-title">&nbsp;Twitter</span>
          <% end %>
        </div>
 
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="pull-right text-right nav navbar-nav" id="nav-link">
            <% if current_user %>
              <li><p class="navbar-text test">Hi, <%= current_user.name %></p></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Admin Panel', admin_root_path %></li>
              <% end %>
              <li><%= link_to 'Home', root_path %></li>
              <li class="nav-user">
                <%= link_to tweets_user_path(current_user) do %>
                  <% if current_user.avatar? %>
                    <%= image_tag current_user.avatar %>
                  <% else %>
                    <img src="http://via.placeholder.com/50x50">
                  <% end %>
                <% end %>
              </li>
              <li class="nav-user"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
              <!-- 修改個人資料 -->
            <% else %>
              <li><%= link_to('Sign up', new_user_registration_path) %></li>
              <li><%= link_to('Log in', new_user_session_path) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
      </div>
    </div>
    <% end %>
 
    <% if flash[:alert] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </div>
      </div>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
