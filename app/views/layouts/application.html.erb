<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-default">
      <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "SimpleTwitter", root_path, class: "navbar-brand glyphicon glyphicon-globe" %>        
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <% if current_user.admin? %>
                <li><%= link_to "Admin後台", admin_tweets_path %></li> 
              <% end %>
              <li>
                <%= link_to '',tweets_user_path(current_user), class: "glyphicon glyphicon-user" %>
              </li>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>  
            <% else %>
              <a class="navbar-brand glyphicon glyphicon-glass" href="#"></a>
            <% end %>        
          </ul> 
        </div> <!-- /.navbar-collapse --> 
      </div>  <!-- /.container-fluid -->
    </nav>      

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
