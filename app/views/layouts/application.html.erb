 <!DOCTYPE html>
<html>
  <head>
    <title>RestaurantForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <!-- 導覽列 -->
        <nav class="navbar navbar-default">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
           <span class="sr-only">Toggle navigation</span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </button>
          <%= link_to "LOGO", root_path, class: "navbar-brand" %>
       </div>
 
         <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="pull-right text-right nav navbar-nav">
              <% if current_user %>
                <% if current_user.admin? %>
                 <li><%= link_to 'Admin後台', admin_tweets_path %></li>
               <% end %>
              <li><p class="navbar-text">Hi,
                <%=link_to current_user.name,tweets_user_path(current_user) %></p></li>
              <li><%= link_to('Profile', edit_user_path(current_user)) %></li>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
 
              <% else %>
              <li><%= link_to('註冊', new_user_registration_path) %></li>
              <li><%= link_to('登入', new_user_session_path) %></li>
              <% end %>
            </ul>
          </div>
         </div>
        </nav>

        <% if flash[:notice] %>
          <div class="container">
            <div class="row">
              <div class="alert alert-success alert-dismissible" role="alert">
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                 <%= notice %>
              </div>
            </div>
          </div>
         <% end %>
 
         <% if flash[:alert] %>
           <div class="container">
            <div class="row">
             <div class="alert alert-danger"><%= alert %></div>
            </div>
          </div>
         <% end %>
       
    <%= yield %>
  </body>
</html>
