<!DOCTYPE html>
<html>
  <head>
    <title>Simple Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <!-- 導覽列 -->
    <nav class="navbar navbar-expand bg-light">
      <!-- Brand -->
      <div class="navbar-header">
        <%= link_to "LOGO", root_path, class: "navbar-brand h1" %>
      </div> 
      
      <!-- nav links -->
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if current_user %>

              <!-- 使用者下拉選單 -->
              <li class="nav-item dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">Hi, <%= current_user.name %></a>
                <ul class="dropdown-menu">
                  <% if current_user&.admin? %>
                    <li><%= link_to '管理者後台', admin_root_path %></li>
                  <% end %>
                  <li class="dropdown-item"><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
                  <li class="dropdown-item"><%= link_to('修改個人資料', edit_user_registration_path) %></li>
                </ul>
              </li>
            <% else %>
              <!-- 未登入者選單 -->
              <li class="nav-item"><%= link_to('註冊', new_user_registration_path) %></li>
              <li class="nav-item"><%= link_to('登入', new_user_session_path) %></li>
            <% end %>
          </ul>      
      </div>
    </nav>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
