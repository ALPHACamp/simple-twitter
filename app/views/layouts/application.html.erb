<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style type="text/css">
      .alert {
        border: none;
      }
    </style>

  </head>

  <body>


    <nav class="navbar navbar-default">
      <div class="container-fluid">



        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "SimpleTwitter", root_path, class: "navbar-brand" %>
        </div>

        

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="請輸入關鍵字">
            </div>
            <button type="submit" class="btn btn-default">搜尋</button>
          </form>

          <ul class="nav navbar-nav navbar-right">

            <% if current_user %>
              <% if current_user.admin? %>
                <li><%= link_to 'admin後台',admin_tweets_path %></li>
              <% end %>
              <li><%= link_to current_user.email %></li>
              
              <li ><%= link_to('登出', destroy_user_session_path, method: :delete) %> <span class="sr-only">(current)</span></li>
              <li><%= link_to('修改密碼', edit_user_registration_path) %></li>
            <% else %>
              <li><%= link_to('註冊', new_user_registration_path) %><span class="sr-only">(current)</span></li>
              <li><%= link_to('登入', new_user_session_path) %></li>
            <% end %> 
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->

    </nav>
        <% if flash[:notice] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-success text-center">
              <%= notice %>
            </div>
          </div>
        </div>
        <% end %>

        <% if flash[:alert] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-danger text-center">
              <%= alert %>
            </div>
          </div>
        </div>
        <% end %>

    <%= yield %>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
