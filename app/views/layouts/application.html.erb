<!DOCTYPE html>
<html>
  <head>
    <title>SimpleTwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default ">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to "Simple Twitter", root_path, class:"navbar-brand" %>

            
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="pull-right text-right nav navbar-nav">
              <% if current_user %>
                <li><p class="navbar-text">Hi, <%= current_user.email %></p></li>
                <% if current_user.admin? %>
                  <li><%= link_to "", admin_tweets_path, class: "glyphicon glyphicon-queen" %></li>
                <% end %>
               <li><%= link_to "", tweets_user_path(current_user) ,class: "glyphicon glyphicon-user" %></li>
               <li><%= link_to "", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-share-alt" %></li>
               <li><%= link_to "", edit_user_registration_path, class: "glyphicon glyphicon-align-justify" %></li>
              <% else %>
               <li><%= link_to "Log in", new_user_session_path %></li>
               <li><%= link_to "Sign up", new_user_registration_path %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->  
        </div><!-- /.container-fluid -->
      </nav>


      <% if flash[:notice] %>
         <div class="container">
           <div class="row">
             <div class="alert alert-info">
              <%= notice %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             </div>
           </div>
         </div>
       <% end %>
   
       <% if flash[:alert] %>
         <div class="container">
           <div class="row">
             <div class="alert alert-danger">
              <%= alert %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             </div>
           </div>
         </div>
       <% end %>

   
      <%= yield %>
     </div> 
  </body>
</html>
