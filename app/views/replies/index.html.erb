
    <div class="reply-form">
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control"%>
        </div>
        <div class="form-group button-group">
          <%= f.submit "Reply", class: "btn" %>
          <%= f.button "Cancel", type: :reset, class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>