<div class="row">
  <div class="col-xs-3">
    <%= render partial: "shared/user_profile", locals: {user: @tweet.user} %>
    
  </div>
  <div class="col-xs-9 ">
    <h1>Tweets</h1>
  
    
      <div class="col-xs-10 col-xs-offset-2">
        <%= render partial: "shared/master", locals: {
          tweet: @tweet, tweet_des: @tweet.description, tweet_time: @tweet.created_at,tweet_cache: true }%>
        
      </div>
    
    
    <h1>Replies</h1>
    
   
    <div class="col-xs-10 col-xs-offset-2">
      <% @replies.each do |rely| %>
        <div class="speak-item row">
          <div class="col-xs-3">
            <%= render partial: "shared/avatar", locals: {avatar: rely.user.avatar} ,size: "200"if rely.user.avatar? %>
       
          </div>

          <div class="col-xs-9">
            <p>
            <%= link_to rely.user.name,tweets_user_path(rely.user) %> ,
            <%= rely.created_at.strftime("%Y-%m-%d, %H:%M") %>

            </p>
            <p> <%=rely.comment %></p>
          </div>
        </div>
        
  
  
      <% end %>

   
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control text" %>
        </div>
        <div class="form-group">
          <%= f.submit "Reply", class: "btn btn-default my-btn btn-lg" %>
        </div>
        
      

      <% end %>
    </div>

  </div>
</div>
