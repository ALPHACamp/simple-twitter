<div class="col-md-3 col-sm-4">
  <div class="text-center">
    <%= image_tag current_user.avatar, class: "img-responsive img-rounded" %>
  </div>

  <h2>
    <%= current_user.name %>
  </h2>
  <p><strong><%= current_user.email %></strong></p>

  <div>
    <%= current_user.introduction %>
  </div>

  <div>
    <h4>Tweets <strong><%= current_user.tweets.count %></strong> </h4>
    <h4>Following <strong><%= current_user.tweets.count %></strong> </h4>
    <h4>Follower <strong><%= current_user.tweets.count %></strong> </h4>
    <h4>Like <strong><%= current_user.tweets.count %></strong> </h4>
  </div>


  <% if current_user.email == current_user.email %>
    <%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-primary" %>
      <% end %>
</div>




<div class="col-xs-7 col-xs-offset-1">
  <div class="row">
    <div class="col-xs-12">
      <h2>Tweets</h2>
 <div class='col-xs-12 tweet-box'>
            <div class="col-xs-3">
              <%= image_tag @tweet.user.avatar, class: "img-responsive img-rounded center-block" %>
            </div>
            <div class="col-xs-9">


              <div class="caption">

                <p>
                  <%= link_to @tweet.user.name, tweets_user_path(@tweet.user) %>
                    <%= @tweet.created_at.strftime("%Y-%m-%d, %H:%M") %>
                </p>
                <p>
                  <%= truncate(@tweet.description, length: 80) %>
                </p>
<%= link_to "Reply(#{@tweet.replies_count})", tweet_replies_path(@tweet), class: "links" %>
              </div>
              </div>


            </div>
          </div>
    </div>
    <div class="col-xs-12">
      <h2>Replies</h2>
      <div class="replies">
        <% @replies.each do |reply| %>

          <div class='col-xs-12 tweet-box'>
            <div class="col-xs-3">
              <%= image_tag reply.user.avatar, class: "img-responsive img-rounded center-block" %>
            </div>
            <div class="col-xs-9">


              <div class="caption">

                <p>
                  <%= link_to reply.user.name, tweets_user_path(reply.user) %>
                    <%= reply.created_at.strftime("%Y-%m-%d, %H:%M") %>
                </p>
                <p>
                  <%= truncate(reply.comment, length: 80) %>
                </p>

              </div>


            </div>
          </div>


          <% end %>
      </div>

      <%= form_for [@tweet, @reply], remote: true do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, :cols => 55, :rows => 5, class: "form-control text-area" %>
        </div>
        <div class="form-group pull-right">
          <%= f.submit "Reply", :disable_with => 'Replying' , remote: true, class: "btn btn-info"%>
        </div>
        <% end %>
        
    </div>

  </div>
</div>
