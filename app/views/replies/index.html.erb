<div class="container">
  <div id="reply-index">
    <%= render partial: "share/user_item", locals: {user: current_user, tweet_class: '', following_class: '', follower_class: '', like_class: ''} %>
    <div id="tweet-wall">
      <h2>Tweet</h2>
      <%= render partial: "share/tweet_item", locals: {tweet: @tweet} %>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="tweet-form form-group">
          <div class="avatar-xs">
            <%= link_to tweets_user_path(current_user) do %>
              <%= image_tag(current_user.avatar, class: "img-circle") %>
            <% end %>
          </div>
          <div>
            <%= f.text_area :comment, placeholder: "Reply something...", maxlength: 140, class: "tweet-form-textarea form-control"%>
          </div>
          <%= f.submit 'Reply', class: "tweet-btn btn btn-primary" %>
        </div> 
      <% end %>
      <h2>Replies</h2>
      <% @replies.each do |reply| %>
        <div class="reply-item">
          <div class="avatar-sm">
          <%= link_to tweets_user_path(reply.user) do %>
            <%= image_tag(reply.user.avatar, class: "") %>
          <% end %>
          </div>
          <div class="reply-info">
            <h4><%= link_to "@#{reply.user.name}", tweets_user_path(reply.user)%><%= reply.created_at.strftime(" ,%Y-%m-%d %I:%M") %></h4>
            <p><%= reply.comment %></p>
            <div>
              <% if reply.user == current_user %> 
              <span class="delete-btn"><em>
                <%= link_to 'delete', tweet_reply_path(@tweet, reply), method: :delete, data: {confirm: "Are you sure?"} %>
                </em></span> 
              <% end %>
            </div>  
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>