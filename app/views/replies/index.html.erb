<div class="container">
  <div class="row">

    <div class="media tweet-item">
      <div class="media-left media-middle">
        <%= image_tag @tweet.user.avatar, class: "media-object" %>
      </div>
      <div class="media-body">
        <h5 class="media-heading">
          <%= link_to "@#{@tweet.user.name}", tweets_user_path(@tweet.user) %>
          <%= time_ago_in_words(@tweet.created_at) %> ago
        </h5>
        <p><%= @tweet.description %></p>
      </div>
    </div>

    <div class="clearfix"></div>

  </div>
</div>

<hr>
<% @tweet.replies.each do |reply| %>
  <div>
    <h4><%= reply.user.name %></h4>
    <%= link_to "@#{reply.user.name}", tweets_user_path(reply.user) %>
    <p><%= simple_format reply.comment %></p>
    <p class="text-muted">
      <em><%= time_ago_in_words(reply.created_at) %> ago -</em>
    </p>
  </div>
  <hr>
<% end %>

<div class="container">
  <div class="row">
    <%= form_for [@tweet, @reply] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>