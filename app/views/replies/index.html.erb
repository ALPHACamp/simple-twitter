<div class="col-md-12">

  <div class="col-md-4">    

    <img src="http://via.placeholder.com/350x350" class="avatar">
    <div><%= @user.name %></div>
    <div><%= @user.introduction %> </div>

    <%= link_to "Tweet #{1}" , tweets_user_path(@user) %> 
    <%= link_to "Following #{1}" , followings_user_path(@user) %> 
    <%= link_to "Follower #{1}" , followers_user_path(@user) %> 
    <%= link_to "Like #{1}" , likes_user_path(@user) %> 

    <button> Edit Profile </button>

  </div>

  <div class="col-md-8">    

    <h3>Tweets</h3>

      <div class="tweet-item">
        <img src="http://via.placeholder.com/80x80" class="avatar">
        <%= link_to "#{@user.name}" , tweets_user_path(@user) %>, <span class="time"> time </span>
        <div class="content">tweet content</div>
            <%= link_to "Reply(#{@tweet.replies_count})" , tweet_replies_path(@tweet) %> 
            <%= link_to "Like(#{@tweet.likes_count})" , like_tweet_path(@tweet), class: "like"%> 

      </div>
    
    <h3>Replies</h3>

       <% @replies.each do |reply| %>

          <div class="tweet-item">
            <img src="http://via.placeholder.com/80x80" class="avatar">
            <%= link_to reply.user.name, tweets_user_path(reply.user) %>, 
            <span class="time">  <%= time_ago_in_words(reply.created_at) %> </span>
            <div class="content"><%= reply.comment %></div>
            
          </div>

 
      <% end %>

      <textarea></textarea>
      <button>Reply</button>
      
  </div>

</div>