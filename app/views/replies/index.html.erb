<div class="container">
  <div class="row">

    <%= render partial: "shared/profile", locals: { user: @tweet.user } %>

    <div class="col-md-8">
      <h1>Tweets</h1>

      <div class="tweets clearfix">

        <div class="col-left">
          <div class="avatar">
            <%= image_tag @tweet.user.avatar, height: 75, width: 75 %>
          </div>
        </div>

        <div class="col-right">
          <%= link_to users_tweets_path(@user) do %>
            <div class="name">@<%= @user.name %>, <%= @tweet.created_at %></div>
          <% end %>

          <div class="description"><%= @tweet.description %></div>

          <div class="tweets-buttom">
            <div class="reply">Reply(<%= @tweet.replies.count %>)</div>
            <div class="like">Like(<%= @tweet.likes_count %>)</div><!-- 文章被讚總數 -->
            <div class="button-reply">
              <%= render partial: "shared/like", locals: {tweet: @tweet} %>
            </div>
          </div>
        </div>

      </div>

      <h1>Replise</h1>
      <% @replies.each do |reply| %>

        <div class="tweets clearfix">
          <div class="col-left">
            <div class="avatar">
              <%= image_tag reply.user.avatar, height: 75, width: 75 %>
            </div>
          </div>
          <div class="col-right">
            <div class="name">
              <%= link_to users_tweets_path(reply.user) do %>
                @<%= reply.user.name %>, <%= reply.created_at %>
              <% end %>
            </div>

            <div class="description"><%= reply.comment %></div>
          </div>

        </div>
      <% end %>

      <div class="reply-area">
        <%= form_for Reply.new do |f| %>
          <%= f.hidden_field :tweet_id, :value => @tweet.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.text_field :comment, placeholder: "Reply here", class: "form-control" %>
          <br>
          <%= f.submit 'Reply', class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>

  </div>
</div>