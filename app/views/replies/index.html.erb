<!-- Reply page -->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      

      <%= render partial: "shared/user_section" %>
    </div>

    <div class="col-xs-9">
      <h3>Tweet</h3>
      <%= render partial: "shared/tweet_list" %>

      <h3> Replies </h3>
      <div class="">
        <% @replies.each do |tweet| %>
            <div class="tweet-item">
              <div class="row">
                <div  class="col-xs-2 tweet-item-img">  
                  <%= link_to tweets_user_path(tweet.user) do %>
                    <%= image_tag tweet.user.avatar, class: "img-responsive center-block img-rounded" %>
                  <% end %>
                </div>

                <div class="col-xs-10">
                  <div class="caption">
                    <h5><%= link_to tweet.user.name, tweets_user_path(tweet.user) %>, <%= "#{tweet.created_at}".split(" ").first %>, <%= "#{tweet.created_at}".split(" ").second %>  </h5>
                    <p><%= simple_format tweet.comment %></p>
                    
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>

      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: "", class: "form-control tweet-form", rows: "5" %>
        </div>

        <% if @reply.errors.any? %>
          <%= @reply.errors.full_messages.to_sentence %>
        <% end %>
        <div class="form-group tweet-btn">
          <%= f.submit "Reply", class: "btn btn-primary" %>
        </div>
        <div class="clearfix"></div>
      <% end %>


    </div>
  </div>
</div>
