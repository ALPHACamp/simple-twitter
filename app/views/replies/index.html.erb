<div class="container">
  <%= render partial: "shared/info", locals: {user: @user} %>

  <h4>Tweets</h4>
  <div class="col-sm-6" >
    <div class="thumbnail">
        <%= render partial: "shared/pic", locals: {user: @user} %>
      <div class="caption">
        <h3><%= @user.name %></h3>
        <p><%= @tweet.description %></p>
        <%= link_to "Reply", tweet_replies_path(@tweet) %>
        <%= render partial: "shared/like", locals: {tweet: @tweet} %>
      </div>
    </div>
  </div>

  <h4>Replies</h4>
  <%= @replies.each do |reply| %>
    <div class="col-sm-6" >
      <div class="thumbnail">
          <%= render partial: "shared/pic", locals: {user: reply.user } %>
        <div class="caption">
          <h3><%= reply.user.name %></h3>
          <p><%= reply.comment %></p>
        </div>
      </div>
    </div>
  <% end %>



  <%= form_for [@tweet, @reply] do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, placeholder: "Messages", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Reply", class: "btn btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
    </div>
  <% end %>    
  <div class="clearfix"></div>  




</div>
