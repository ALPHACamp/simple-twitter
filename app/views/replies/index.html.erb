<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <%= image_tag current_user.avatar, width: "200px"%>
        <p>@<%= current_user.name %> </p>
        <p><%= current_user.introduction %></p>
    
        <br>
        <p>Tweets <%= current_user.tweets.count %> </p>
        <p>Following</p>
        <p>Follower</p>
        <p>Like</p>
      <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>   
    </div>
    <div class="col-xs-12 col-sm-6 col-md-8">
      <h2>Tweets</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <strong>@<%= link_to @tweet.user.name, tweets_user_path(@tweet.user) %></strong>, <em><%= time_ago_in_words(@tweet.created_at) %></em> ago
          <br>
          <p><%= simple_format(@tweet.description)%></p>
          <p><%= link_to "Reply", tweet_replies_path %> <%= link_to @tweet.replies_count,tweet_replies_path(@tweet) %></p>
        </div>
      </div>
      <h2>Replies</h2>
        
        <% @replies.each do |reply| %>
          <div class="panel panel-default"> 
            <div class="panel-body">
              @<%= reply.user.name %>
              <%= reply.comment %>
            </div> 
          </div> 
        <% end %>     
        <div class="form-container">
          <%= form_for [@tweet,@reply] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: "6", class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.submit "Reply", class: "btn btn-primary pull-right" %>
          </div>
          <% end %>
        </div>
        

    </div>
  </div>
</div>
    


