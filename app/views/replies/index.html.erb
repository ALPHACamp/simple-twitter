<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
    <!-- user's info -->
      <%= render partial: "shared/user_info", locals: {user: @tweet.user} %>
    </div>  
    <div class="col-12 col-sm-8">
    <!-- tweet -->
    <h2><strong>Tweet</strong></h2>
    <%= render partial: "shared/tweet", locals: {tweet: @tweet} %>
   
    <!-- tweet.replies show -->
    <h2><strong>Replies</strong></h2>
    <% @replies.each do |reply| %>
      <%= render partial: "shared/reply", locals: {reply: reply} %>  
    <% end %> 
    <!-- tweet.replies create form -->
    <%= form_for [@tweet, @reply] do |f| %>
      <div class="form_group">
        <%= f.text_area :comment, placeholder: "Reply this tweet", class: "form-control", rows: "3", maxlength:"100" %>
      </div>
      <div class="form-group text-right">
        <%= f.button "Reply",type: :submit, class: "btn btn-primary mt-1" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
