<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div>
        <h4><%= @tweet.user.name %></h4>
        <p><%= simple_format @tweet.description %></p>
        <p class="text-muted">
          <em><%= @tweet.created_at %> </em>
        </p>
      </div>
      <div class="container">
        <div class="row">
         <%= form_for [@tweet, @reply] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Reply",class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
