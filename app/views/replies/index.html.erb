<div class="container">
  <div class="row">
    <%= render partial: "shared/userinfo", locals: {user: @user} %>
    <div class="col-md-8 col-md-offset-1">
      <h1>Tweets</h1>
      <div class="col-md-12">
        <%= render partial: "shared/tweet", locals: {tweet: @tweet} %>
      </div>
      <h1>Replies</h1>
      <div class="col-md-12">
        <% @replies.each do |reply| %>
          <div class="tweets-items row">
            <div class="col-md-3">
              <%= image_tag reply.user.avatar, class: "avatar-styled" if reply.user.avatar? %>
            </div>
            <div class="col-md-9">
              <p><%= link_to "@#{reply.user.name}", tweets_user_path(reply.user) %>, <%= reply.created_at.strftime("%Y-%m-%d, %H:%M")  %></p> 
              <p><%= reply.comment%></p>
            </div>  
          </div>            
        <% end %>
      </div>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control", rows: "5" %>
        </div>
        <div class="form-group btn-right">
          <%= f.submit "Reply", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
