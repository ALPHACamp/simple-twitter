<div class="container">
  <div class="row">

    <div class="col-md-5 ">
      <div class="">
        <img src="http://via.placeholder.com/90x90" class="img-responsive img-rounded">
      </div>
      <div>  
           <h3> name: </h3><br>
            Tweets.size: <br>
            Following.size: <br>
            Followers.size: <br>
            likes.size: 
      </div>  
      <h3><button>Edit</button></h3>

    </div>

      <div class="col-md-7">

          <h3>Tweet</h3>
        <div class="tweet col-xs-12">
          <h4>@user.name</h4>
          <p> @tweet.description </p>  
          <br>
        </div>
          <h3>Replies</h3>
        <div class="col-xs-12 ">
          <div class="col-xs-3">
            <img src="http://via.placeholder.com/70x70" class="img-responsive img-rounded">
          </div>
          <div class="col-xs-9">
            reply.user,name<br>
            reply.comment
          </div>

          <!-- reply form -->

          <div class="reply_form">
            <%= form_for [@tweet, @reply] do |t|%>
              <div class="form-group">
                <%= t.text_area :comment, placeholder: "推你的回覆 ",  class: "form-control" %>
              </div>
              <div class="form-group">
                <%= t.submit "Reply", class: "pull-right btn btn-primary" %>
              </div>      
            <% end %>  
          </div>


          
        </div>
      </div>


  </div>
