<div class="row">
  <div class="col-md-3">
    <%= render partial: "shared/profile", locals: { user: @tweet.user } %>
  </div>
  <div class="col-md-8 col-md-offset-1">
    <div class="tweets col-md-12">
      <h2>Tweets</h2>
      <%= render partial: "shared/tweet", locals: { tweet: @tweet } %>
    </div>
    <div class="col-md-12">
      <h2>Replies</h2>
      <% @replies.each do |reply| %>
        <div class="tweet-item row">
          <%= render partial: "shared/reply", locals: { reply: reply } %>
        </div>
      <% end %>
    </div>
    <%= form_for [@tweet, @reply] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control text-area" %>
      </div>
      <div class="form-group pull-right">
        <%= f.submit "Reply", :disable_with => 'Replying...' , class: "btn btn-default my-btn"%>
      </div>
    <% end %>
  </div>
</div>