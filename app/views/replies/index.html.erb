<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render partial: "shared/userinfo", locals: {user: current_user} %>
    </div>
    <div class="col-md-8">
      <h1>Tweets</h1>
        <%= render partial: "shared/tweet", locals: {tweet: @tweet} %>
      <h1>Replies</h1>
      <% @replies.each do |reply| %>
      <div class="panel panel-default">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag(reply.user.avatar.url, height: 100, width: 100) %>
          </div>
          <div class="col-md-10">
            <h4><%= reply.user.name %> , <%= reply.created_at.to_time.to_s.split('+').first %></h4>
            <p><%= simple_format reply.comment %></p>
          </div>
        </div>
      </div>
      <% end %>
      <%= form_for [@tweet, @reply] do |f| %>
       <div class="form-group">
         <%= f.text_area :comment, maxlength: 140, class: "form-control" %>
       </div>
       <div class="form-group">
         <%= f.submit "Reply",class: "btn btn-primary" %>
       </div>
     <% end %>
     </div>
    </div>
  </div>
</div>
