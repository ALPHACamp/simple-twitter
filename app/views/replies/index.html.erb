<div class="container">
  <div class="col-md-3  col-sm-3">
    <br>
    <%= image_tag @tweet.user.avatar, width:'150px', class: "img-reponsive center-block " %>
    <div class="text-center">
      <h2><%= @tweet.user.name %></h2>
    </div>
    
    <h5><%= truncate(@tweet.user.introduction, length:90) %></h5>
    <h3>Tweets <%= @tweet.user.tweets_count %></h3>
    <h3>Following <%= @tweet.user.followings_count %></h3>
    <h3>Follower <%= @tweet.user.followers_count %></h3>
    <h3>Like <%= @tweet.user.likes_count %></h3>

    <% if @tweet.user != current_user %>
      <%= render partial: "shared/follow", locals: {user: @tweet.user} %>
    <% else %>
      <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %> 
    <% end %>
  </div>


  <div class="col-md-8 col-sm-8 col-md-offset-1 col-sm-offset-1">
    <h2>Tweets</h2>
    <div class="col-md-11 col-sm-11">
      <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-md-3 col-sm-3">
              <%= image_tag @tweet.user.avatar, width:'60px', class: "img-reponsive center-block " %>
            </div>
            
            <div class="col-md-9 col-sm-9">
              <%= @tweet.user.name %>, 

              <%= @tweet.created_at.to_date %>, 
              <%= @tweet.created_at.strftime("%H:%M") %>
              <br>

              <%= @tweet.description %>
              <br>

              <%= link_to tweet_replies_path(@tweet) do %>
                reply(<%= @tweet.replies_count %>)
              <% end %>
              &nbsp;
              like(<%= @tweet.likes_count %>)

            </div>

          </div>
        </div>
      </div>

      <h2>Replies</h2>
      <div class="col-md-11 col-sm-11">
        <% @tweet.replies.each do |reply| -%>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-md-3 col-sm-3">
                <%= image_tag reply.user.avatar, width:'60px', class: "img-reponsive center-block " %>
              </div>
              
              <div class="col-md-9 col-sm-9">
                <br>
                <%= @tweet.user.name %>, 

                <%= @tweet.created_at.to_date %>, 
                <%= @tweet.created_at.strftime("%H:%M") %>
                <br>

                <%= @tweet.description %>
                <br>
                <br>

              </div>
            </div>

          </div>
        <% end %>

        <%= form_for [@tweet, @replies] do |f| -%>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Reply",class: "btn btn-primary" %>
          </div>
          
        <% end %>
      </div>
    </div>

  </div>

</div>
