<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="col-md-12">
        <%= render 'shared/user_profile', user: @user %>
      </div>
    </div>
    <div class="col-md-9">
      <h2>Tweets</h2>
      <%= render 'shared/tweets', tweets: [@tweet]%>
      
      <h2>Replies</h2>
      <% @replies.each do |reply| %>
        <div class="col-md-12 border">
          <div class="col-md-3">
            <%= image_tag reply.user.avatar, class: "img-responsive center-block show-img" %>
          </div>
          <%= link_to reply.user.name, tweets_user_path(reply.user) %>,
          <%= time_ago_in_words(reply.created_at) %>
          <br>
          <%= reply.comment %>
        </div>
      <% end %>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Reply", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>