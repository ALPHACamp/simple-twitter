<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag(current_user.avatar.url, height: 100, width: 100) %>
      <h4><%= current_user.name %></h4>
      <p><%= current_user.introduction %></p>
    </div>
    <div class="col-md-8">
      <h1>Tweets</h1>
        <div class="panel panel-default">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag(@tweet.user.avatar.url, height: 100, width: 100) %>
            </div>
            <div class="col-md-10">
              <h4><%= @tweet.user.name %> , <%= @tweet.created_at.to_time.to_s.split('+').first %></h4>
              <p><%= simple_format @tweet.description %></p>
            </div>
          </div>
        </div>
      <h1>Replies</h1>
      <% @tweet.replies.each do |reply| %>
      <div class="panel panel-default">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag(reply.user.avatar.url, height: 100, width: 100) %>
          </div>
          <div class="col-md-10">
            <h4><%= reply.user.name %> , <%= reply.created_at.to_time.to_s.split('+').first %></h4>
            <p><%= simple_format reply.comment %></p>
          </div>
        </div>
      </div>
      <% end %>
      <%= form_for [@tweet, @reply] do |f| %>
       <div class="form-group">
         <%= f.text_area :comment, class: "form-control" %>
       </div>
       <div class="form-group">
         <%= f.submit "Reply",class: "btn btn-primary" %>
       </div>
     <% end %>
     </div>
    </div>
  </div>
</div>
