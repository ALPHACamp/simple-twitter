<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="col-md-12">
       <%= render 'shared/user_profile', user: @user %>
      </div>
    </div>
      <div class="col-md-9">
      <h2>Tweets</h2>
      <div class="col-md-12 border">
        <%= link_to @tweet.user.name, tweets_user_path(@tweet.user.id) %>
        <br>
        <%= @tweet.description %>
        <br>
        <%= render 'shared/reply_like', tweet: @tweet %>
      </div>
      
      <h2>Replying....</h2>
      <% @replies.each do |reply| %>
        <div class="col-md-12 border">
          <%= link_to reply.user.name, tweets_user_path(reply.user) %>,
          <%= reply.created_at %>
          <br>
          <%= reply.comment %>
        </div>
      <% end %>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Reply", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
