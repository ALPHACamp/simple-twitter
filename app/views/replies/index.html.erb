<div id="replies" class="container">
  <div class="col-md-3">
      <%= render partial: "shared/info", locals: { user: @tweet.user} %>
  </div>
  <div class="col-md-9">
    <h3 class="title">tweets</h3>
    <div class="tweet-msg">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag @tweet.user.avatar %>
        </div>
        <div class="col-md-10">
          <%= link_to "@#{@tweet.user.name},#{@tweet.created_at.to_s(:db)}", tweets_user_path(@tweet.user) %>
          <p><%= @tweet.description %></p>
          <%= link_to "Reply(#{@tweet.replies_count})", tweet_replies_path(@tweet) %>
          <%= render partial: "shared/like", locals: { t: @tweet} %>
        </div>
      </div>
    </div>
    <h3 class="title">replies</h3>
    <% @replies.each do |t| %>
      <div class="reply-msg">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag t.user.avatar %>
          </div>
          <div class="col-md-10">
            <%= link_to "@#{t.user.name},#{t.created_at.to_s(:db)}", tweets_user_path(t.user) %>
            <p><%= t.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="reply-form">
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control"%>
        </div>
        <div class="form-group button-group">
          <%= f.submit "Reply", class: "btn" %>
          <%= f.button "Cancel", type: :reset, class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
