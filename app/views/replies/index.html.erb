<div class="row">
  <div class="col-md-4">
    <%= render 'shared/user_stats', user: @user %>
  </div>
  <div class="col-md-8">
    <h3>Tweets</h3>
    <div class="tweets">
      <div class="tweet-info clearfix">
        <div class="col-sm-6 col-md-4">
          <%= image_tag @user.avatar, class: "img-responsive center-block", size: "130x120" %>
        </div>
        <div class="col-sm-6 col-md-8">
          <div class="info-item">
            <%= link_to tweets_user_path(@user) do %>
              <h3><%= @user.name %> , <%= @tweet.created_at %></h3>
            <% end %>
            <p><%= truncate(@tweet.description, length: 40){ link_to "continue", "#" } %></p>

              <% if current_user.like?(@tweet) %>
                <%= link_to "Unlike", unlike_tweet_path(@tweet), method: :post, class: "btn" %>
              <% else %>
                <%= link_to like_tweet_path(@tweet), method: :post, class: "btn" do %>
                  <p>Like(<%= @tweet.likes_count %>)</p>
                <% end %>
              <% end %>

              <%= link_to tweet_replies_path(@tweet, @tweet.replies), class: "btn" do %>
                <p>Relpy(<%= @tweet.replies_count %>)</p>
              <% end %>   

          </div>
        </div>
      </div>
    </div>

    <h3>Replies</h3>
    <div class="replies-block">
      <% @replies.each do |reply| %>
      <div class="tweet-info clearfix">
        <div class="col-sm-6 col-md-4">
          <%= image_tag reply.user.avatar, class: "img-responsive center-block", size: "130x120" %>
        </div>
        <div class="col-sm-6 col-md-8">
          <div class="info-item">
            <%= link_to tweets_user_path(reply.user) do %>
              <h3><%= reply.user.name %> , <%= reply.created_at %></h3>
            <% end %>
            <p><%= reply.comment %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div class="tweet-form">
      <%= form_for [@tweet, @reply] do |t| %>
      <div class="form-group">
        <%= t.text_area :comment, placeholder: "What's on your mind?", class: "form-control", size: "140x10", resize: "none" %>
      </div>
      <div class="action">
        <%= t.submit "Reply", class: "btn btn-default" %>
      </div>
      <% end %>
    </div>
  </div> 
</div>