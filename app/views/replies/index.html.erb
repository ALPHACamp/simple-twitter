<div class="container">
  
  <h1>Reply</h1>

  <div class="row">
    <%= render partial: "shared/user_data" %> 
    
    <div class="col-7">
      
      <h3>Tweet</h3>
      <%= render partial: "shared/tweet_view", locals: {tweet: @tweet} %>
      <h3>Replies</h3>
      
      <!-- 新增評論 -->
      <%= form_for [ @tweet, @reply ] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: "Reply...", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
 
  </div>
  
</div>