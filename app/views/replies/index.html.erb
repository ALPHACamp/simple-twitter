<div class="row justify-content-center mt-5">
  <div class="col-sm-3 col-12">
    <%= render 'shared/user_profile' %>
  </div>
  <div class="col-sm-9 col-12">
    <h3>Tweet</h3>
    <%= render partial: "shared/tweet_card", locals: {tweet: @tweet} %>

    <div class="mt-5"></div>

    <h3>Replies</h3>
    <div id="replies-list">
      <% @replies.each do |reply| %>
        <div class="card mt-3">
          <div class="card-body">
            <div class="float-left w-25 pr-3 text-center">
              <% if reply.user.avatar? %>
                <%= image_tag reply.user.avatar, width: '100px', class: "img-fluid" %>
              <% else %>
                <img src="data:image/svg+xml;base64," width="100" height="100" class="img-fluid" >
              <% end %>
            </div>
            <div class="float-right w-75">
              <h5 class="card-title">
                <%= link_to tweets_user_path(reply.user.id) do%>
                  @<%= reply.user.name %>, <%= reply.created_at.strftime("%Y-%m-%d, %H:%M") %>
                <% end %>
              </h5>
              <p class="card-text"><%= reply.comment %></p>
            </div>
          </div>
        </div>
      <% end %>
   </div>

  <div class="mt-5"></div>

   <div id="reply-form">
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control", rows: 5 %>
        </div>
        <div class="text-right">
          <%= f.submit "Reply", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
