<h1>Tweet Reply</h1>

<!-- user profile -->

<!-- tweets -->
<h3>Tweets</h3>
<%= render partial: "shared/tweets", locals: { tweet: @tweet } %>

<!-- created replies -->
<h3>Replies</h3>
<ul>
  <% @replies.each do |reply| %>
    <li><%= image_tag reply.user.avatar, width:"100px" %></li>
    <li><%= link_to reply.user.name, tweets_user_path(reply.user) %></li>
    <li><%= reply.created_at %></li>
    <li><%= reply.comment %></li>
  <% end %>
</ul>


<!-- replies form -->
<%= form_for [@tweet, @reply] do |f| %>
  <%= f.text_area :comment %>
  <%= f.submit "Reply" %>
<% end %>
