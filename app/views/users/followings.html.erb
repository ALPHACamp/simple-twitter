<div class="container">
  <div class="row">

    <div class="col-md-4">
      <%= render partial: "shared/user", locals: {user: @user} %>
      <%= render partial: "shared/follow", locals: {user: @user} %>
    </div>


    <div class="col-md-8">
      <h3>Following</h3>
      
      <% @followings.each do |following| %>
        <div class="col-md-6">
          <%= render partial: "shared/user-item", locals: {user: following} %>
        </div>
      <% end %>
      
    </div><!-- col-md-8 -->

  </div>
</div>