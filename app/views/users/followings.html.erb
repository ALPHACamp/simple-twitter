<div class="container">
  <div class="row">
    <%= render partial: "shared/intro", locals: {user: @user} %>
    <div class="col-xs-12 col-md-9">
      <h3>Following</h3>
      <% @followings.each do |following| %>
        <div class="col-xs-12 col-md-6">
          <div class="media tweet-box">
            <div class="media-left">
              <%= image_tag following.avatar if following.avatar?%>
                <%= image_tag "http://via.placeholder.com/60x60" unless following.avatar?%>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to following.name, tweets_user_path(following) %>
              </h4>
              <p><%= truncate(following.introduction, length: 140) %></p>
              <%= render partial: "shared/follow", locals: {user: following} %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>