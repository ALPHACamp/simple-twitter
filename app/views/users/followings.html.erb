<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.avatar, class: "avatar-styled" %>
      <h2><%= @user.name %></h2>
      <p><%= @user.introduction %></p>
      <h2><%= link_to "Tweet  #{@user.tweets_count}", tweets_user_path(@user) %></h2>
      <h2><%= link_to "Following  #{@user.followings.count}", followings_user_path(@user) %></h2>
      <h2>Follower</h2>
      <h2>Like</h2>
      <hr>
      <% if @user == current_user %>
        <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
      <% else %>
        <% if current_user.following?(@user)%>
          <%= link_to 'Unfollow', followship_path(@user), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'Follow', followships_path(following_id: @user), method: :post, class: "btn btn-primary" %>
        <% end %>
      <% end %>  
    </div>
    <div class="col-md-9">
      <h2>Following</h2>
      <div class="col-md-12">
        <% @followings.each do |f| %>
        <div class="col-md-6">
          <div class="col-md-12">
            <div class="tweets-items row">
              <div class="col-md-4">
                <%= image_tag f.avatar, class: "avatar-styled" if f.avatar? %>
              </div>
              <div class="col-md-8">
                <%= link_to "@#{f.name}", tweets_user_path(f) %>
                <p><%= f.introduction %></p>
                <div class="btn-right">
                  <% if current_user.following?(f)%>
                    <%= link_to 'Unfollow', followship_path(f), method: :delete, class: "btn btn-primary" %>
                  <% else %>
                    <%= link_to 'Follow', followships_path(following_id: f), method: :post, class: "btn btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>