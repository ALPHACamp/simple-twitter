<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <%= render partial: "shared/userProfile", locals: {user: @user} %>  
    </div>
    <div class="col-md-8 row">
      <% @followings.each do |following| %>                        
        <div class="col-md-5 col-md-offset-1 well row" style="height: 100%"> 
          <div class="col-md-4">
            <%= image_tag(following.following.avatar, :class => 'img-resposive', :width => '100%') %>                
          </div>                    
          <div class="col-md-8">
            <p><%= link_to following.following.name, tweets_user_path(following.following.id) %></p>
            <p>
              <%= truncate(following.following.introduction, length: 30) %>
            </p>              
          </div>
           <%= render partial: "shared/follow", locals: {user: following.following} %>   
        </div>   
      <% end %>
  
    </div>
    
  </div>
</div>