<div class="container">
  <div class="row">
    <%= render :partial => "shared/userColunm" %>
    <h1> Following</h1>
    <div class="col-md-8 followings">

      <% @followings.each do |following| %>
      <div class="panel panel-default clearfix col-md-5 followingsColumn">
        <%= following.name %> <br>
        <%= following.introduction.truncate(100) %> <br>
        <div class="popularBtn ">
          <%= render partial: "shared/follow", locals: {user: following} %>
        </div>      
      </div>
      <% end %> 
      
    </div>
    
    
  </div>
  
</div>