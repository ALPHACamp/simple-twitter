 <!--content-->
  <div class="container-fluid">
  <div class="row">
  <div > 
<!--person info-->
<div class=" col-md-2 col-lg-2 container">
  <div class="row">
    <% @users = current_user%>
    <div id="profile-pic" >
              <%= image_tag @users.avatar ,class:" img-responsive "%>
    </div>
      <div class="form-group">
         
            <div>
              <h4><%=@users.name%></h4>
              <div class="help-block"><%= @users.introduction %></div> 
              <div>
               <%= link_to "Tweets : #{@users.tweets.count}" , tweets_user_path(@users),class:"help-block"%>
              <div class="help-block">Following : <%= @users.followings.count%></div> 
              <div class="help-block">Follower :<%= @users.followers_count%></div> 
              <%= link_to "likes : #{@users.likes_count}" , likes_user_path(@users),class:"navbar-brand"%> 
              </div>
              <div>
   <%= link_to "Edit Profile" , edit_user_path(current_user),class:"btn btn-primary"%>  
             </div>
            </div>
        
      </div> 
  </div>
</div>

<!--followings tweets-->
   <div class="col-sm-8 col-md-8 col-lg-8 container">
  
      <h3>following</h3>
        <div class="row">


  <% @followings.each do |following| %>
    <div class= "col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class=" tweets-item">
  
    <div id="user-pic" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <%= image_tag following.avatar ,class:"img-circle img-responsive img-profile"%>
    </div>
    
    <div>
    <h4><%= "@#{following.name}" %></h4>
      <p><%= truncate(following.introduction, length: 300)%></p>
    
    </div>
 <%= render partial: "shared/follow", locals: {users: following}%>
  </div>

</div>
  <% end %>
    </div>   

 </div>


 </div></div></div>