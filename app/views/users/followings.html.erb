<div class="show-user-profile-page">
  <div class="user-profile">
    <%= render partial: "shared/profile", locals: { user: @user } %>
  </div>

  <div>
    <h3>Following</h3>
    <div class="user-follow-page">
      <% @followships.each do |followship| %>
        <%= render partial: "shared/users", locals: { user: followship.following } %>
      <% end %>
    </div>
  </div>
</div>
