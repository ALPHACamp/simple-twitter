<div class="container">
  <div class="col-md-3  col-sm-3">
    <br>
    <%= image_tag @user.avatar, width:'150px', class: "img-reponsive center-block " %>
    <div class="text-center">
      <h2><%= @user.name %></h2>
    </div>
    
    <h5><%= truncate(@user.introduction, length:90) %></h5>
    <%= link_to tweets_user_path(@user) do %>
      <h3>Tweets <%= @user.tweets_count %></h3>
    <% end %>

    <%= link_to followings_user_path(@user) do %>
      <h3>Following <%= @user.followings_count %></h3>
    <% end %>

    <%= link_to followers_user_path(@user) do %>
      <h3>Follower <%= @user.followers_count %></h3>
    <% end %>

    <%= link_to likes_user_path(@user) do %>
      <h3>Like <%= @user.likes_count %></h3>
    <% end %>

    <% if @user != current_user %>
      <%= render partial: "shared/follow", locals: {user: @user} %>
    <% else %>
      <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %> 
    <% end %>
  </div>


  <div class="col-md-9 col-sm-9">
    <h2>Following</h2>
    
      <% @folloings.each do |following| -%>
        <div class="col-md-6 col-sm-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-md-3 col-sm-3">
                <%= image_tag following.avatar, width:'40px', class: "img-reponsive center-block " %>
              </div>
            
              <div class="col-md-9 col-sm-9">
                <%= following.name %>
                <br> 

                <%= truncate(following.introduction, length:40)%>
                <br>

                <%= render partial: "shared/follow", locals: {user: following} %> 

              </div>
            </div>

          </div>
        </div>
      <% end %>
      

    </div>
  </div>
</div>
