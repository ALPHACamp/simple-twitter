<!-- user's followings -->
<div class="container">
  <div class="row">
    <div class="col-xs-2">
      

      <%= render partial: "shared/user_section", locals: {user: @user} %>
    </div>

    <div class="col-xs-9 col-xs-offset-1">
        <h3>Following</h3>
      <div class="row">        
        <% @followings.each do |user| %>
          <div class="col-xs-6">
            <%= render partial: "shared/user_list", locals: {user: user} %>
          </div>
        <% end %>
      </div>       
    </div>
  </div>
</div>