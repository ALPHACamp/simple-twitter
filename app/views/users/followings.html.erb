<div class="container">
	<div class="row">
		
		<!-- 以下是會顯示該為使用者的名字及描述 -->
		<div class="col-xs-3">
			<%= render partial: "shared/user", locals: {user: @user} %>
		</div>

		<!-- 以下是會顯示該使用者的關注清單 -->
		<div class="col-xs-9">
			<h1 class="fo">Following</h1>
			<% @followings.each do |user| %>
				<div class="col-xs-6">
					<%= render partial: "shared/follow", locals: {user: user} %>
				</div>
			<% end %>
		</div>

	</div>
</div>