<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render partial: "shared/user_data", locals: {user_object: @user} %>
    </div>
    <!-- 顯示 following user 資料 -->
    <div class="col-md-8">
      <div class="row">
        <% @followings.each do |follow_user| %>
          <div class="col-6">
            <div class="border follow_user_content">
              <div class="row">
                <div class="col-4">
                  <%= image_tag "https://picsum.photos/90/90/?random", class: "text-center" %>
                </div>

                <div class="col-8">
                  <%= link_to "#{follow_user.name}", tweets_user_path(follow_user.id) %>
                  <%= simple_format follow_user.introduction %>
                  <div class="float-right">
                    <%= render partial: "shared/follow_button", locals: { follow_object: follow_user } %>
                  </div>

                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>