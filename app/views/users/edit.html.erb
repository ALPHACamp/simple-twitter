
<% if @user.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<br>
<br>
<div class="container">
  <div class="row">
    <%= form_for @user do |f|%>
      <div class="col-md-4 user-edit-image">
        <%= image_tag  @user.avatar if@user.avatar? %>
        <% unless @user.avatar? %>
          <h2>Avator</h2>
        <% end %>
        <br>
        <%= f.file_field :avatar %>
      </div>

      <div class="col-sm-10 col-md-8 col-md-offset-0">
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <% if @user.introduction? %>
            <%= f.text_area :introduction, class: "form-control",  size: "30x10" %>
          <% else %>
            <%= f.text_area :introduction, value: "Type anything about you here......", class: "form-control",  size: "30x10" %>
          <% end %>
        </div>

        <div class="col-md-2 col-xs-offset-10 col-sm-offset-10 col-md-offset-10">
          <div class="form-group">
            <%= f.submit  "Update", class: "btn btn-primary "%>
          <div>
        </div>
      <div>
    <% end %>
  </div>
</div>


  
