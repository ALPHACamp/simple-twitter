<div class="container">
  <div class= "avatar">
    <%= form_for @user do |f| %>
      <div >
        <%= f.label :avatar, "大頭照" %>
        <%= image_tag @user.avatar if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.submit "更新照片", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="avatar_row">
    <div class="col-md-6 col-md-offset-3">

      <h3>Edit Profile</h3>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自我介紹" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>
      <% end %>

    </div>

  </div>
</div>