<div class="container">
  <div class="col-md-10 col-md-offset-1">
    
    <%= form_for @user do |f| %>

      <div class="col-md-4 personal-info">
        <div class="form-group">
          <%= f.label :avatar, "Upload your photo", class: "edit-title" %><br><br>
          <%= image_tag @user.avatar, id: "edit-avatar" if @user.avatar? %><br><br>
          <%= f.file_field :avatar %>
        </div>
      </div>    

      <br><br>

      <div class="col-md-8 tweet-reply">
        <div class="form-group">
          <%= f.label :name, "Name", class: "edit-title" %>
          <%= f.text_field :name, class: "form-control", id: "edit-name" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "Introduction", class: "edit-title" %>
          <% if @user.introduction? %>
            <%= f.text_area :introduction, class: "form-control", id: "edit-intro" %>
          <% else %>
            <%= f.text_area :introduction, placeholder: "Type anything about you here....", class: "form-control", id: "edit-intro" %>
          <% end %>          
        </div>

        <div class="form-group" style="float: right">
          <%= link_to 'Cancel', tweets_user_path(@user), class: "btn btn-default" %>
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  
  </div>
</div>