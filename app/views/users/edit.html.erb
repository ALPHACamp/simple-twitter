<div class="container">
  <div class="row">
    
    <h2>Edit Profile</h2>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "關於我" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "個人照上傳" %>
        <%= image_tag @user.avatar.url, width: '150px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
      </div>

    <% end %>

  </div>
</div>