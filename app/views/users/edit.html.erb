<div class="container">
  <h1>修改個人資料</h1>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "自我介紹" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "大頭貼" %>
      <!-- 先保留，最後再弄，要換 GEM -->
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Cancel", tweets_user_path(@user.id), class: "btn btn-light" %>
    </div>

  <% end %>
</div>
