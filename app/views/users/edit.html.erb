<!-- user profile&avatar end -->

<div class="row justify-content-center mt-5">
<div class="col-md-10">
    <%= form_for(@user) do |f| %>
    <div class="form-row">
      <div class="col-md-4">
        <div class="form-group">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar,  width: '200px' ,class: "img-thumbnail img-fluid mb-3" %>
          <% else %>
            <i class="fas fa-user fa-7x img-thumbnail  mb-3" ></i>
          <% end %>
          <%= f.file_field :avatar ,class: "form-control-file"  %>
        </div>
      </div>

      <!-- user profile&avatar end -->
      <div class="col-md-8">
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control", rows: 8%>
        </div>
        <p class="text-right"><%= f.submit "更新",class: "btn btn-primary" %></p>
      </div>
    </div>
    <% end %>
</div>
</div>