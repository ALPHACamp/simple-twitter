<div class="container">

  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>    
  <% end %>

  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :avatar, "大頭貼" %>
      <%= image_tag @user.avatar if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, placeholder: "名字" ,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "自我介紹" %>
      <%= f.text_area :introduction, placeholder: "自我介紹" ,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>