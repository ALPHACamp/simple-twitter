<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">



    <h2> Edit Profile </h2>
    <tr>
    <%= form_for [@user] do |f| %>
      <div class="form-group">
        <%= f.label :user_name, "User Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :introduction, "About you" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :avatar, "Avatar" %>
        <%= image_tag @user.avatar if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", tweets_user_path(@user), class: "btn btn-default" %>
      </div>
    <% end %>

   </div>
  </div>
</div>
