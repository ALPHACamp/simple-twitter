<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="col-md-4">
        <div class="form-group user-tweet-item col-md-12">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar, class: "img-rounded"  %>
            <% else %>
            <%= image_tag "fallback/avatar.png", class: " img-rounded" %>
          <% end %>
        </div>
        <div class="form-group user-tweet-item col-md-12">
          <%= f.label :avatar, "Browse files..", class: "btn btn-primary" %>
        </div>         
      </div>
      <div class="col-md-8">        
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "自我介紹" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update", class: "btn btn-primary" %>
            <%= link_to "Cancel", root_path, class: "btn btn-default" %>
          </div>

      
      </div>
    <% end %>
  </div>
</div>
