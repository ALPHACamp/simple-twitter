<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <%= image_tag "http://via.placeholder.com/350x350", class: "img-responsive img-rounded"  unless @user.avatar?%>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= image_tag @user.avatar ,width: '300px 'if @user.avatar? %>
        <%= f.file_field :avatar, class: 'edit_user'%>
      </div>

    </div>
  
    <div class="col-xs-12 col-md-8">

      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class:"form-control form-style", placeholder:"Name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, 'Introduction' %>
        <%= f.text_area :introduction, class: "form-control form-style", placeholder:"Type anything about you here...", style: 'height: 250px' %>
      </div>

      <div class="form-group">
        <%= f.submit "Update" , class: "btn button-tweet navbar-right "  %>
      </div>
      <% end %>
    </div>
  </div>
</div>