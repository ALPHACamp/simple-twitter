<div class="container text-center">
  <!-- 使用者只能進入自己的profile編輯頁面 -->
  <% if current_user == @user %>
    <h2>修改個人資料</h2>
    <hr>
    
    <!-- form /start -->
    <div>
      <%= form_for @user do |f| %>
        
        <form class="form-group" role="form">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
          </div>

          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
          </div>

          <div class="field">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: "form-control", placeholder: "Enter Introduction", rows: "8" %>
          </div>

          <div class="field">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "更新個人資料", class: "btn btn-primary" %>
          </div>
        </form>
      <% end %>
    </div>
    <!-- form /end -->

  <% end %>
</div>