<div class="container">
  <div class="row">
    
    <h2>Edit Profile</h2>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "關於我" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>