<div class="container">
  <div class="row">
    
      <%= form_for @user do |f| %>
        <div class="col-xs-4 center">
            <img src="http://via.placeholder.com/50x50" class="img-circle big-img ">
            <br>
            <br>
          
            <%= f.file_field :avatar, title: "Please choose file", class: "file-picker" %>
        
        </div>
      
        
        <div class="col-xs-8">
          <form class="form-horizontal">
            <div class="form-group">
              <%= f.text_field :name, class: "form-control" %>
            </div>
              
            <div class="form-group">
              <%= f.text_area :introduction, rows: 7, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit %>
            </div>
          </form>
        </div>
      <% end %>
    </div>
  </div>
