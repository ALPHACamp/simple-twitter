<div class="container">
  <div class="row">
    
    <div class="col-md-6 col-offset-3">

      <h3>Edit Profile</h3>

      <%= form_for @user, :url => user_path(@user), :method => :patch do |f| %>

        <div class="form-group">
          <%= f.label :name, "Name"%>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "Intro" %>
          <%= f.text_field :introduction, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "Headshot"%>
          <%= image_tag @user.avatar if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary"%>
          <%= link_to "Cancel", tweets_user_path(@user), class: "btn btn-default"%>
        </div>
      <% end %>
    
    </div>

  </div>
</div>