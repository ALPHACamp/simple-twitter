<div class="container">

<%= form_for :user do |f| %>
  <div class="col-md-4">
    <%= f.label :avatar, "Photo" %><br>
    <%= image_tag @user.avatar,class: 'pre-img' %> <br>
    <%= f.file_field :avatar %>    
  </div>
  <div class="col-md-8">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction,rows: 8 %>
    <%= f.submit %>
  </div>
  <% end %>
</div>
