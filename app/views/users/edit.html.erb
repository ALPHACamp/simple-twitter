<div class='container'>
  <div class='row'>
    <%= form_for(@user) do |f| %>
      <div class='col-md-3'>
        <%= image_tag @user.avatar, class: "img-responsive center-block show-img" %>
        <%= f.label :avatar, "更換大頭照" %>
        <%= f.file_field :avatar %>
      </div>
      <div class='col-md-9'>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>