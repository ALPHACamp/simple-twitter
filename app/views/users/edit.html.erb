<div class="container">

  <%= simple_form_for @user do |f|%>
    <%= image_tag @user.avatar %>
    <%= f.input :avatar,as: :file, label:'大頭照' ,input_html:{class: ''}%>
    <%= f.input :name,label:'名字', input_html:{class: 'form-control'} %>
    <%= f.input :introduction,label:'關於我',input_html:{class: 'form-control'}%>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <%end%>

</div>