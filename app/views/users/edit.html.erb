<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="col-sm-6">
        <div class="form-group">
          <%= image_tag @user.avatar if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction,rows: 6, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Cancel", tweets_user_path(@user), class: "btn btn-default" %>
        </div>
    <% end %>
    </div>
  </div>
</div>
