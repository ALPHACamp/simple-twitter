<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @user do |f| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail ">
          <%= image_tag @user.avatar if @user.avatar? %>
        </div>
        <%= f.file_field :avatar %>
      </div>

      <div class="useredit-left-item col-sm-6 col-md-8">
        <p><%= f.label :name,"名字" %></p>
        <%= f.text_field :name ,class:"form-control"%>

        <p><%= f.label :introduction,"關於我的介紹" %></p>
        <%= f.text_area :introduction,class:"form-control",rows:"7"   %>

        <%= f.submit "Update",class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

 
 