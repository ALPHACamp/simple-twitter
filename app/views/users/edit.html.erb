<div class="container">
  <%= form_for @user do |f| %>
    <div id="edit-form">
      <div id="edit-avatar" class="form-group">
        <div class="avatar-lg">
          <%= image_tag (@user.avatar) if @user.avatar? %>
        </div>
          <%= f.file_field :avata, class: "form-control-file" %>
      </div>
      <div id="edit-info">
        <div class="form-group">
          <%= f.text_field :name, maxlength: "10", placeholder: "Name", class: "tweet-form-textarea form-control" %>
          <% if @user.errors.present? %>
            <span style="color: red" ><%= @user.errors.full_messages.to_sentence %></span>
          <% end %>   
        </div>
        
        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "Introduce yorself...", rows:"4", maxlength: "150", class: "tweet-form-textarea form-control" %> 
        </div>

        <%= link_to tweets_user_path(@user) do %>
          <butto class="btn btn-danger">Cancel</button>
        <% end %>
        <%= f.submit 'Update', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>