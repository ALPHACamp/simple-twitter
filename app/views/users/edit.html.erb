<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
      <h4>We have some errors here !</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <hr>
    <% end %>
<!-- 表單 -->
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "Avatar" %>
        <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>