<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="col-md-3">
        <div class="form-group">
        <%= image_tag @user.avatar, class: "avatar-styled" if @user.avatar? %>   
        <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "Type anything about you here", class: "form-control", rows: "10" %>
        </div>
        <div class="btn-right">
          <%= f.submit 'Update', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>