<h1>Profile</h1>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= image_tag @user.avatar, size: "100" if @user.avatar? %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <div class="form-group">
<%= f.text_area :introduction, placeholder: "Type anything about you here.." %>
  </div>
  <div class="form-group">
    <%= f.submit "Update", :disable_with => 'Submiting...' %>
  </div>
<% end %>