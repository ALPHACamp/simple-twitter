<% if @user.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h1>Profile</h1>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "Introduction" %>
    <%= f.text_field :introduction %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, "Avatar" %>
    <%= f.text_field :avatar %>
  </div>

<%= f.submit %>
<% end %>
