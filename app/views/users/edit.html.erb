<% if @user.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
   <div class="row">
     <%= form_for @user do |f| %>
     <div class="col-md-4">
      <div class="form-group">
        <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="col-md-8">
      <div clss="well">
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction %>
        </div>
      </div>
    </div>

<%= f.submit %>
<% end %>
</div>
