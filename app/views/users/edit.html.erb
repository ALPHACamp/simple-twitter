<div class="row justify-content-center mt-5">
<div class="col-md-10 col-12">
    <%= form_for(@user) do |f| %>
    <div class="form-row">
      <div class="col-md-4">
        <div class="form-group">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar, width: '250px' ,class: "img-thumbnail mb-3" %>
          <% else %>
            <img src="data:image/svg+xml;base64," width="200" height="200" class="img-thumbnail mb-3" >
          <% end %>
          <%= f.file_field :avatar, class: "form-control-file"  %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control", rows: 8 %>
        </div>
        <p class="text-right"><%= f.submit class: "btn btn-primary" %></p>
      </div>
    </div>
    <% end %>
</div>
</div>
