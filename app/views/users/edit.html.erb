<%= form_for current_user do |f| %>
  <div class="edit-user">
    <div class="avatar">
      <%= filestack_image @user.avatar, transform: filestack_transform.resize(width:100, height:100), class: "img" %>
    </div>
    <div class="upload">
      <div class="default">
        <%= f.filestack_field :avatar, 'Upload Your Avatar!',  pickerOptions: { accept: 'image/*'}, id: 'unique-id', class:"filed" %>
      </div>
      <button class="btn btn-primary btn-block btn-lg" >
        Browse file..
      </button>
    </div>
  </div>
  <div class="edit-context">
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, :autofocus => true, autocomplete: "name", class: "input-name" %>
    </div>
    <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, class: "input-intro" %>
    </div>
    <div class="actions button">
      <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>