<div class="container">
  <div class="row align-items-start">
    <%= form_for [@user] do |user| %>
    <div class="col-md-12">
      <h2>Edit Your Profile</h2>
    </div>
    <div class="col-md-12">
      <div class="form_group">
        <%= user.label :name, "Name"%>
        <%= user.text_field :name, class: "form-control" %>
        <br>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form_group">
        <%= user.label :introduction, "Introduction"%>
        <%= user.text_area :introduction, class: "form-control" %>
        <br>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group">
            <%= user.label :avatar, "Avatar" %>
            <br>
            <%= image_tag @user.avatar, width: '350px' if @user.avatar? %>
            <%= user.file_field :avatar, class: "form-control-file" %>
          </div>
      </div>
      <div class="col-md-12">
          <div class="form-group">
            <%= user.submit class: "btn btn-primary" %>
          </div>
      </div>
  
    <%end%>
  </div>
</div> 