<h1>Edit user</h1>
<%= form_for current_user do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :autofocus => true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>