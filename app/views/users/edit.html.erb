<div class="row">
  <%= form_for @user do |f| %>
    <div class="col-xs-4">
      <div class="form-group">
        <%= f.label :avatar, "Browse file...", class: "btn btn-primary" %>
        <% image_tag @user.avatar if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="col-xs-7">
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control text-field" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, placeholder: "Type anything about you here....", class: "form-control text-area" %>
      </div>
       <div class="button-group">
        <%= f.submit "Update", class: "btn btn-primary "%>
        <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>