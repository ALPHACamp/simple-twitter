<div class="container">
  <div class="row">

    <div class="col-md-9 col-md-offset-1">
      <%= form_for @user do |f| %>
        <div class="col-md-4">
          <div class="user-avatar">
            <% if @user.avatar? %>
              <%= image_tag @user.avatar  %>
            <% else %>
              <img src="http://via.placeholder.com/350x350" class="img-responsive img-rounded">
            <% end %>
          </div>
          <div class="form-group">
            <div class="btn-uploder">
              <%= f.file_field :avatar  %>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
            <%= f.text_area :introduction, placeholder: "Type anything about you here...", class: "form-control", rows: "10" %>
            <div class="text-right">
              <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
