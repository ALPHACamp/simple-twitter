<%=  form_for @user do |f| %>
  <div class="form-group proeditimg">
    <%= image_tag @user.avatar , style:"width:300px;height:300px;display: block;" if @user.avatar?  %>
    <%= f.label :avatar, "大頭照上傳" %>
    <%= f.file_field :avatar%>
  </div>
  
  <div class="field proedit">
    <%= f.text_field :name,class:"form-control",placeholder:"Name"%>
    <%= f.text_area :introduction ,class:"form-control",rows:"6",placeholder:"Type anything about you here...." %><br>
    <%= f.submit value:"Updata",class:"btn btn-primary" %>
  </div>
<% end %>
