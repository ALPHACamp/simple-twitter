<div class="container">
  <%= form_for @user do |f| %>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :avatar, "Photo" %>
      <%= image_tag @user.avatar,width: '300px' if @user.avatar? %>
      <%= f.file_field :avatar ,class: "form-control"%>
    </div>
  </div>

  <div class="col-md-8">
    <div class="form-group">
      <%= f.text_field :name ,placeholder: "Name" , class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.text_area :introduction, placeholder: "Type anything about you here...", rows: "5",class: "form-control" %>
    </div>
    <div class="text-right">
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>  
    </div>            
  </div>
  <% end %>
</div>