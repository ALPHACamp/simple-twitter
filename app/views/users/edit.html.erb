<h1>Profile</h1>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "Introduction" %><br />
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= image_tag @user.avatar, size: '150x150' %>
    <%= f.label :avatar, "Avatar" %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="form-group">
    <%= f.submit "Update" %>
  </div>
<% end %>
