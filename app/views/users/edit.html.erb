<div class="container">
  <%= form_for @user do |f| %>
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :avatar, "Avatar" %>
        <%= image_tag @user.avatar, width: '200px', height: '200px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, class: "form-control", placeholder: "Introduction" %>
      </div>
      <%= f.button "Update", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
