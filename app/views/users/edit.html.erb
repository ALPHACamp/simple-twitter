<div class="container">
  <div class="row">
    <h1>/users/:id/edit</h1>
  </div>
  <div class="row">
  <!-- row start -->
    <%= form_for @user do |f| %>
      <!-- Left -->
      <div class="col-xl-5 col-lg-5 col-sm-5 col-md-6">
        <div class="form-group">
          <%= image_tag @user.avatar.url, width: '400px', class: "img-responsive" %>
          <%= f.file_field :avatar %>
        </div>
      </div>
      <!-- Left END-->
      <!-- Right -->
      <div class="col-xl-7 col-lg-7 col-sm-7 col-md-6">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :introduction, placeholder: "Type anyything about you here...", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit %>
        </div>
      </div>
      <!-- Right END -->
    <% end %>
  <!-- row end -->
  </div>
</div>