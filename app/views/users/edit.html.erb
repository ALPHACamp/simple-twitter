<!-- user's edit page -->

<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>

      <div class="col-xs-3">
        <div class="form-group">
          <%= image_tag @user.avatar, class: "img-responsive center-block img-rounded" if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
        
      </div>

      <div class="col-xs-9">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control tweet-form" %>
        </div>

        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "Type anything about you here...", class: "form-control tweet-form", rows: "5" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary tweet-btn" %>
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>