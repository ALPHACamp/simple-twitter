<div class="container">
<div class="form form-box user-edit">
  <!--表單-->
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
      <% if @user.errors.present? %>
        <p class="error"><%= @user.errors.full_messages.to_sentence %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "Introduction" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "Photo" %>
      <% for img_id in 0..26 %>
          <% if image_path(@user.avatar).include?('/user'+img_id.to_s+'.jpg') %>
            <%= image_tag('/avatar/user'+img_id.to_s+'.jpg', class: "user-avatar") %>
          <% end %>
        <% end %>
      <%= f.file_field :avatar %>
    </div>

    <%= link_to 'Back', root_path, class: "btn btn-default btn-next" %>
    <%= f.submit class: "btn btn-default"%>
  <% end %>
</div>
</div>