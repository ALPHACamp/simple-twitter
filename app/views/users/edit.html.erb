<div class="container">
  <div class="row">
    <h1>/users/:id/edit</h1>
  </div>
  <div class="row">
  <!-- row start -->
    <%= form_for @user do |f| %>
      <!-- Left -->
      <div class="col-xl-4 col-lg-4 col-sm-6 col-md-6 user-edit-left">
        <div class="form-group">
          <%= image_tag @user.avatar.url, width: '300px', class: "img-responsive user-edit-avatar" %>
          <%= f.file_field :avatar, class: "btn btn-default"%>
        </div>
      </div>
      <!-- Left END-->
      <!-- Right -->
      <div class="col-xl-8 col-lg-8 col-sm-6 col-md-6">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "Type anyything about you here...", rows: "15", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-default pull-right" %>
        </div>
      </div>
      <!-- Right END -->
    <% end %>
  <!-- row end -->
  </div>
</div>