<div class="container">
  <div class="form form-box">
    <!--表單-->
    <%= form_for @user do |f| %>
      <div class="form-group user-profile">
        <% for img_id in 0..26 %>
          <% if image_path(@user.avatar).include?('/user'+img_id.to_s+'.jpg') %>
            <%= image_tag('/avatar/user'+img_id.to_s+'.jpg', class: "profile-avatar") %>
          <% end %>
        <% end %>
        <%= f.file_field :avatar %>
      </div>

      <div class="user-tweet">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
          <% if @user.errors.present? %>
            <p class="error"><%= @user.errors.full_messages.to_sentence %></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.text_area :introduction, placeholder: "Type anything about you here...", size: "1x6", class: "form-control" %>
        </div>

        <%= link_to 'Cancel', root_path, class: "btn btn-default btn-next" %>
        <%= f.submit class: "btn btn-default"%>
      </div>
    <% end %>
  </div>
</div>