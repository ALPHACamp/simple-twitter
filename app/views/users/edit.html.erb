<div class="container">
  <%= form_for @user do |f| %>
    <div class="col-md-3">
      <div class="form-group">
        <%= image_tag @user.avatar, width: '200px', height: '200px' if @user.avatar? %>
        <%= f.file_field :avatar, class: "btn" %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, class: "form-control", placeholder: "Introduction", rows: "5" %>
      </div>
      <div class="button">
        <%= f.button "Update", class: "btn btn-primary" %>
      </div>      
    </div>

  <% end %>
</div>
