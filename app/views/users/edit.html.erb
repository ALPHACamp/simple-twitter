<div class="container">
 <div class="row">
  <%= form_for @user do |f| %>
    <div class="col-md-4">    
      <div class="form-group">        
        <%= image_tag(@user.avatar, :class => 'img-responsive', :style => 'max-width: 200px') if @user.avatar? %>         
        <br>
        <%= f.label :avatar, "大頭照上傳" %>
        <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="form-group">
         <%= f.label :name, "Name" %>
         <%= f.text_field :name, class: "form-control" %>
       </div>
       <div class="form-group">
         <%= f.label :introduction, "自我介紹" %>
         <%= f.text_area :introduction, class: "form-control", rows: 5, style: 'resize: none'%>
       </div>
       <div class="form-group">
         <%= f.submit "Update", class: "btn btn-primary pull-right" %>         
       </div>  
    </div>          
  <% end %>
 </div>
</div>