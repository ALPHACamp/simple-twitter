<div class= "container">
  <% if @user.errors.any? %>
    <h4 class="text-danger">We have some errors here!</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="text-danger"><%= msg %></li> 
      <% end %>
    </ul>
  <% end %>
</div>


<div class= "container">
  <%= form_for @user do |f| %>
    <div class="col-md-4">
      <div class="form-group">
        <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, placeholder: "Type anything about you here...", class: "form-control" %>
      </div>
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
    </div>
  <% end %>
</div>