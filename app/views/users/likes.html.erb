<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <div>
        <%= image_tag @user.avatar ,class:"img-responsive img-rounded" if @user.avatar?%>
         <%= image_tag "http://via.placeholder.com/250x250", class: "img-responsive img-rounded"  unless @user.avatar?%>
      </div>
      <h2><%= @user.name %></h2>
      <div><%= simple_format @user.introduction %></div>
      <h4><strong>Tweets  &nbsp;<%= @user.tweets.count %></strong></h4>
      <%= link_to "Edit Profile", edit_user_path(@user) , class:'btn button-style' %>
    </div>

    <h3>Likes</h3>
    <div class="col-xs-12 col-md-8">
      <% @likes.each do |like| %>
      <div class="media tweet-box">
        <div class="media-left">
          <%= image_tag like.tweet.user.avatar if like.tweet.user.avatar?%>
            <%= image_tag "http://via.placeholder.com/60x60" unless like.tweet.user.avatar?%>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to like.tweet.user.name, tweets_user_path(like.tweet.user) %>
            <%= like.tweet.created_at %>
          </h4>
          <p><%= like.tweet.description %></p>
          <ul class="list-unstyled list-inline">
            <li>
              <%= render partial: "shared/reply", locals: {tweet: like.tweet} %>
            </li>
            <li>
              <%= render partial: "shared/like", locals: {tweet: like.tweet} %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
      </div>



  </div>
</div>