<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-3">
    <%= image_tag @user.avatar, width: "80px"%>
    <p>@<%= @user.name %> </p>
    <p><%= @user.introduction %></p>
    
    <br>
    <p>Tweets <%= @user.tweets.count %></p>
    <p> <%= link_to 'Following',followings_user_path %> <%= @user.followings.count %></p>
    <p><%= link_to 'Follower', followers_user_path %> <%= @user.followers.count %></p>
    <p>Like</p>
    <% if @user.email ==  current_user.email %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
    <%= render partial: "shared/follow", locals:{user: @user} %>
    
    
    
    </div>
    
    <div class="col-xs-12 col-sm-6 col-md-8">
    <% @likes.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-4">
            <%= image_tag tweet.user.avatar, width: "120px" %>
          </div>
          <div class="col-md-6">
            <p><strong>@<%= tweet.user.name %></strong>, <em><%= time_ago_in_words(tweet.created_at) %></em></p>
            <p><%= tweet.user.introduction %></p>
          </div>
            
        </div>
      </div>
  
    <% end %>
  </div>
     
    <div class="text-center">
      <%= paginate @likes %>
    </div>
    
     
  </div>
</div>