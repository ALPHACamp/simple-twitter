<div class="container">
  <div class="row">

    <%= render partial: "shared/profile", locals: { user: @user } %>

    <!-- likes -->
    <div class="col-md-8">
      <div class="title">Like</div>
      <% if @likes != nil %>

        <% @likes.each do |like| %>
          <div class="tweets clearfix">
            <div class="col-left">

              <div class="avatar">
                <%= image_tag like.user.avatar, height: 85, width: 85 %>
              </div>
            </div>

            <div class="col-right">
              <div class="name">
                <%= link_to "@#{like.user.name},", tweets_user_path(like.user) %>
                <%= like.created_at.strftime("%Y-%m-%d ,%l:%M") %>
              </div>

              <div class="description"><%= like.description %></div>
            </div>

            <div class="reply">
              <%= link_to "Reply(#{like.replies.count})", replies_path(like) %>
            </div>

            <div class="like">
              Like : (<%= like.likes.count %>)
            </div>

            <div class="button-reply">
              <%= render partial: "shared/like", locals: {tweet: like} %>
            </div>

          </div>
        <% end %>

      <% end %>
    </div>


  </div>
</div>
