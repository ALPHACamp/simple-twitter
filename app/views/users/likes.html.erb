<div class="container">
  <div class="row">
    <%= render partial: "shared/portfolio", locals: { user: @user } %>
  </div>

  <!-- 顯示該使用者的likes -->
  <div class="pertweet">
    <% @likes.each do |like| %>
    <div class="col-sm-12 col-md-8 user-relative">
        <div class="following-tweets">
          <div class="single-tweet">
            <div class="user-avatar">
              <%= image_tag(like.tweet.user.avatar, height: '128', width: '128') %>
            </div>
            <div class="user-tweet">
              <div class="user-name">
                <strong>
                  <%= link_to "@#{like.tweet.user.name}", tweet_replies_path(like.tweet), :alt => "Who is this?" %>
                </strong>
              </div>
              <div class="user-description">
                <%= like.tweet.description.truncate(70) %>
              </div>
              <div class="user-re-li">
                <%= link_to "Reply(#{Reply.where(:tweet_id => like.tweet.id).length})", tweet_replies_path(like.tweet), class: "btn btn-default btn-group-xs" %>
                <% if like.tweet.is_liked?(current_user) %>
                  <%= link_to "Unlike(#{Like.where(:tweet_id => like.tweet.id).length})", unlike_tweet_path(like.tweet), method: :post, class: "btn btn-danger btn-group-xs" %>
                <% else %>
                  <%= link_to "Like(#{Like.where(:tweet_id => like.tweet.id).length})", like_tweet_path(like.tweet), method: :post, class: "btn btn-info btn-group-xs" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <hr>
      </div>
      <% end %>
  </div>
</div>