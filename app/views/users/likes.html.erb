<div class="container">
  <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.avatar, class: "img-responsive center-block" %>

        <h1><%= @user.name %></h1>
        <h4><%= @user.email %></h4>
        <hr>

        <% if @user.introduction == nil %>
          <p>未新增自我介紹</p>
        <% else %>
          <p><%= @user.introduction %></p>   
        <% end %>
        <br>
        <h4><%= link_to "Tweet #{@user.tweets.length}", tweets_user_path(@user), :style=>"color:grey" %></h4>
        <h4><%= link_to "Following #{@user.followships.length}", followings_user_path, :style=>"color:grey" %></h4>
        <h4><%= link_to "Follower #{@user.inverse_followships.length}", followers_user_path, :style=>"color:grey" %></h4>
        <h4 style="color:grey;">Like <%= @user.likes.length %></h4>
        <br>
        <% if @user==current_user %>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
        <% else %>
          <%= render partial: "shared/follow", locals: {user: @user} %>
        <% end %>

      </div>
      <div class="col-md-1">
      </div>

      <div class="col-md-8">
      <h1>Like</h1>  
        <% @likes.each do |like| %>
            
            <div class="row rank-item">
              <div class="col-md-3 col-sm-3 col-lg-3">
                <%= image_tag like.tweet.user.avatar, class: "img-responsive center-block" %>
              </div>
              <div class="col-md-9 col-sm-9 col-lg-9">
                <h4><%= link_to like.tweet.user.name, tweets_user_path(like.tweet.user) %></h4>
                <h5><small><%= like.tweet.created_at %></small></h5>
                <p><%= like.tweet.description %></p>
                <% like.tweet.count_replies %><%= link_to "回覆數(#{like.tweet.replies_count})", tweet_replies_path(like.tweet), :style=>"color:blue" %>
                <%= render partial: "shared/like", locals: {tweet: like.tweet} %>
              </div>
            </div>
        <% end %>



      </div>


  </div>
</div>  
