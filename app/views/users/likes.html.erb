<div class="container">
  <div class="row">

    <%= render partial: "shared/profile", locals: { user: @user } %>

    <!-- likes -->
    <div class="col-md-8">
      <div class="title">Like</div>
      <% if @likes != nil %>

        <% @likes.each do |like| %>
          <div class="tweets clearfix">
            <div class="col-left">

              <div class="avatar">
                <%= image_tag like.user.avatar, height: 85, width: 85 %>
              </div>
            </div>

            <div class="col-right">
              <div class="name">
                <!-- user link -->
                <%= link_to (users_tweets_path(like.user)) do %>
                  @<%= like.user.name %>
                <% end %>
                <%= like.created_at %><!-- editing -->
              </div>
              <div class="description"><%= like.description %></div>
            </div>

          </div>
        <% end %>

      <% end %>
    </div>


  </div>
</div>
