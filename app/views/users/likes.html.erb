<div class="container">
  <div class="row">
    
    <div class="col-md-4">
      <%= render partial: "shared/user", locals: {user: @user} %>
    </div>

    <div class="col-md-8">
      <h3>Like</h3>

      <% @likes.each do |like| %><!-- 每個like是一則推播tweet -->
        <%= render partial: "shared/tweet", locals: {tweet: like} %>
      <% end %>

    </div><!-- col-md-8 -->

  </div>
</div>