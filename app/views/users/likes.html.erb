

<div class="container">
  <div class="row">

    <%= render partial: "share/userdetails", locals: {user: @user} %>

    <div class="col-sm-8"> 
      <h2> Like </h2>


      <% @likes.each do |like| %>
        <div class="row">
          <div class="tweet-item">
            <div class="col-sm-4">
              <%= image_tag like.tweet.user.avatar, class: "img-responsive center-block" %>
            </div>
            <div class="col-sm-8">
              <div class="caption">
                <h3><%= link_to like.tweet.user.name, tweets_user_path(like.tweet.user) %></h3>
                <h4><%= truncate(like.tweet.description, length: 80) %></h4>
                <div class="row">
                  <div class="col-sm-3">
                    <h4><%= link_to 'Reply('+like.tweet.replies.count.to_s+')', replies_tweet_path(like.tweet) %></h4>
                  </div>
                  <div class="col-sm-9">
                    <%= render partial: "share/likes", locals: {tweet: like.tweet} %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div> 




      
  </div>
</div>