<div class="row">
	<div class="col-4">
		<%= render partial: 'share/user-panel' %>
	</div>
	<div class="col-8">
		<% @likes.each do |like| %>
			<div class="row border border-secondary rounded my-3 py-3">
				<div class="col-sm-4">
					<%= image_tag like.user.avatar, class: 'img-fluid' %>
				</div>
				<div class="col-sm-8">
					<span class="text-primary"><%= like.user.name %><%= ", #{like.created_at}" %></span></br>
					<%= like.description %></br>
					<%= link_to "Reply (#{like.replies.count})", tweet_replies_path(like), class: 'btn btn-info'%>
				</div>
			</div>
		<% end %>
	</div>
</div>