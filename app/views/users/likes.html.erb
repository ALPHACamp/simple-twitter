<div class="container">
  <div class="row">
    <%= render partial: "shared/intro", locals: {user: @user} %>
    <h3>Likes</h3>
    <div class="col-xs-12 col-md-9">
      <% @likes.each do |like| %>
      <div class="media tweet-box">
        <div class="media-left">
          <%= image_tag like.tweet.user.avatar if like.tweet.user.avatar?%>
            <%= image_tag "http://via.placeholder.com/60x60" unless like.tweet.user.avatar?%>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to like.tweet.user.name, tweets_user_path(like.tweet.user) %>
            <%= like.tweet.created_at %>
          </h4>
          <p><%= like.tweet.description %></p>
          <ul class="list-unstyled list-inline">
            <li>
              <%= render partial: "shared/reply", locals: {tweet: like.tweet} %>
            </li>
            <li>
              <%= render partial: "shared/like", locals: {tweet: like.tweet} %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
      </div>



  </div>
</div>