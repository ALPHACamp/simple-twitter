<section>
  <div class="col-md-4">
    <%= render 'shared/user_stats', user: @user %>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @likes.any? %>
      <% @likes.each do |like| %>
        <%= render 'shared/tweets', t: like %>
      <% end %>
    <% end %>
  </div> 
</section>
