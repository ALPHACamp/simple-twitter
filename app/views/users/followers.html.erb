<div class="row">
  <div class="col-md-3">
    <%= render partial: "shared/user_profile" %>
  </div>

  <div class="col-md-offset-1 col-md-8">
    <h2>Follower</h2>
    <% @followers.each do |follower| %>
      <div class="col-md-6">
        <div>
          <div class="avatar-list float-left">
            <%= image_tag follower.avatar, class: "img-responsive img-circle" %>
          </div>
          <div class="small-box">
            <h3><%= link_to "@#{follower.name}", tweets_user_path(follower) %></h3>
            <h4><%= follower.introduction %></h4>
            <div class="float-right">
              <%= render partial: "shared/follow", locals: {user: follower} %>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
        <hr>
      </div>
    <% end %>
  </div>
</div>
