<div class="container">
  <%= render partial: "shared/user_file" %>
  <div class="col-sm-5 col-md-4">
    <% @users.each do |user|%>
      <div class="follow-item">
        <div class="col-md-4">
          <%= image_tag user.avatar, width: '100px', height: '100px' %>
        </div>
        <div class="col-md-8">
          <h3><%= user.name %></h3>
          <p><%= user.introduction %></p>
          <h4><%= link_to "Follow"%></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
