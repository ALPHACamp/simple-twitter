<div class="row justify-content-center mt-5">
  <div class="col-sm-3 col-12">
    <%= render 'shared/user_profile' %>
  </div>
  <div class="col-sm-9 col-12">
    <h3>Follower</h3>
    <div class="row">
    <% @followers.each do |follower| %>
