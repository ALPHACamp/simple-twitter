<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <div class="col-left col-sm-4 col-md-3">
        <%= render partial: "shared/profile", locals: {user: @user} %>
      </div>

      <div class="col-right col-sm-8 col-md-9">
        <h3>Followers</h3>
        <% @followers.each do |follower| %>
        <div class="user-list col-md-6">
          <div class="user-profile">
            <div class="avatar"></div>
            <div class="user-intro">
              <h5><%= follower.name %></h5>
              <p><%= truncate(follower.introduction, length: 80) %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>