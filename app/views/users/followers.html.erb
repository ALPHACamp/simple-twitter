<!-- user's followers -->
<div class="container">
  <div class="row">
    <div class="col-xs-2">
      

      <%= render partial: "shared/user_section", locals: {user: @user} %>
    </div>

    <div class="col-xs-9 col-xs-offset-1">
        <h3>Follower</h3>
      <div class="row">
        <% @followers.each do |user| %>
          <div class="col-xs-6">
            <%= render partial: "shared/user_list", locals: {user: user} %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>