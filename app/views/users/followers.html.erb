<div class="row">
  <!-- user profile -->
  <div class="col-xs-12 col-sm-3">
    <%= render partial: "shared/user_data" %>
  </div>

  <!-- Followers -->
  <div class="col-xs-12 col-sm-9">
    <hr class="hidden-sm hidden-md hidden-lg">
    <h1>Followers</h1>
    <div class="row">
      <% @followers.each_with_index do |follower, i| %>
        <div class="col-xs-12 col-sm-6 user-card-container">
          <%= render partial: "shared/user_card", locals: {user: follower} %>
        </div>
        <% if i.odd? %>
          <div class="clearfix hidden-xs"></div>
        <% end %>
      <% end %>
      <div class="text-center"><%= paginate @followers %></div>
    </div>
  </div>

</div>