<div class="container">

  <div class="row">
    <%= render partial: "shared/user_data" %> 

    <div class="col-8">
      <h3>Follower</h3>
      
      <div class="row">
        <% @followers.each do |follower| %>
          <div class="col-5 list-item row">
            <%= render partial: "shared/follow_list", locals: {follow: follower} %>   
          </div>      
        <% end %>
      </div>

    </div>
  
  </div>
  
</div>
