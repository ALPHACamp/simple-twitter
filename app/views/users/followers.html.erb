<div class="container">
  <div class="row">
    
    <div class="col-md-4">
      <%= render partial: "shared/user", locals: {user: @user} %>
    </div>


    <div class="col-md-8">
      <h3>Follower</h3>
      
      <% @followers.each do |follower| %>
        <div class="col-md-6">
          <%= render partial: "shared/user-item", locals: {user: follower} %>
        </div>
      <% end %>

    </div><!-- col-md-8 -->

  </div>
</div>