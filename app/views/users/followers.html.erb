<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="col-md-3">
        <%= render partial:"shared/tweet_user" %>
      </div>

      <div class="follower col-md-9">
        <h3>Follower</h3>

        <% @followers.each do |user| %>
          <div class="col-md-6">
            <div class="follower-list">

              <div class="col-md-3">
                <%= image_tag user.avatar if user.avatar?  %> 
              </div>

              <div class="col-md-9">
                <p><%= link_to user.name, tweets_user_path(user) %> </p>
                <p><%= truncate(user.introduction,length:80) %> </p>
              </div>

              <div class="clearfix"></div>

              <div class="follower-list-follow">
                <% if user != current_user %>
                  <% unless current_user.following?(user) %>
                    <%= link_to "Follow",followships_path(following_id:user),method: :post,class:"btn btn-primary" %>
                  <% else %>
                    <%= link_to "Unollow",followship_path(user),method: :delete,class:"btn btn-primary" %>
                  <% end %>
                <% end %>
              </div> 
            </div> 
          </div>
        <% end %>  
      </div>

    </div>
  </div>
</div>

