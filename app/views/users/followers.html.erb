<div class="container">
  <%= render partial: "shared/profile", locals: {user: @user} %>

  <div class="col-md-9 col-sm-9">
    <h2>Follower</h2>
    
      <% @followers.each do |follower| -%>
        <div class="col-md-6 col-sm-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-md-3 col-sm-3">
                <%= image_tag follower.avatar, width:'40px', class: "img-reponsive center-block " %>
              </div>
            
              <div class="col-md-9 col-sm-9">
                <%= follower.name %>
                <br> 

                <%= truncate(follower.introduction, length:40)%>
                <br>

                <%= render partial: "shared/follow", locals: {user: follower} %> 

              </div>
            </div>

          </div>
        </div>
      <% end %>
      

    </div>
  </div>
</div>
