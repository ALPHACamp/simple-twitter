


<div class="container">
  <div class="row">

    <div class="col-sm-4"> 
      <div class="tweet-item">
        <%= image_tag @user.avatar, class: "img-responsive center-block" %>
        <div class="caption">
          <h3><%= @user.name %></h3>
          <h3><%= link_to 'Tweet:', tweets_user_path(@user) %></h3>
          <h3><%= link_to 'Following:', followings_user_path(@user) %></h3>
          <h3><%= link_to 'Follower:', followers_user_path(@user) %></h3>
          <h3><%= link_to 'Like:', likes_user_path(@user) %></h3>
        </div>
        <% if @user!=current_user %> 
          <%= link_to 'Follow', likes_user_path(@user) %>
        <% else %>
          <%= link_to 'Edit Profile', edit_user_path(@user) %> 
        <% end %>
      </div>
    </div>

    <div class="col-sm-8"> 

      <% @followers.each do |follower| %>
        <div class="tweet-item">
         <div class="tweet-item">
            <%= image_tag follower.avatar, class: "img-responsive center-block" %>
            <div class="caption">
              <h3><%= link_to follower.name, tweets_user_path(follower) %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </div> 




      
  </div>
</div>