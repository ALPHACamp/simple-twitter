<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "shared/user_info", locals: {user: @user} %>
    </div>
    <div class="col-md-9">
      <h1>Tweet</h1>
      <div class="col-md-12">
        <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweet_detail", locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>
  </div>
</div>