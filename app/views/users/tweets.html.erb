<div class="container">
  <div class="row">

    <div class="col-md-4">
      <div class="">
        <img src="http://via.placeholder.com/90x90" class="img-responsive img-rounded">
      </div>
      <div>  
        <h3> name: </h3><br>
        Tweets.size: <br>
        Following.size: <br>
        Followers.size: <br>
        likes.size: 
      </div>  
        <p>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
          <% end %>  
        </p>
      
      
      
    </div>

    <div class="col-md-8">

      <% @tweets.each do |tweet| %>
            
            <div class="row">
              <div class="col-md-3">
                <%=link_to tweets_user_path(tweet.user) do %>
                <%=image_tag tweet.user.avatar, class:"img-responsive" %>
                <%end%>
              </div>
              <div class="col-md-8">
              <ul>
                <li><h5><%= link_to tweet.user.name, tweets_user_path(tweet.user) %>, <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></h5></li>
                <li><%= tweet.description %></li>
                <h4><%= link_to "Reply", tweet_replies_path(tweet.id) %>
                  
                </h4>
              </ul>
                
              </div>
            </div>          
        
            <hr>
          <%end%>      
      
    </div>
  </div>
</div>