<div class="container">
      <!-- page-header 裡面顯示個人檔案資料 -->
      <div class="page-header">

          <div class="col-md-3 col-sm-4">
            <%= image_tag @user.avatar, class:"img-responsive" %>
          </div>
        

        <div class="col-md-9 col-sm-8">
          <h2><%= @user.name %></h2><br>
          <p><strong><%= @user.email %></strong></p><br>
          <!-- inline & unstyled 的 list -->
          <ul class="list-unstyled list-inline">

            <li><strong><%= link_to tweets_user_path(@user) do %>
              Tweets:  <%= @user.tweets.size %></strong></li><br >
            <% end %>

            <li><strong>Following:  <%= @followings.count %></strong></li><br >
            <li><strong>Follower:  <%=  %></strong></li><br >

            <li><strong><%= link_to likes_user_path(@user) do %>
             Likes: <%= @user.likes.size  %></strong></li><br >
            <% end %>
          </ul>

          <div><%= simple_format @user.introduction %></div>
           <% if @user.email == current_user.email %>
             <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
           <% end %>
         </div>
       </div>
       </div>
      <br>
     </div>



    </div>
  </div>
</div>