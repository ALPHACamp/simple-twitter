<h1>User's own tweets</h1>

<!-- User can see profile of other(or own) users -->
<h3>Profile</h3>
<ul>
  <li><%= image_tag @user.avatar %></li>
  <li><%= @user.name %></li>
  <li><%= @user.introduction %></li>
  <li><%= link_to "Tweet", tweets_user_path(@user) %> <%= @user.tweets_count %></li>
  <li><%= link_to "Following", followings_user_path(@user) %> <%= @user.followings_count %></li>
  <li><%= link_to "Follower", followers_user_path(@user) %> <%= @user.followers_count %></li>
  <li>like <%= @user.likes_count %></li>
  <% if current_user == @user %>
    <%= link_to "Edit Profile", edit_user_path %>
  <% else %>
    <%= render partial: "shared/follow", locals: { user: @user } %>
  <% end %>
</ul>


<!-- User can see tweets of other(or own) users -->
<h3>Tweets</h3>
<%= render partial: "shared/tweets", locals: { tweets: @tweets } %>
