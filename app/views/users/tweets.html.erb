<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render partial: "shared/user_dashboard", locals: {user: @user} %>
    </div>
    <br>
    <div class="col-sm-9">  
      <% @tweets.each do |tweet| %>
        <%= render partial: "shared/tweet_wall", locals: {tweet: tweet} %>
      <% end %>

      <div class="text-center">
        <%= paginate @tweets %>
      </div>
    </div>

  </div>
</div>
