<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @user.avatar, width: "200px", class: "img-responsive center-block" %>
      <h1 class="text-center"><%= @user.name %></h1>
      <p class="wrap"><%= @user.introduction %></p>
      <p>Tweets <%= @tweets.count %></p>
      <% if @user == current_user %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <% @tweets.each do |tweet| %>
        <div class="tweet-well clearfix">
          <div class="tweet-avatar">
            <%= image_tag tweet.user.avatar %>
          </div>
          <div class="tweet-item">
            <%= link_to tweet.user.name, tweets_user_path(tweet.user) %>,
            <%= time_tag tweet.created_at %>
            <p class="wrap"><%= tweet.description %></p>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <%= paginate @tweets %>
      </div>
    </div>
  </div>
</div>

