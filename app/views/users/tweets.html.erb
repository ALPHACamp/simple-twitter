<h1>User's own tweets</h1>

<!-- User can see profile of other(or own) users -->
<h3>Profile</h3>
<ul>
  <li><%= image_tag @user.avatar %></li>
  <li><%= @user.name %></li>
  <li><%= @user.introduction %></li>
  <%= link_to "Edit Profile", edit_user_path %>
</ul>


<!-- User can see tweets of other(or own) users -->
<h3>Tweets</h3>
<% @tweets.each do |tweet| %>
  <ul>
    <%= link_to tweet.user.name, tweets_user_path(tweet.user) %>
    <li><%= tweet.created_at %></li>
    <li><%= tweet.description %></li>
  </ul>
<% end %>
