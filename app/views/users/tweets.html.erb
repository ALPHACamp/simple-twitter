<!-- user's tweets -->

<div class="container">
  <div class="row">
    <div class="col-xs-2">
      

      <%= render partial: "shared/user_section", locals: {user: @user}  %>
    </div>

    <div class="col-xs-9 col-xs-offset-1">
        <h3>Tweets</h3>
      <div>
        <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweet_list", locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>
  </div>
</div>