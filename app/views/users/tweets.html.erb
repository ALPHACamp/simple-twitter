<div class="container">
  <div>
    <% for img_id in 0..26 %>
      <% if image_path(@user.avatar).include?('/user'+img_id.to_s+'.jpg') %>
        <%= image_tag('/avatar/user'+img_id.to_s+'.jpg', class: "user-avatar") %>
      <% end %>
    <% end %>
    <p><%= @user.name %></p>
    <p><%= simple_format @user.introduction %></p>
    <% if current_user == @user %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-default" %>
    <% end %>
  </div>
  <div>
    <% @user.tweets.each do |tweet| %>
      <div>
        <% for img_id in 0..26 %>
          <% if image_path(tweet.user.avatar).include?('/user'+img_id.to_s+'.jpg') %>
            <%= image_tag('/avatar/user'+img_id.to_s+'.jpg', class: "user-avatar") %>
          <% end %>
        <% end %>
        <div class="user-text">
          <h4><%= link_to tweet.user.name, tweets_user_path(tweet.user) %></h4>
          <p class="text-muted"><em><%= tweet.created_at.to_s(:db) %></em></p>
          <p><%= simple_format tweet.description %></p>
        </div>
        <hr>
      </div>
    <% end %>
  </div>
</div>