<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="user-avatar">
        <%= image_tag(@user.avatar, class: "img-responsive center-block") %>
      </div>
      <div class="user-info">
        <h3><%= @user.name%></h3>
        <p><%=@user.introduction%></p>
      </div>
      <div class="user-button">
        <h4>Tweets: </h4>
        <h4>Following: </h4>
        <h4>Followers: </h4>
        <h4>Like: </h4>
      </div>
      <div class="edit-button">
        <%if @user == current_user%>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-info" %>
        <% else %>
          <%= link_to 'Follow', edit_user_path(@user), class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="tweet-section">
        <% @tweets.each do |tweet|%>
          <div class="tweet-item clearfix" >
            <div class="tweet-icon">
              <%= image_tag(tweet.user.avatar, class: "img-responsive center-block") %>
            </div>
            <div class="tweet-caption">
              <p><%= link_to tweet.user.name, tweets_user_path(tweet.user) %>, <%= tweet.created_at.time.strftime("%Y-%m-%d %H:%M") %></p>
              <p><%= tweet.description %><p>
              <div class="tweet-button">
                <p>Reply( )&nbsp; &nbsp; &nbsp; &nbsp;Like( )</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
