<div class="container">
  <div class="index">
    <%= render partial: "share/user_item", locals: {user: @user, tweet_class: 'active', following_class: '', follower_class: '', like_class: ''} %>
    <div id="tweet-wall">
      <h2>Tweets
      </h2>
      <% @tweets.each do |tweet| %>
      <div class="tweet-item" id="tweet-<%= tweet.id %>">
        <%= render partial: "share/tweet_item", locals: {tweet: tweet} %>
      </div>
      <% end %>
    </div>    
  </div>
</div>