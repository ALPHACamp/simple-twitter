<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.avatar, class: "avatar-styled" %>
      <h2><%= @user.name %></h2>
      <p><%= @user.introduction %></p>
      <h2><%= link_to "Tweet  #{@user.tweets_count}", tweets_user_path(@user) %></h2>
      <h2><%= link_to "Following  #{@user.followings.count}", followings_user_path(@user) %></h2>
      <h2>Follower</h2>
      <h2>Like</h2>
      <hr>
      <% if @user == current_user %>
        <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
      <% else %>
        <% if current_user.following?(@user)%>
          <%= link_to 'Unfollow', followship_path(@user), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'Follow', followships_path(following_id: @user), method: :post, class: "btn btn-primary" %>
        <% end %>
      <% end %>  
    </div>
    <div class="col-md-8 col-md-offset-1">
      <div class="col-md-12">
        <% @tweets.each do |tweet| %>
          <div class="tweets-items row">
            <div class="col-md-3">
              <%= image_tag tweet.user.avatar, class: "avatar-styled" if tweet.user.avatar? %>      
            </div>
            <div class="col-md-9">
              <p><%= link_to "@#{tweet.user.name}", tweets_user_path(tweet.user) %>, <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M")  %></p> 
              <p><%= tweet.description%></p>
              <%= link_to "Reply(#{tweet.replies_count})", tweet_replies_path(tweet), class: "reply-font" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
