<div class="container">
  <div class="col-xs-3">
    <div class="user-item">
      <%= render partial: "shared/user_files" %>
    </div>
  </div>
  <div class="col-xs-9">
    <div>
      <% @tweets.each do |tweet| %>
        <div class="row">
          <div class="col-xs-2">
            <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
          </div>
          <div class="col-xs-10">
            <h4><%= link_to "@"+@user.name, tweets_user_path(@user) %><%= "," %><%= tweet.updated_at %></h4>
            <div><%= tweet.description %></div>
            <div><%= link_to "Reply", tweet_replies_path(tweet)%></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
