<div class="container">
  <div class="row">
    <%= render partial: "shared/portfolio", locals: { user: @user } %>
  </div>

  <!-- 顯示該使用者所有的tweets -->
  <div class="pertweet">
    <% @tweets.each do |tweet| %>
      <div class="col-sm-12 col-md-8 user-relative">
        <div class="following-tweets">
          <%= render  "shared/tweet", object: tweet %>
        </div>
        <hr>
      </div>
    <% end %>
  </div>
</div>