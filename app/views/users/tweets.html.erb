<div class="container">
  <div class="col-sm-4">
    <%= render partial: "shared/user_dashboard", locals: {user: @user} %>
  </div>
</div>

<div class="container">
  <div class="col-sm-8">
    
    <div>
      <% @tweet.each do |tweet| %>
        <%= image_tag(tweet.user.avatar, hight: 80, width: 80, calss: "img-responsive img-rounded") %>
        <p>
          <%= link_to tweets_user_path(tweet.user) do %>
            <%= "@" + tweet.user.name + "," %>
          <% end %>
          <%= tweet.updated_at.strftime("%Y-%m-%d, %H:%M") %>
        </p>
        <p><%= tweet.description %></p>
        <div>
          <%= link_to tweet_replies_path(tweet) do %>
            Reply(<%= tweet.replies.size %>)
          <% end %>
          <%= render partial: "shared/like", locals: {tweet: tweet} %>
        </div>
        <div class="clearfix"></div>
        <br>
      <% end %>
    </div>

    <div class="text-center">
      <%= paginate @tweet %>
    </div>
      
  </div>
</div>
