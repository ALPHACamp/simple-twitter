<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="col-md-4">
        <h1>使用者</h1>
        <% if @user.name == current_user.name %>
          <%= link_to 'Edit Profile',edit_user_path(@user),class:"btn btn-primary" %>
        <% else %>
          <button class="btn btn-primary">Follow </button>
        <% end %>
      </div>

      <div class="col-md-8">
        <% if current_user %>
          <%= render partial:"shared/tweet_content" %>
        <% end %>
      </div>
    </div>
  </div>
</div> 




