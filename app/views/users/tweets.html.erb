<div class="container">
  <div class="col-md-offset-1">
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.avatar, size: 100, class:"img-responsive img-rounded" %>
        <h2><%= @user.name %></h2>
        <div><%= simple_format @user.introduction %><div>
        <ul style="list-style-type:none">
          <li>Tweet <%= @user.tweets.size %></li>
          <li><%= link_to "Following", followings_user_path %> <%= @user.followings.size %></li>
          <li>Follower  <%= @user.followers_count %></li>
          <li>like</li>
        </ul>
        <% if @user.email == current_user.email %>
          <%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-primary" %>
        <% else %>
          <%= render partial: "shared/follow", locals:{user: @user} %>
        <% end %>
        <%= link_to '修改密碼', edit_user_registration_path(current_user), class: "btn btn-primary" %>
      </div>

      <div class="col-md-7">
        <%= render partial: "shared/tweet", locals:{tweet: @tweets} %>
      </div>
    </div>

  </div>
</div>