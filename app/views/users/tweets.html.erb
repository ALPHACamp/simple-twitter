<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
    <!-- user's info -->
      <%= render partial: "shared/user_info", locals: {user: @user} %>
    </div>  
    <div class="col-12 col-sm-8">
    <!-- user's data show area -->
    <% @user.tweets.all.each do |tweet| %>
      <%= render partial: "shared/tweet_in_table", locals: {tweet: tweet} %>  
    <% end %>  
    </div>
  </div>
</div>
