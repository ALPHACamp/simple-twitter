<div class="container">
  <div class="row">

    <div class="col-md-3 user-profile">
      
      <ul>
        <%= render partial: "shared/user_profile", locals: {user: @user} %>
        <li>
          <% if @user == current_user %>
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary btn-md" %>
          <% else %>
            <% if current_user.is_following?(@user) %>
              <%= link_to 'Unfollow', followship_path(@user), method: :delete, class: "btn btn-info btn-md" %>
            <% else %>
              <%= link_to 'Follow', followships_path(following_id: @user.id), method: :post, class: "btn btn-primary btn-md" %>
            <% end %>
          <% end %>
        </li>
      </ul>

    </div>

    <div class="col-md-8">

      <% @tweets.each do |tweet| %>
        <%= render partial: "shared/tweet", locals: {tweet: tweet} %>
      <% end %>

    </div>


  </div>
</div>