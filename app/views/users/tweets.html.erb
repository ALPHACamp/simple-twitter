<div class="container-fluid">
  <div class="row">
    
    <!-- Left: user profile /start -->
    <div class="col-md-4">
      <div class="user-profile">
        
        <!-- user avatar /start -->
        <div class="profile-avatar">
          <% if @user.avatar? %>
            <%= image_tag(@user.avatar, width: '200', height: '200', class: 'center-block') %>
          <% else %>
            <%= image_tag("http://via.placeholder.com/200x200",class: 'center-block') %>
          <% end %>
        </div>
        <!-- user avatar /end -->
          
        <!-- username: 連結位置待設定 -->
        <div class="profile-username text-center">
          <h2><strong><%= content_tag :span, @user.name %></strong></h2>
        </div>

        <!-- user introduction -->
        <div class="profile-intro">
          <p><%= @user.introduction %></p>
        </div>

        <!-- user info /start -->
        <div class="profile-info">
          <!-- tweet數：連結已設定 -->
          <div>
            <%= link_to tweets_user_path(@user) do %>
              <strong>Tweets <%= content_tag :span, @user.tweets.length %></strong><br />
            <% end %>
          </div>

          <!-- following數：連結已設定, -->
          <div>
            <%= link_to followings_user_path(@user) do %>
              <strong>Following <%= content_tag :span, @user.followships.length %></strong><br />
            <% end %>
          </div>

          <!-- follower數：連結未設定 -->
          <div>
            <%= link_to followers_user_path(@user) do %>
              <strong>Follower <%= content_tag :span, @user.followers_count %></strong><br />
            <% end %>
          </div>

          <!-- like數：連結未設定 -->
          <div>
            <%= link_to '#' do %>
              <strong>Like <%= content_tag :span, @user.likes_count %></strong><br />
            <% end %>
          </div>

        </div>
        <!-- user info /end -->

        <br />

        <!-- Button: 判斷使用者是否為本人，依據結果顯示按鈕 -->
        <div class="text-center">
          <% if @user == current_user %>
            <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>
          <% else %>
            <% if current_user.is_following?(@user) %>
              <%= link_to "Unfollow", followship_path(@user) ,method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "Follow", followships_path(following_id: @user),method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
        <br />


      </div> <!-- /.user-profile -->
    </div>
    <!-- Left: user profile /start -->

    <!-- Right: Tweet List /start -->
    <div class="col-md-8">

      <!-- tweets /start-->
      <div class="tweetlist">
        
        <% @tweets.each do |tweet| %>

          <div class="container"><!-- 包住每一條tweet /start -->

            <!-- Left: user avatar / start-->
            <div class="col-xs-2">
              <div class="tweetavatar">
                <% if tweet.user.avatar? %>
                  <%= image_tag(tweet.user.avatar, width: '100', height: '100',class: 'center-block') %>
                <% else %>
                  <%= image_tag("http://via.placeholder.com/100x100",class: 'center-block') %>
                <% end %>
              </div>
            </div>
            <!-- Left: user avatar / end-->
            
            <!-- Right: user description / start -->
            <div class="col-xs-10">
              
              <!-- base info of user and tweet time / start -->
              <div class="tweetheader">
                <%= link_to tweets_user_path(tweet.user) do  %>
                  <strong class="username">@<%= content_tag :span, tweet.user.name %></strong>
                <% end %>
                
                <!-- 判斷tweet時間是否大於24小時，依據結果分別顯示不同表示方式 -->
                <% if (Time.now - tweet.created_at) > 86400  %>
                  <span class="tweettime"><%= tweet.created_at.localtime.to_s(:db) %></span><br />
                <% else %>
                  <span class="tweettime"><%= time_ago_in_words(tweet.created_at).gsub('about','・') %></span><br />
                <% end %>
              </div><!-- base info of user and tweet time / end -->

              <!-- tweet description -->
              <div class="tweettext"><%= tweet.description %></div>

              <!-- reply & like link -->
              <div>
                <%= link_to replies_path(tweet), class: "replylink" do %>
                  Reply <%= content_tag :span, tweet.replies_count, class: "badge" %>
                <% end %>
             
                <%= link_to '#counts', class: "likelink" do  %>
                  Like <%= content_tag :span, tweet.likes_count, class: "badge" %>
                <% end %>
              </div>

            </div>
            <!-- Right: user description / end -->

          </div><!-- 包住每一條tweet /end -->

        <% end %>
        
      </div>
      <!-- tweet /end-->

    </div>
    <!-- Right: Tweet List /end -->

  </div>
</div>