<%= render partial: 'shared/person-info' %>

<div class="col m8 s8">
  <div class="person-tweets">

    <% @tweets.each do |tweet| %>
    <div class="tweet-stream">
      <div class="col m3 s3 u-avatar">
        <%= image_tag tweet.user.avatar, class: 'responsive-img' %>
      </div>
      <div class="col m9 s9 u-tweet">
        <h5><%= link_to tweet.user.name, tweets_user_path(tweet.user) %></h5>
        <p><%= tweet.description %></p>
        <div>
          <%= link_to tweet_replies_path(tweet) do %>
            Reply (<%= tweet.replies.count %>)
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    
  </div>

  <%= paginate @tweets %>
</div>
