<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4">
    <%= image_tag @user.avatar, width: "80px"%>
    <p><strong>@<%= link_to @user.name, tweets_user_path(@user) %></strong>
    <p><%= @user.introduction %></p>
    
    <br>
    <%= render partial: "shared/count", locals: {user: @user} %>
    <% if @user.email ==  current_user.email %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
    <%= render partial: "shared/follow", locals: {user: @user} %>
    </div>
  <div class="col-xs-12 col-sm-6 col-md-8">
    <% @user.tweets.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-2">
            <%= image_tag tweet.user.avatar,width: "80px" %>
          </div>
          <div class="col-md-6">
            <p><strong>@<%= link_to tweet.user.name, tweets_user_path(tweet.user) %></strong>, <em><%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></em></p>
            <p><%= tweet.description %></p>
          </div>
            
        </div>
      </div>
  
    <% end %>
  </div>
  </div>
</div>
  
  
     

