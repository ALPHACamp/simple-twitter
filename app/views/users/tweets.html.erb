<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <img src='<%= @user.avatar%>' class="img-responsive">
      <p><%= @user.name %></p>
      <p><%= @user.introduction %></p>
      <% if current_user.id == @user.id %>
        <%= link_to 'Edit Profile', edit_user_path(current_user), :class => "btn btn-default "%>
      <% else %>
        <button class="btn btn-default">Follow</button>
      <% end %>
    </div>
    <div class="col-md-8">
      
    </div>
  </div>
</div>

