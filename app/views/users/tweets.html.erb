<div class="container">
  <div class="col-md-4 ">
    <%if !@user.avatar?%>
      <%= image_tag "https://openclipart.org/download/247319/abstract-user-flat-3.svg", class:"img-responsive img-rounded " %>
    <% else%>
      <%= image_tag @user.avatar, class:"img-responsive img-rounded" %>
    <% end %>

    <h2>
      <%= link_to @user.name,tweets_user_path(@user) %>
    </h2>
    <p><%= truncate(@user.introduction, length: 200)%></p>

    <h4>Tweets <%= @user.tweets.count%></h4>
    <h4>追蹤人數 <%= @user.followings.count%></h4>
    <h4>粉絲 <%= @user.followers_count%></h4>
    <h4>Like <%= @user.likes_count%></h4>
    
    <% if @user ==current_user %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-success" %>
    <% else %>
      <%= link_to "Follow",followship_path(@user) ,class: "btn btn-success"%>
    <% end %>
  </div>
  
  <div class="col-md-8">
       
    
    <% @tweets.each do |tweet|%>
      <div class="tweet-item">
        <div class="col-md-3">
          <%= link_to tweets_user_path(tweet.user) do%>
            <%if !tweet.user.avatar?%>
              <%= image_tag "https://openclipart.org/download/247319/abstract-user-flat-3.svg", class:"img-responsive img-rounded " %>
            <% else%>
              <%= image_tag tweet.user.avatar, class:"img-responsive img-rounded" %>
            <% end %>
          <% end %>
        </div>
        

        <div class="col-md-9">
          <h4>
            <%= link_to tweets_user_path(tweet.user) do%>
            <%= tweet.user.name %>
            <em><%= tweet.created_at %> </em>
            <% end %>
          </h4>
          
          <p><%= truncate(tweet.description, length: 200)%></p>
          <%= link_to "Reply(#{tweet.replies.size})" ,tweet_replies_path(tweet) %>
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
  
</div>