<div class="container">
	<div class="row">
		
		<!-- 以下是會顯示該為使用者的名字及描述 -->
		<div class="col-xs-3">
			<%= render partial: "shared/user", locals: {user: @user} %>
		</div>

		<!-- 以下是可以看這個使用者的全部推播 -->
		<div class="col-xs-8 col-xs-offset-1">
			<br>
			<% @tweets.each do |tweet| %>
				<%= render partial: "shared/tweet", locals: {tweet: tweet} %>
			<% end %>
		</div>

	</div>
</div>