<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <%= render partial: "shared/user_dashboard", locals: {user: @user} %>
    </div>
    <br>
    <div class="col-sm-6 col-md-8">  
      <% @tweet.each do |tweet| %>
        <%= render partial: "shared/tweet_wall", locals: {tweet: tweet} %>
      <% end %>

      <div class="text-center">
        <%= paginate @tweet %>
      </div>
    </div>

  </div>
</div>
