<div class="container">
  <div class="row">

    <div class="col-sm-2">
      
      <%= image_tag @user.avatar, size:"150"%>
      <br>
      <h2><%= @user.name%></h2>
      <%= @user.introduction%>
      <br>
      <h3><%= link_to "Tweet " + @user.tweets.count.to_s, tweets_user_path(@user) %></h3>
      <h3><%= link_to "Following " + @user.followings.count.to_s, followings_user_path(@user) %></h3>
      <h3><%= link_to "Followers " + @user.followers.count.to_s, followers_user_path(@user) %></h3>
      <h3><%= link_to "Likes " + @user.likes.count.to_s, likes_user_path(@user) %></h3>
      <br>
      <% if @user == current_user %>
        <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-primary"%>
      <% else %>
        <%= render partial: "/shared/follow" %>
      <% end %>

    </div>

    <div class=col-sm-10>
      <% @user.tweets.each do |t| %>
        <div class="col-sm-12">
          <div class="tweet-item">
            <div class="row">
              <div class="col-sm-2">
                <%= image_tag t.user.avatar, size: 80%>
              </div>

              <div class="col-sm-10">
                <%= link_to tweets_user_path(t.user) do%>
                  <%= "@"+t.user.name+"ï¼Œ" %>
                  <%= t.created_at.strftime("%Y-%m-%d %H:%M") %>
                <% end%>
                <br>
                <%= t.description %>
              </div>

            </div>
          </div>
        </div>
        
      <% end%>
        <%= %>
    </div>

  </div>
</div>