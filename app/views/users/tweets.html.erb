<style>
  .tweet-content{
    border: 1px solid #ddd;
    padding: 10px;
    height: 125px;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="col-md-4">
        <h1>使用者</h1>
      </div>

      <div class="col-md-8">
        <% if current_user %>
          <% @tweets.each do |tweet| %>
            <div class="tweet-content">
              <div class="col-md-offset-4"><%= tweet.user.name %></div>
              <div class="col-md-offset-4"><%= tweet.description %></div> 
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div> 




