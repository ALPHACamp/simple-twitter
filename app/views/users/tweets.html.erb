<div class="container">
  <div class="row">

    <div class="col-sm-2">
      
      <%= render partial: "shared/user_info"%>

    </div>

    <div class=col-sm-10>
      <% @tweets.each do |t| %>
        <div class="col-sm-12">
          <div class="tweet-item">
            <div class="row">
              <div class="col-sm-2">
                <%= image_tag t.user.avatar, size: 80%>
              </div>

              <div class="col-sm-10">
                <%= link_to tweets_user_path(t.user) do%>
                  <%= "@"+t.user.name+"ï¼Œ" %>
                  <%= t.created_at.strftime("%Y-%m-%d %H:%M") %>
                <% end%>
                <br>
                <%= t.description %>
                <br>
                <%= link_to "Reply(#{t.replies.count})", tweet_replies_path(t) %>
                <% if t.user != current_user %>
                  <%= render partial: "shared/like", locals: {tweet: t} %>
                <% end %>
              </div>

            </div>
          </div>
        </div>
        
      <% end%>
        <%= %>
    </div>

  </div>
</div>