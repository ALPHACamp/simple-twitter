<h1>This is users#tweet</h1>


<p>Profile</p>
<p>avatar</p>
<%= @user.name %>
<p><%=@user.introduction%></p>
<p> tweetscount:<%=@tweets.count%></p>
<p> Followcount</p>
<p> Followercount</p>
<p><%= link_to "Like Count : #{@user.likes.count}",likes_user_path(@user)%></p>
<p>Follow</p>

<ul>
<% @tweets.each do |t| %>
  <li>
  <%= t.description %>
  <%= t.created_at%>
  <%=link_to "reply", tweet_replies_path(t)%>
  Reply Count:<%= t.replies_count%>
  <%= render partial: "shared/like", locals:{tweet: t}%>
  Like Count : <%= t.likes_count %>
  </li>
<% end %>
</ul>