<div class="container">
  <div class="row">
    <%= render :partial => "shared/userColunm" %>

    <div class="col-md-8">

      <% @user.tweets.each do |twee| %>
      <div class="panel panel-default indexPost clearfix">
        <div class="tweetAvatar">
         <%= image_tag twee.user.avatar %>
        </div> 
        <div class="tweetInformation">
          <%= twee.user.name %>,
          <%= twee.created_at.strftime(" %Y-%m-%d, %R") %> <br>
          <%= twee.description %>  
          <br>
          <h5><%= link_to "Reply( #{twee.replies.count} )", tweet_replies_path(twee.user_id) %> </h5>
          <h5> 
            <%= render partial: "shared/like", locals: {tweet: twee} %>
          </h5>     
        </div>     <!-- tweetInformation -->     
      </div>      <!-- indexPost --> 
    <% end %>  
  </div>

  </div>  
</div>