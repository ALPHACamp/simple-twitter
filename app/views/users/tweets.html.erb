<h1><%=  @user.name %></h1>

<div class="container">
  <%= render partial: "shared/info", locals: {user: @user} %>


  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="card" style="width: 40rem;">
        <img class="card-img" src="..." alt="Card image cap">
        <div class="card-block">
          <small class="text-muted">
            <%= tweet.user.name %>,
            <%= tweet.created_at.to_formatted_s(:db)%>
          </small>
          <p class="card-text"><%= tweet.description %></p>
        </div>
 

      </div>
    <% end %>
  </div>

</div>    