<div class="row">
  <div class="col-md-3">
    <div>
      <% if @user.avatar? %>
        <%= image_tag @user.avatar, width: "260px" %>
      <% else %>
        <img src="https://api.fnkr.net/testimg/260x260/d3d3d3/FFF/?">
      <% end %>
       
      <h2 class="text-center"><%= @user.name %></h2>

      <p><%= @user.introduction %></p>

      <%= link_to tweets_user_path(@user) do %>
        <h4>Tweets <span class="badge"><%= @user.tweets.count %></span></h4>
      <% end %>

        <h4>Following <span class="badge"><%=  %></span></h4>
        
        <h4>Followers <span class="badge"><%= @user.followers_count %></span></h4>
        
        <h4>Like <span class="badge"><%=  %></span></h4>
      
      <div class="text-center">
        <% if @user == current_user %>
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary btn-lg btn-block" %>
        <% end %> 
      </div>
    </div>
  </div>

  <div class="col-md-8 col-md-offset-1">
    <% @tweets.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="media">
            <div class="media-left">
              <% if @user.avatar? %>
                <%= image_tag @user.avatar, class: "media-object", width: "100px" %>
              <% else %>
                <img src="https://api.fnkr.net/testimg/100x100/d3d3d3/FFF/?">
              <% end %>              
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to @user.name, tweets_user_path(@user) %> &nbsp;
                <%= tweet.created_at %> 
              </h4>
              <p><%= tweet.description %></p> <br>

              <p>
                <%= link_to fa_icon("reply 2x"), tweet_replies_path(tweet) %>
                <span class="lead"> <%= tweet.replies_count %> </span> &nbsp;
                <%= link_to fa_icon("heart-o 2x") %>
                <span class="lead"> <%= tweet.likes_count %> </span>
              </p>
              
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>