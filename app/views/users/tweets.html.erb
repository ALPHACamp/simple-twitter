<div class="container">
	<div class="row">
		
		<!-- 以下是會顯示該為使用者的名字及描述 -->
		<div class="col-xs-3">
			<%= render partial: "shared/user", locals: {user: @user} %>
		</div>99

		<!-- 以下是可以看這個使用者的全部推播 -->
		<div class="col-xs-8">
			<% @tweets.each do |tweet| %>
				<div class="row tweet-item">
					<!-- 以下是顯示照片 -->
					<div class="col-xs-3">
						<div class="row img">
							<img src="http://via.placeholder.com/120x120">
						</div>
					</div>	

					<!-- 以下是 Tweet 的內容，有姓名、發文時間、發文內容 -->
					<!-- 時間輸出轉換 to_s(:db)-->
					<div class="col-xs-9">
						<div class="row name">
							<%= link_to tweet.user.name, "#" %>
							<%= tweet.created_at.strftime ("%Y-%m-%d, %k:%M") %>
						</div>
						<div class="row desc">
							<%= tweet.description %>
						</div>
						<div class="row reke">
							<%= link_to "Reply", "#" %>
							<%= link_to "Like", "#" %>
						</div>
					</div>
				</div>
			<% end %>	
		</div>

	</div>
</div>