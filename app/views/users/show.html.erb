<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

    <% if @user.avatar? %>
      <%= image_tag @user.avatar.url, width: '200px' %>
    <% else %>
      <%= image_tag ("800x600.png"), width: '200px' %>
    <% end %>

    <%= @user.name %>
    <%= @user.introduction %>

    <% if @user.email == current_user.email %>
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
</div>