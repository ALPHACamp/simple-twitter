<div class="container">
  <div class="row">

      <div class="">
        
        <div class="col-md-4 col-sm-4">
          <div class="text-center">
            <%= image_tag (@user.avatar if @user.avatar?),height: 200 %>
          </div>
        <h2><%= @user.name %></h2>
        <p><strong><%= @user.email %></strong></p>
        <div><%= simple_format @user.introduction %></div>
        <p>
          <strong>followings: <%= @followings.count %></strong>
        </p>
        <p>
          <strong>followers: <%= @followers.count %></strong>
        </p>


        <% if @user.email == current_user.email %>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-info" %>
          <% end %>

        </div>
      <div class="col-md-8 col-sm-8">
        
            <h2>Tweets</h2>
        
        <% @tweets.each do |tweet| %>
          <div class="seinbg">
            <%= image_tag(@user.avatar, height: 60, width: 60, class: "img-circle") %>
            <h4><%= link_to @user.name, tweet_path(@tweet) %></h4>
            <h5>
              <em><%= tweet.created_at %> </em>
            </h5>
            <p><%= truncate(tweet.description, length: 80) %></p>
            <p><strong>
              Reply: <%= @tweet.replies.count %>
              like: <%= @tweet.likes.count %>
            </strong></p>
        
            
            

          </div>
      <% end %>

      </div>
      </div>


  </div>
</div>

<style>
  .seinbg{
    border-style: solid;
    border-width: 1px 1px 1px 1px;
    border-color: #eee;
    border-radius: 5px;
    padding: 20px;
    margin: 10px;
  }
</style>