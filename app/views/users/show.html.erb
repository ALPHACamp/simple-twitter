<div class="container">
  <div class="row">

      
    <!-- 左邊 -->
    <div class="col-xs-5">

      <div class="">
        <h1>Avatar<%= image_tag @user.avatar, class: "img-responsive img-rounded" %></h1>
      </div>
      <div >  
        <h3><%= @user.name %></h3>
        <div><%= simple_format @user.introduction %></div>
        <p><strong>tweet 32</strong></p>
        <p>following 14</p>
        <p>follower 10</p>
        <p>like 23</p>
      </div>  
      <% if @user.email == current_user.email %>
        <p><%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %></p>
        <p><%= link_to('修改個人資料', edit_user_path(current_user), class: "btn btn-primary") %></p>
      <%end%>
    </div>


    <!-- 右邊 -->
    <div class="tweets-list col-xs-7">
        <div class="panel panel-default">          
          <div class="panel-body">
            <% @tweets.each do |tweet| %>
              <div>
                <h4><%= link_to tweet.user.name, tweet_path(tweet) %> Tweet</h4>
                <p><%= truncate(tweet.description, length: 140) %></p>
              </div>
              <hr>
            <%end%>  
          </div>    
        </div>
      </div>

      

  </div>
</div>