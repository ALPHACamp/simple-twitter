<% if current_user.already_liked?(object) %>
	<%= link_to "<i class='fas fa-thumbs-up'></i> (#{object.likes_count})".html_safe, unlike_tweet_path(object), method: :post %>
<% else %>
	<%= link_to "<i class='far fa-thumbs-up'></i>  (#{object.likes_count})".html_safe, like_tweet_path(object), method: :post %>
<% end %>