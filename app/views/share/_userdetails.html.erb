    <div class="col-sm-4"> 
      <div class="tweet-item">
        <%= image_tag user.avatar, class: "img-responsive center-block" %>
        <div class="caption">
          <h3><%= user.name %></h3>
          <h3><%= link_to 'Tweet: '+user.tweets.count.to_s, tweets_user_path(user) %></h3>
          <h3><%= link_to 'Following: '+user.followings.count.to_s, followings_user_path(user) %></h3>
          <h3><%= link_to 'Follower: '+user.followers.count.to_s, followers_user_path(user) %></h3>
          <h3><%= link_to 'Like: '+user.likes.count.to_s, likes_user_path(user) %></h3>
        </div>
        <% if user!=current_user %> 
          <%= link_to 'Follow', likes_user_path(user) %>
        <% else %>
          <%= link_to 'Edit Profile', edit_user_path(user) %> 
        <% end %>
      </div>
    </div>