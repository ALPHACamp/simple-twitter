<div class="container">
  <div class="row">
    <nav class="nav nav-tabs">
      <li role="presentation">
        <%= link_to "All Tweets", admin_tweets_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to "All Users", asmin_users_path %>
      </li>
    </nav>
  </div>

  <div class="row">
    <h1>Back Users</h1>
  </div>

  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Name</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td><%= restaurant.category.name %></td>
            <td><%= restaurant.name %></td>
            <td>
              <%= link_to 'Show', admin_restaurant_path(restaurant) %>
              <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
              <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
</div>