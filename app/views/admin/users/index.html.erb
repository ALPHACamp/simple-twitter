<div class="container">

  <h1>使用者</h1>
  

  <div class="row">

    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>推文數</th>
            <th>關注人數</th>
            <th>追蹤者人數</th>
            <th>喜歡的推特</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.tweets.count%></td>
            <td><%= user.followings.count%></td>
            <td><%= user.followers.count%></td>
            <td><%= user.likes.count%></td>
            <td><%= user.followships.count%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>