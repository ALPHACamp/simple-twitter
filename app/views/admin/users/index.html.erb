<div class="container">
  <div class="row">

    <h2 id="admin_panel_title">Admin Panel</h2>
    <br>
    <ul class="nav nav-tabs" id="admin_index_nav">
      <li role="presentation">
        <%= link_to 'Tweets', admin_tweets_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to 'Users', admin_users_path %>
      </li>
    </ul>

    <br>

    <div class="col-md-10 col-md-offset-1">      
      <% @users.each do |user| %>
        <div class="col-md-6">   
          <%= render partial: "shared/user_list", locals: {object: user, admin: true} %>
          <br>
        </div>
      <% end %>       
    </div>

  </div>
</div>
