<div class="container">
	<div class="row">
		
		<!--以下是顯示使用者的全部資料，用表格呈現-->
		<div class="col-xs-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Introduction</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<th scope="row"><%= user.id %></th>
							<td><%= user.name %></td>
							<td><%= user.introduction %></td>
						</tr>
					<% end %>	
				</tbody>
			</table>
		</div>
	
	</div>
</div>