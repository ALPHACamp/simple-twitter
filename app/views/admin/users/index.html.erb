<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div>
         <%= link_to "Tweet", admin_tweets_path %>
         <%= link_to "User", admin_users_path %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
         <thead>
           <tr>
             <th>ID</th>
             <th>Name</th>
             <th>Tweets</th>
             <th>Followings</th>
             <th>Follwers</th>
             <th>Likes</th>
           </tr>
         </thead>

         <tbody>
           <% @users.each do |user| %>
           <tr>
             <th scope="row"><%= user.id %></th>
             <td><%= user.name %></td>
             <td><%= user.tweets.count %></td>
             <td><%= user.followings.count %></td>
             <td><%= user.followers_count %></td>
             <td><%= user.likes_count %></td>
           </tr>
           <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
