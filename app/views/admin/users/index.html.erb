<div class= "container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to "Tweets", admin_root_path %></li>
      <li role="presentation" class="active"><a href="#">Users</a></li>
    </ul>

    <h3>Users</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>name</th>
          <th>email</th>
          <th>tweets</th>
          <th>followings</th>
          <th>followers</th>
          <th>likes</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= user.id %></th>
            <td><%= link_to user.name, tweets_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.tweets_count %></td>
            <td><%= user.followings.size %></td>
            <td><%= user.followers_count %></td>
            <td><%= user.likes.size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @users %>
    </div>
  </div>
</div>
