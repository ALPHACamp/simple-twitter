<div class="container">

  <ul class = "nav nav-tabs">
    <li role="presentation"><%=link_to "Tweets", admin_tweets_path %></li>
    <li role="presentation" class= "active"><%= link_to "Users", admin_users_path %></li>
  </ul>
  <br>

  <table class= "table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Tweets</th>
        <th>Followings</th>
        <th>Followers</th>
        <th>Likes</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.tweets.count %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= user.likes_count %></td>
       </tr>
      <% end %>
    </tbody> 
  </table>


</div>