<div class="container">

  <h1>使用者</h1>
  

  <div class="row">

    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Password</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.password%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>