<div class="container">
  <div class="row">

    <div class="col-md-12">
    <h1>Tweet後台</h1>
    <div>
      <%= link_to "All Tweets", admin_tweets_path %> |
      <%= link_to "All Users", admin_users_path %>
    </div>
  
  </div>
</div>
 
<div class="container">
  <div class="row">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>User Name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u|%>
            <tr>
              <th scope="row"><%= u.id %></th>
              <td>
                <div>
                  <%= link_to "@"+u.name, tweets_user_path(u) %>，
                  <%= u.created_at.strftime("%Y-%m-%d %H:%M")%>
                </div>
                <div>
                  <%= u.follower_count %>
                  <%= u.likes_count%>
                </div>
              </td>
            </tr>
            <% end %>
        </tbody>
      </talbe>

      <div class="text-center">
        <%= paginate @users %>
      </div>

    </div>
  </div>
</div>