


<div class="container">
  <div class="row">

    <%= render partial: "share/userdetails", locals: {user: @user} %>
    <div class="col-sm-8"> 
      <% @users.each do |user| %>
        <div class="row">
          <div class="tweet-item">
            <div class="col-sm-4">
              <%= image_tag user.avatar, class: "img-responsive center-block" %>
            </div>
            <div class="col-sm-8">
              <div class="caption">
                <h3><%= link_to user.name, tweets_user_path(user) %></h3>
                <h4><%= truncate(user.introduction, lenght:10) %></h4>
                <h4><%= link_to 'Tweet: '+user.tweets.count.to_s, tweets_user_path(user) %></h4>
                <h4><%= link_to 'Following: '+user.followings.count.to_s, followings_user_path(user) %></h4>
                <h4><%= link_to 'Follower: '+user.followers.count.to_s, followers_user_path(user) %></h4>
                <h4><%= link_to 'Like: '+user.likes.count.to_s, likes_user_path(user) %></h4>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div> 

    </div> 




      
  </div>
</div>