<div class="container-fluid">
  <div class="row">

        <div class="container">
          <div class="page-header">
            <h1>All Users</h1>
          </div>
        </div>

          <% @users.each do |user| %>
            <div class ="col-md-3 text-center">
               <%= link_to user_path(user) do %>
               <%= image_tag user.avatar, width:'100px'%>
               <h3><%= user.name %></h3>
               <%= render partial: "shared/follow", locals:{user: user} %>
           </div>
              <% end %> 
              <% end %>
        

  </div>
</div>
