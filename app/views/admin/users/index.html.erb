<div>
  <h3>
    <%= link_to 'Tweet |',  admin_tweets_path %>
    <%= link_to 'User ', admin_users_path %>
  </h3>
</div>

<div class="row">
  <% @users.each do |user| %>
    <% if user != current_user %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
        <%= image_tag user.avatar , class: "img-rounded" ,style:"width:240px;height:240px"  %>
          <div class="caption">
          <br>
            <div class="align_center">
              <h3><%= user.name %></h3>
              <%= link_to "follower #{user.followers.count}",followers_user_path(user), class:"btn btn-primary",role:"button"%>
              <%= link_to "like #{user.likes.count} ",likes_user_path(user), class:"btn btn-primary",role:"button"%>
              <%= link_to "Tweets #{user.tweets.count} ",tweets_user_path(user), class:"btn btn-primary",role:"button"%>
              <%= link_to "following #{user.followings.count}",followings_user_path(user), class:"btn btn-primary",role:"button"%>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</div>
