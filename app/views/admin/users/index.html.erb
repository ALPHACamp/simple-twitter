<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Tweets', admin_tweets_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to 'Users', admin_users_path %>
      </li>
    </ul>
    <div class="col-md-12">
      <p></p>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Create time</th>
            <th>Name</th>
            <th>Tweets</th>
            <th>Followings</th>
            <th>Followers</th>
            <th>likes</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.created_at.to_time.to_s.split('+').first %></td>
            <td><%= user.name %></td>
            <td><%= user.tweets.size %></td>
            <td><%= user.followings.size %></td>
            <td><%= user.followers.size %></td>
            <td><%= user.likes.size %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
