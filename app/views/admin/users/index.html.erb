<!-- 使用bootstrap components 的 nav tabs -->
<div class="container">
	<div class="row">
		<br>
		<ul class="nav nav-tabs">
			<li role="presentation">
				<%= link_to 'Tweets', admin_tweets_path %>
			</li>
			<li role="presentation" class="active" >
				<%= link_to 'Users',admin_users_path %>
			</li>
		</ul>
	</div>
</div>

<br>
<br>

<div class="container">
	<div class="row">
		
		<!--以下是顯示使用者的全部資料，用表格呈現-->
		<div class="col-xs-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>名字</th>
						<th>推播數量</th>
						<th>關注人數</th>	
						<th>跟隨者人數</th>
						<th>like 過的推播數</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<th scope="row"><%= user.id %></th>
							<td><%= user.name %></td>
							<td><%= user.tweets.count %></td>
							<td><%= user.followings.count %></td>
							<td><%= user.followers.count %></td>
							<td><%= user.likes.count %></td>
						</tr>
					<% end %>	
				</tbody>
			</table>
		</div>
	
	</div>
</div>