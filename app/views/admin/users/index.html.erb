<h1>歡迎來到管理區</h1>
<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to '所有的推特', admin_root_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to '所有的使用者', admin_users_path %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="row">
    <table class="table table-bordered">
      <tr>
        <th>#</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>Admin</th>
        <th>Tweets Count</th>
        <th>Followings Count</th>
        <th>Followers Count</th>
        <th>Likes Count</th>
      </tr>
      
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <% if user.avatar %>
              <%= image_tag user.avatar, width: '32px', class: "img img-responsive" %>
            <% else %>
              <%= image_tag 'fallback/default-avatar', width: '32px', class: "img img-responsive" %>
            <% end %>
          </td>
          <td><%= link_to "#{user.name}", tweets_user_path(user.id) %></td>
          <td>
            <% if user.admin? %>
              <%= image_tag('admin-logo', height: '32', width: '32') %>
            <% end %>
          </td>
          <td><%= user.tweets.count %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers_count %></td>
          <td><%= user.likes_count %></td>
        </tr>
      <% end %>      
    </table>
  </div>
</div>