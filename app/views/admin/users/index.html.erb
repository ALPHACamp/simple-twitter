<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to'User list', admin_users_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to'Tweet list', admin_root_path, class: "nav-link" %>
    </li>
  </ul>
  <table class="table table-hover">
     <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col">User</th>
        <th scope="col">Tweets</th>
        <th scope="col">Followings</th>
        <th scope="col">Followers</th>
        <th scope="col">Likes</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row">
            <% if user.avatar? %>
              <%= image_tag user.avatar, width: '100px', class: "rounded m-auto d-block" %>
            <% else %>
              <h4 class="text-center">No User Image</span></h4>
            <% end %>
          </th>
          <td><%= link_to user.name, tweets_user_path(user) %></td>
          <td><%= user.tweets_count %></td>
          <td><%= user.followings.size %></td>
          <td><%= user.followers_count %></td>
          <td><%= user.likes_count %></td>
        </tr>  
      <% end %>
    </tbody>
  </table>  
</div>