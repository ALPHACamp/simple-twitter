<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to 'All tweets', admin_tweets_path %></li>
  <li role="presentation" class="active"><%= link_to 'User dashboard', admin_users_path %></li>
</ul>
<br><h1>User dashboard</h1>

<table class="table table-hover table-striped">
  <tr>
    <th class="text-center">Name</th>
    <th class="text-center">Avatar</th>
    <th class="text-center">Tweets</th>
    <th class="text-center">Followings</th>
    <th class="text-center">Followers</th>
    <th class="text-center">Tweet likes</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td class="td-text"><%= link_to user.name, tweets_user_path(user)  %></td>
      <td class="td-avatar"><%= user_avatar(user.avatar, "img-responsive center-block") %></td>
      <td class="td-text"><%= link_to user.tweets_count, tweets_user_path(user) %></td>
      <td class="td-text"><%= link_to user.followings_count, followings_user_path(user) %></td>
      <td class="td-text"><%= link_to user.followers_count, followers_user_path(user) %></td>
      <td class="td-text"><%= link_to user.tweets.joins(:likes).count, tweets_user_path(user) %></td>
    </tr>
  <% end %>
</table>