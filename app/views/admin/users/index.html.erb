<%= link_to "Tweet管理", admin_tweets_path %>
<%= link_to "使用者管理", admin_users_path %>

<div class="col-md-12"> 
  <div class="col-md-6">
          <h3>Users</h3>
          
          <% @users.each do |user| %>
          <div class="user-item">
             
             <%= image_tag user.avatar, width: '80px',class: "avatar" if user.avatar? %>

             <div class="content">
              <%= link_to "@#{user.name}", tweets_user_path(user) %>
          
              <div class="introduction"> <%= user.introduction %> </div>
              
              <div>Tweet : <%=  user.tweets.count %> </div>
              <div>Following : <%=  user.followings.count %> </div>
              <div>Follower : <%=  user.followers.count %> </div>
              <div>Like : <%=  user.likes.count %> </div>

            </div>

            <div class="clearfix"> </div>
          </div>
          <% end %>
 

        </div>
</div>