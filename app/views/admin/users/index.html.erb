<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-items "><%= link_to '後台首頁', admin_root_path, class: "nav-link" %></li>
    <li class="nav-items "><%= link_to '站內使用者', admin_users_path, class: "nav-link active" %></li>
  </ul>

  <% @users = @users.sort_by {|user| user.tweets.size}.reverse %>
  
  <div class="row justify-content-md-center">
    <% @users.each do |user| %>
      <div class="tweet-item col-5 row">
        <div class="col-4">
          <%= image_tag user.avatar, class: "img-thumbnail", title: "使用者圖片", alt: "尚未上傳" %>
        </div>
        <div class="col-8">

          <p><%= link_to(user.name, tweets_user_path(user)) %></p>
          <hr>
          <%= link_to tweets_user_path(user) do %>
            Tweets <%= user.tweets.size %>
          <% end %>  
          /
          <%= link_to followings_user_path(user) do %>
            Following <%= user.followings.size %>
          <% end %>
          <br>
          <%= link_to followers_user_path(user) do %>
            Follower <%= user.followers_count %>
          <% end %>
          /
          <%= link_to likes_user_path(user) do %>
            like <%= user.likes_count %>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>

</div>