<div class="container">
  <div class="row">
    <nav class="nav nav-tabs">
      <li role="presentation">
        <%= link_to "All Tweets", admin_tweets_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to "All Users", admin_users_path %>
      </li>
    </nav>
  </div>

  <div class="row"><br></div>

  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th># tweets</th>
          <th># followings</th>
          <th># followers</th>
          <th># likes</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= link_to "#{user.name}", tweets_user_path(user) %></td>
            <td><%= link_to "#{user.tweets.count}", tweets_user_path(user) %></td>
            <td><%= link_to "#{user.followings_count}", followings_user_path(user) %></td>
            <td><%= link_to "#{user.followers_count}", followers_user_path(user) %></td>
            <td><%= link_to "#{user.likes_count}", likes_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
</div>