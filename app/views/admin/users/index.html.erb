<div class="container">
  <div class="row">

    <div class="col-md-12">
      <div class="page-header">
        <h1>Simple-twitter用戶</h1>
        <div>
          <%= link_to 'Tweet', admin_tweets_path %> |
          <%= link_to 'Users', admin_users_path %>
        </div>
      </div>
    </div>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>user</th>
            <th>tweets</th>
            <th>followings</th>
            <th>follower</th>
            <th>likes</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name ,tweets_user_path(user) %></div></td>
            <td><%= user.tweets_count %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers_count %></td>
            <td><%= user.liked_tweets.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>