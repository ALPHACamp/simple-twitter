<div class="container">
  <h1>推特後台</h1>
  <div>
    <%= link_to '推文總覽', admin_root_path %> | <%= link_to '使用者總覽', admin_users_path %>
  </div>  
  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>推播數量</th>
            <th>關注人數</th>
            <th>跟隨者人數</th>
            <th>推播被like數</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.tweets.length %></td>
            <td><%= user.followings.ids.length %></td>
            <td><%= user.followers.ids.length %></td>
            <td><%= user.tweets.sum(:likes_count) %></td>
            <td><%= link_to 'Show', admin_user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      
      <div class="text-center">
        <%= paginate @users %>
      </div>

    </div>

  </div>


</div>