<div class="card">
  <div class="card-block">
    <div style="margin-bottom: 15px;">
        <%= link_to "Tweets", admin_tweets_path, class: "btn btn-secondary "%>
        <%= link_to "Users", admin_users_path, class: "btn btn-secondary"%>
    </div>

<div>推播內容</div>

<table class=" table table-striped table-bordered tablesorter"> 
<thead> 
<tr> 
    <th>使用者</th> 
    <th>建立時間</th> 
    <th>推播內容</th> 
    <th>回覆數</th>
    <th>按讚數</th> 
</tr> 
</thead> 
<tbody>
<tr> 
    <td><%= @tweet.user.name%></td> 
    <td><%= @tweet.created_at.strftime("%F %H:%M")%></td> 
    <td style="max-width: 400px;"><%= @tweet.description%></td> 
    <td><%= @tweet.replies.size%></td> 
    <td><%= @tweet.likes.size%></td>
    </td>
</tr> 
</tbody> 
</table> 

<div>回覆列表</div>

<table id="the_table" class="tablesorter table table-striped table-bordered table-hover "> 
<thead> 
<tr> 
    <th>使用者</th> 
    <th>回覆內容</th>
    <th>回覆時間</th> 
    <th>刪除</th> 
</tr> 
</thead> 
<tbody>
<% @tweet.replies.each do |u| %> 
<tr> 
    <td><%= u.user.name%></td> 
    <td style="max-width: 500px;"><%= u.comment%></td>
    <td><%= u.created_at.strftime("%F %H:%M")%></td> 
    <td><%=link_to "刪除", delete_reply_admin_tweet_path(u), method: :post, data: { confirm: "Are you sure?"} %> </td>
</tr> 
<%end%>
</tbody> 
</table> 
    
  </div>
</div>

<script>
    $(document).ready(function(){$("#the_table").tablesorter();}); 
</script>