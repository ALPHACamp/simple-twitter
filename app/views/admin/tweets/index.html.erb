<h1>This is admin's index</h1>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Mark</td>
          <td>Otto</td>
          <td>@mdo</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Jacob</td>
          <td>Thornton</td>
          <td>@fat</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Larry</td>
          <td>the Bird</td>
          <td>@twitter</td>
        </tr>
      </tbody>
    </table>


    <ul>
      <% @tweets.each do |tweet| %>
        <li id="tweet-<%= tweet.id %>"> <%= tweet.description %> replies-(<%= tweet.replies.count %>) <%= link_to "Destroy", admin_tweet_path(tweet), method: :delete, remote: true %> </li>
      <% end %>
    </ul>
  </div>
</div>