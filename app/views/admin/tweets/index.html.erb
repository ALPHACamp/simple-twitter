<div class="container">
  <div class="row">
    <h1>推特後台</h1>
    <div>
      <%= link_to '所有推播', admin_tweets_path %>
    <span> | </span>
      <%= link_to '使用者清單', admin_users_path %>
    </div>
    <% @tweets.each do |t| %>
      <div class="panel-tweet panel panel-default">
        <p>發文者：<%= t.user.name %></p>
        <p>內容：<%= t.description %></p>
        <p>回覆：<br>
          <% t.replies.each do |reply|  %>
          <%= reply.user.name %>回：
          <%= reply.comment %></p>
        <% end %>  
        <p><%= link_to( 'Delete',admin_tweet_path(t), method: :delete, data: {comfirm: "Are you sure?"} )%></p>
      </div>
    <% end %>
  </div>
  
</div>
