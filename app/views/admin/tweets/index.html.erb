<div class="container">
 
   <h1>後台</h1>
 
   <div class="row">
 
     <div class="col-md-12">
       <br>
       <table class="table table-striped table-bordered">
         <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Tweets</th>
            <th>Reply_count</th>
            <th>Replices</th>
            <th></th>
          </tr>
         </thead>
         <tbody>
           <% @tweets.each do |tweet| %>
           <tr>
             <th scope="row"><%= tweet.id %></th>
             <td><%= tweet.user.name %></td>
             <td><%= tweet.description %></td>
             <td><%= tweet.replies_count %></td>
             <td><%= tweet.replies.each do |reply| %>
             <li><%= reply.comment %></li>
             <% end %></td>
             <td>
               <%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: { confirm: "Are you sure?"} %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>

       <%= paginate @tweets %>
 
     </div>
 
   </div>
 </div>