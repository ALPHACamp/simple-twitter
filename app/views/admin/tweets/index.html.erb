<div class="container">

  <ul class = "nav nav-tabs">
    <li role="presentation" class= "active"><%=link_to "Tweets", admin_tweets_path %></li>
    <li role="presentation"><%= link_to "Users", admin_users_path %></li>
  </ul>
  <br>
  <% @tweets.each do |tweet| %>
  <div class="tweet-list">
  <h5><%= link_to tweet.user.name, user_path(tweet.user) %> <em>,<%=time_ago_in_words(tweet.created_at) %> ago </em></h5>
  <li><%= tweet.description %></li>
  <li><%= render partial: "shared/like", locals: {tweet: tweet} %></li>
  <li><%= link_to 'replies', tweet_replies_path(tweet) %></li>
  <li><%= link_to 'likes'  %></li>
   <span><%= link_to 'delete', admin_tweet_path(tweet), method: :delete, data: {confirm: "are you sure?"} %></span>
  <br>
  </div>
<% end %>






</div>