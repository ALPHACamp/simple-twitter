<div class="container">
    <div class="text-center">
      <%= link_to 'Tweet total', admin_root_path, class: "btn btn-default active" %> 
      <%= link_to 'User List', admin_users_path, class: "btn btn-default" %>       
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>No</th>
          <th>name</th>
          <th>tweet</th>
          <th>replies</th>
        </tr>
      </thead>    
      <% @tweets.each do |tweet| %>
      <tr>
        <th scope="row"><%= tweet.id %></th>
        <td><%= tweet.user.name %></td>
        <td><%= tweet.description %></td>
        <td><% tweet.replies.each do |reply| %>
            @<%= reply.user.name %>:<%= reply.comment %><br>
            <% end %>
        </td>

  
        <td><%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: {confirm:"Are you sure?"} %></td>
      </tr>
      <% end %>
      
    </table>

    <div class="text-center"><%= paginate @tweets %></div>

</div>


    