<div class="container-fluid">
	<div class="row">
		<div class="col-md-8">
			<h3>All Tweets</h3>
			<div>
				<%- @tweets.each do |f| %>
					<div class="thumbnail">
						<%= image_tag f.user.avatar, width:'100px', id:"tweet-avatar" %>
						<div id="tweet-details-block">
							<h5 class="text-primary">
								<%= link_to(tweets_user_path(:id => f.user)) do %>
									@<%= f.user.name %>
								<%end%>
								<%= f.created_at %>
							</h5>
							<p><%= simple_format f.description %></p>
							<%= link_to(tweet_replies_path(f.id), class: "btn btn-light") do %>Replies <%= f.replies.count%><%end%>
							<%= link_to 'Delete', admin_tweet_path(f.id), class: "btn btn-light", method: :delete%>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<div class="col-md-4">
			<h3>All Users</h3>
			<% @users.each do |user|%>
				<div class="thumbnail user-profile admin">
					<%= image_tag user.avatar, width:'100px', id:"tweet-avatar" %>
					<h3><%= user.name%></h3>
					<%= link_to(tweets_user_path(user), class: "btn btn-light") do %>Tweets <%= user.tweets.count%><%end%>
					<%= link_to(followings_user_path(user), class: "btn btn-light") do %>Followings <%= user.followings.count%><%end%>
					<%= link_to(followers_user_path(user), class: "btn btn-light") do %>Followers <%= user.followers.count%><%end%>
					<%= link_to(likes_user_path(user), class: "btn btn-light") do %>Likes <%= user.liked_tweets.count%><%end%>
				</div>
			<%end%>
		</div>
	</div>
</div>
