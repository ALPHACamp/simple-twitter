<div class="container">



  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>ID<th>
            <th>Name</th>
            <th>Description</th>
            <th>replies</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.id %></td>
            <td><%= tweet.user.name %></td>
            <td><%= tweet.description %></td>
            <td>
              <% tweet.replies.each do |reply| %>
                <li><%= reply.comment %></li>
              <% end %>
            </td>
            <td>
              <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div>

  </div>
</div>

