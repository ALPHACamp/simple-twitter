<div class="container">
  <div class="row">

    <h2>All Tweets</h2>

    <div>
      <%= link_to 'Tweets', admin_tweets_path %> |
      <%= link_to 'Users', admin_users_path %>
    </div>

    <br />

    <div class="col-md-12">

      <% @tweets.each do |tweet| %>
        <div class="col-md-6">
          <div class="admin-index-tweet">
            <p>
              <%= tweet.user.name %>
              , <%= time_tag(tweet.created_at) %>
            </p>
            <p><%= simple_format tweet.description %></p>
            
            <%= link_to "Reply(#{tweet.replies.count})", admin_tweet_replies_path(tweet) %>
            <%= link_to "Delete", admin_tweet_path(tweet), method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      <% end %>

    </div><!-- col-md-12 -->

  </div>
</div>