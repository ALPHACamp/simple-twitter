<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <%= link_to 'Tweets', admin_root_path %>
      </li>
      <li role="presentation">
        <%= link_to 'Users', admin_users_path %>
      </li>
    </ul>
  </div>
</div>
<br>

<div class="container">
  <div class="row">
      
    <% @tweets.each do |tweet| %>
      <div class="col-md-6">
        <div class="media tweet-item">
          <div class="media-left media-middle">
            <%= image_tag tweet.user.avatar, class: "media-object" %>
          </div>
          <div class="media-body">
            <h5 class="media-heading">
              <%= link_to "@#{tweet.user.name}", tweets_user_path(tweet.user) %>
              <%= time_ago_in_words(tweet.created_at) %> ago
            </h5>
            <p><%= tweet.description %></p>
          
            <%= render partial: "shared/reply", locals: {tweet: tweet} %>
            <%= render partial: "shared/like", locals: {tweet: tweet} %>

            <%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary btn-sm pull-right" %>
          </div>
        </div>
        
      </div>
    <% end %>

  </div>
</div>