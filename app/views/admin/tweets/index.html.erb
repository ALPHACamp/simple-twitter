<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Twitter 後台</h1>
      <div>
        <%= link_to 'Tweet', admin_tweets_path %> |
        <%= link_to 'Users', admin_users_path %>
      </div>
      <ul>
        <% @tweets.each do |tweet| %>
        <li>
          <%= tweet.name %>
          <%= link_to 'Show', admin_tweet_path(tweet) %>
          <%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: {confirm:"Are you sure?"} %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
