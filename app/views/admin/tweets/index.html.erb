
<div class="container">

  <div class="row">
    <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to 'User List', admin_users_path %></h2>
    <div class="form-group">
      <% @tweets.each do |tweet| %>
              
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-md-2">
          <%= image_tag tweet.user.avatar, width: "80px"%>  
        </div>
        <div class="col-md-6">
          <strong>@<%= link_to tweet.user.name, tweets_user_path(tweet.user) %></strong>
                    
          , <em><%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></em> 
          <br>
          <p><%= simple_format(tweet.description)%></p>
          <% tweet.replies.each do |reply| %>
            <%= reply.comment %>
          <% end %>
          <p><%= link_to 'Reply', tweet_replies_path(tweet.id)%></p>
          <p><%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data:{confirm: "Are you sure?"} %></p>
        </div>
      </div>
    </div>
      <% end %>
    </div>
  </div>
</div>
