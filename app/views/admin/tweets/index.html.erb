 <div class="container">
   <h1 class="title">後台</h1>
    <div class="row">
     <ul class="nav nav-tabs">
       <li role="presentation" class="active">
         <%= link_to "All Tweets", admin_tweets_path %>
       </li>
       <li role="presentation">
         <%= link_to "All Users", admin_users_path %>
       </li>
     </ul>
     <br>

     <table class="table">
      <thead class="thead">
        <tr>
          <th>user</th>
          <th>content</th>
          <th class="time">tweet time</th>
          <th>likes</th>
          <th>replies</th>
          <th>delete</th>
        </tr>
      </thead>
      <tbody>
        <% @tweets.each do |t| %>
        <tr>
          <th scope="row"><%= t.user.name %></th>
          <td><%= t.description %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>