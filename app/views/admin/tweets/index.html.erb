<div class="container">
  <div class="row">
    <h1 class="text-center">Admin Tweets Page</h1>
  
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Description</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <th scope="row"><%= tweet.user.name %></th>
              <td>
                <%= link_to truncate(tweet.description.capitalize, length: 50), admin_tweet_path(tweet) %>
                </td>
              <td>
                <%= link_to "Delete", admin_tweet_path(tweet), method: :delete,
                                      data: {confirm: "Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @tweets %>
      </div>
    </div>
  </div>
</div>
