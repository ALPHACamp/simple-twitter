<h1>推播後台</h1>
<div class="form-group">
  <% @tweets.each do |tweet| %>
              
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-md-2">
          <%= image_tag tweet.user.avatar, width: "80px"%>  
        </div>
        <div class="col-md-6">
          <strong>@<%= link_to tweet.user.name, tweets_user_path(tweet.user) %></strong>
                    
          , <em><%= time_ago_in_words(tweet.created_at) %></em> ago
          <br>
          <p><%= simple_format(tweet.description)%></p>
          <p><%= link_to 'Reply', tweet_replies_path(tweet.id)%></p>
          <p><%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data:{confirm: "Are you sure?"} %></p>
        </div>
                     
                    
                    
            
                  
      </div>
    </div>
  <% end %>
</div>
