<div class="container">
  <div class="row">
    <div>
      <%= link_to 'Tweet', admin_tweets_path %> |
      <%= link_to 'User', admin_users_path %>
    </div> 

    <br>

    <table class="table table-striped table-bordered">
      <thead>
        <th>#</th>
        <th>username</th>
        <th>tweet content</th>
        <th>#</th>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <th scope="row"><%= tweet.id %></th>
            <td><%= tweet.user.name %></td>
            <td><%= tweet.description %></td>
            <td>
              <%= link_to "Destroy", admin_tweet_path(tweet), method: :delete, data: {confirm: "Are you sure?"} %>
              <%= link_to "reply", tweet_replies_path(tweet) %>
            </td>
        
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>