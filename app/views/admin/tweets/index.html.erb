<h1>Tweet 後台</h1>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div>
         <%= link_to "Tweet", class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
         <thead>
           <tr>
             <th>ID</th>
             <th>Authur</th>
             <th>Description</th>
             <th>Replies</th>
             <th>#</th>
           </tr>
         </thead>

         <tbody>
           <% @tweets.each do |tweet| %>
           <tr>
             <td><%= tweet.id %></td>
             <td><%= tweet.user.name %></td>
             <td><%= tweet.description %></td>
             <td><%= tweet.replies %></td>
             <td><%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: {confirm:"Are you sure?"} %></td>
           </tr>
           <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
