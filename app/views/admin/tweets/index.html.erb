<h1>Simple Twitter後台</h1>

<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Index', admin_root_path %>
      </li>
      <li role="presentation">
        <%= link_to 'Tweets', admin_tweets_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to 'Users', admin_users_path %>
      </li>
    </ul>

  </div>
</div>

<ul><h2>All Tweets</h2></ul>
<ul>
  <% @tweets.each do |tweet| %>
    <li><%= link_to 'Destroy', admin_tweet_path(tweet), method: :delete, data:{ confirm: "Are you sure?" } %></li>
    <ul>
      <li>
        <%= 'Tweet ID' %> <%= tweet.id %>
      </li>
    </ul>
    <ul>
      <li>
        <%= tweet.user.name %>
      </li>
    </ul>
    <ul>
      <li>
        <%= tweet.updated_at %>
      </li>
    </ul>
    <ul>
      <li>
        <%= tweet.description %>
      </li>
    </ul>
  <% end %>
</ul>

<ul><h2>All Replies</h2></ul>
<ul>
  <% @replies.each do |reply| %>

      <li>
        <%= 'Reply to Tweet ID' %> <%= reply.tweet_id %>
      </li>

    <ul>
      <li>
        <%= reply.user.name %>
      </li>
    </ul>
    <ul>
      <li>
        <%= reply.updated_at %>
      </li>
    </ul>
    <ul>
      <li>
        <%= reply.comment %>
      </li>
    </ul>

  <% end %>
</ul>