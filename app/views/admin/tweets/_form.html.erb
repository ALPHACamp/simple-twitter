<% if @tweet.errors.any? %>
	<h2>We have some errors here</h2>
	<ul>
		<% @tweet.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<%end%>
	</ul>
<% end %>




<%= form_for [:admin, @tweet] do |f| %>
	<div class="form_group">
		<%= f.label :description, "Description" %>
		<%= f.text_area :description %>
	</div>
	<%=f.submit%>
<% end %>