  <div class="card">
    <div class="card-block text-align-right">

      <div class="profile-block-avatar">
        <div class="card-pic-width">
          <div class="card-pic-height">
            <div class="card-pic-position">
              <%= image_tag(user.avatar, {onerror:"this.src='/fe.jpg';", class:"card-picture"}) %>
            </div>
          </div>
        </div>
      </div>

      <div class="card-description text-align-left">
        <div class="card-tittle">
          <h5><%=user.name%></h5>
        </div>
        <hr>
                <%if not user==current_user %>
                  <%if current_user.followings.exists?(:id => user.id) %>
                    <%= link_to render(partial:"like", locals:{user: user, follow: true}), followship_path(user), {method: :delete, class:"btn btn-secondary"} %>
                  <%else%>
                    <%= link_to render(partial:"like", locals:{user: user, follow: false}), followships_path(following_id: user), {method: :post, class:"btn btn-info"} %>
                  <%end%>
                <% else %>
                  <%= link_to "編輯", edit_user_registration_path, {method: :get, class:"btn btn-primary"} %>
                <%end%>

      </div>
      <hr>
      <div class="card-text text-align-left">
        <p><%=user.introduction%></p>
      </div>


      </div>
  </div>