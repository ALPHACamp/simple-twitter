<h1>前台首頁</h1>

<div class="hgp padding-20 h-gap-10">
 
  <div class="vgp padding-10 v-gap-10">
   
    <div class="vgp padding-0 v-gap-10"> 
      <%= form_for @tweet, as: :x do |f| %>    
        <%= f.text_area :description %>
        <%= f.submit %>    
      <% end %> 
    </div> 
     
    <ul>
      <% @tweets.each do |tweet| %>
      <li>
        <%= link_to tweet.user.name, tweets_user_path(tweet.user.id) %>
        <%= tweet.created_at.to_s[0..15] %>
        <%= tweet.description %>
        <%= link_to tweet_replies_path(tweet.id) do %>
        Relpy(<%= tweet.replies.count %>)
        <% end %>
      </li>
      <% end %>
    </ul>
    
  </div>  
  
  <div class="com">
    <h1>popular</h1>
  </div>
  
</div>

