
<h1>首頁</h1>

<div class="container">
  <div class="row">
    <div class = "col-md-5">
      <%= form_for [@tweet] do |f| %>

        <div class="form-group">
          <%= f.text_area :description ,class: "form-control", value: "What's on your mide?", size: "30x5" %>
        </div>

        <div class="form-group">
          <%= f.submit "Tweet", class: "btn-primary"  %>
        </div>

      <% end %>
    </div>
  
  </div> <!-- row -- >
</div>  <!-- container -- >