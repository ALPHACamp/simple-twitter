<h1>Twitter Index</h1>

<div class="container">
  <div class="col-sm-8">
    <div>
     <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's your mind?", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <%= render partial: "shared/tweet_wall", locals: {tweet: @tweet} %>

  </div>

  <div class="col-sm-4">
  </div>

  <div class="text-center">
    <%= paginate @tweets %>
  </div>
  
</div>