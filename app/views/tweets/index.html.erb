<div id="tweet-index">
  <div class="col-md-8">
    <div class="tweet-form">
      <%= form_for @tweet do |t| %>
      <div class="form-group">
        <%= t.text_area :description, placeholder: "What's on your mind?", class: "form-control", size: "140x10", resize: "none" %>
      </div>
      <div class="action">
        <%= t.submit "Tweet", class: "btn btn-primary" %>
      </div><br />
      <% end %>
    </div>
    <% if @tweets.any? %>
      <%= render 'shared/tweets', objects: @tweets %>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="popular">
      <h3>Popular</h3>
      <% @users.each do |user| %>
      <div class="popular-item clearfix">
        <div class="col-md-5">
          <%= image_tag user.avatar,class: "img-responsive center-block", size: "130x120" %>
        </div>
        <div class="col-md-7">
          <%= link_to tweets_user_path(user) do %>
            <h4><%= user.name %></h4>
          <% end %>
          <p><%= truncate(user.introduction, length: 50) %></p>
        </div>
        <div class="action">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", followship_path(user), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to "Follow", followships_path(following_id: user), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
