<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="col-md-12">
        <!-- 新增的評論 -->
        <%= form_for [@user,@tweet] do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "留個言吧", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Tweet" ,class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-12">
        <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweet_detail", locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="row">
       <div class="col-md-12">
        <%= form_for [@user,@tweet] do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "留個言吧", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Tweet" ,class: "btn btn-primary" %>
          </div>
        <% end %>
       </div>
      </div>
    </div>
  </div>
</div>
