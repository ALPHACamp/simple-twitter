<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">  


      <div class="col-md-7">
        <%= form_for (@tweet) do |f| %>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-5">
        </div>

    </div>
  </div>
</div>
