<div class="container">
  <div class="row">
    <div class="col-xs-12 tweets-form">
      <%= form_for @tweet, remote: true do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control text-area" %>
        </div>
        <div class="form-group">
          <%= f.submit "Tweet", :disable_with => 'Tweeting...', remote: true, class: "pull-right btn btn-primary my-btn btn-lg" %>
        </div>
      <% end %>
    </div>

  <div class="col-xs-5">
    <div class="popular col-xs-12">
      <h2>Popular</h2>
      <% @users.each do |user| %>
        <div class="user-item row">
          <div class="col-xs-8">
            <%= truncate user.introduction, length: 150 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
    
  </div>
</div>