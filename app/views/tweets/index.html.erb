<h1>This is Tweet index</h1>
<%= form_for :tweet do |tweet| %>
  <%= tweet.text_field :description, placeholder: "What's on your mind?"  %>
  <%= tweet.submit "Submit" %>
<% end %>

<div class="all-tweet">
  <% @tweets.each do |tweet| %>
    <%= render :partial => "shared/tweet_list", locals: {tweet: tweet} %>
  <% end %>
</div>

<div class="popular">
  <% @users.each do |user| %>
    <%= render :partial => "shared/user_list", locals: {user: user} %>
  <% end %>
</div>