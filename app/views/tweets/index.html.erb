<div class="container">
  <div class="row">
    <div class="col-md-11">

      <div class="col-xs-8">
        <div class="row">
          <%= form_for @tweet do |f| %>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "What's on your mind?", :cols => 55, :rows => 5,  class: "form-control" %>

            </div>

            <div class="form-group">
              <%= f.submit class: "btn btn-info" , style: 'float: right' %>
            </div>
            <% end %>
        </div>
        <br>
        <div class="row">
          <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweetlist", locals: {tweet: tweet} %>
          <% end %>


        </div>
      </div>

      <div class="col-xs-4">
        <div class="col-xs-12">
          <h2>Popular</h2>
          <div class="panel-body">
            <!--POPULAR -->
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
