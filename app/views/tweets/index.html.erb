<div class="row justify-content-md-center">
  <div class="col-md-8">

    <%= form_for(@tweet) do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "What's on your mind?" ,class: "form-control", rows: 4 %>
      </div>
      <div class="form-group" >
        <%= f.submit "Tweet" ,class: "btn btn-lg btn-info", :disable_with => 'Tweeting...' %>
        </div>
      <% end %>


    <div class="tweets">
      <% @tweets.each do |tweet| %>
        <%= render partial: "shared/message", locals: {message: tweet, message_content: tweet.description, message_btn: true} %>
      <% end %>
  </div>

  </div>
  <div class="popular col-md-4 text-center">

        <h1>Popular </h1>
        <% @users.each do |user| %>

          <div class="text-center">
            <%= render partial:"shared/avatar", locals:{avatar: user.avatar} if user.avatar?  %>
          </div>
          <div class="text-center">
          <%= link_to user.name, tweets_user_path(user) %>
          <br>
          <%= truncate user.introduction, length: 140 %>
          <br>
          <%= render partial: "shared/follow", locals: { user: user } %>
        <%end%>
          </div>
  </div>




</div>


