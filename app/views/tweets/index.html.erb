<div class="container">
  <div class="row ">
    <div class="col-md-16">
      <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control text-area" %>
      </div>
      <div class="button-group">
        <%= f.submit "Tweet", class: "btn btn-primary btn-lg"  %> 
      </div>
      <% end %>
    </div>
    <hr>

    <div class="row ">
      <% @tweets.each do |tweet| %>
      <%= render partial: "shared/tweet", locals: { tweet: tweet} %>
      <% end %>       
    </div>

    <div class="col-md-4 col-right">
      <h3 class="title" >Popular</h3>
      <div id="index">
        <% @users.each do |u| %>
        <%= render partial: "shared/pop", locals: { u: u} %>
        <% end %>
      </div>
    </div>
  </div>
</div>