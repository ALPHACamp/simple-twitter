<div class="tweetcommit">
  <%=  form_for @tweets do |f| %>
    <%= f.text_area :description ,class:"form-control",rows:"4",placeholder: "what's on your mind" %><br>
    <%= f.submit value:"Create Tweet",class:"btn btn-primary" %>
  <% end %>
</div>
<br>
<div class="tweetdynamic">
  <% @tweet_order.each do |tweeto| %>
     <div class="media">
       <div class="media-left media-middle">
         <a href="#">
          <%= image_tag tweeto.user.avatar , class:"media-object" ,style:"width:120px;height:120px"  %>
         </a>
       </div>
       <div class="media-body">
        <%= link_to tweeto.user.name + "ï¼Œ",tweets_user_path(tweeto.user_id)%>
         <%=tweeto.created_at.strftime("%Y-%m-%d,%H:%M:%S")%><br><br>
         <p><%=tweeto.description%></p>
         <br>
         <%= link_to "Reply (#{tweeto.replies.count})",replies_path(tweeto.id)%>
       </div>
     </div>
    <hr size=4><br>
  <% end %>
</div>

<div class="tweetpopular">
  <h2>popular</h2>
</div>
