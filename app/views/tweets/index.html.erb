<div class="container">
  <h1>Simple Twitter首頁</h1>

  <div class="row">
    
    <div class="col-7">
      <%= form_for @tweet do |f| %>
        <%= f.text_area :description, placeholder: "What's on your mind?", maxlength: 140, size: "65x8" %>
        <br>
        <%= f.submit %>
      <% end %>

      <% @tweets.each do |tweet| %>
        <p><%= tweet.user.name %>, <%= tweet.created_at %></p>
        <p><%= tweet.description %></p>
      <% end %>
    </div>

  </div>
</div>

