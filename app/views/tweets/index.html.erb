<div class="container">
  <div class="row">
  
      <div class="col-md-7">
        <%= form_for (@tweet) do |f| %>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Tweet", class: "btn btn-primary" %>
            </div>
        <% end %>
        <br>
        <br>
        <br>
            <!-- 顯示Tweet-->
            <% @tweets.each do |tweet| %>
              <div class="tweet-item">
                <div class ="avatar">
                  <%= image_tag (tweet.user.avatar if tweet.user.avatar?),size: "150" %>
                </div>

                <div>
                  <h4><%= tweet.user.name %>,<em><%=tweet.created_at%></em></h4>
                  <p><%= simple_format tweet.description %></p>
                </div>

                <div>
                  <h4><%= link_to :'Reply', class: "btn btn-primary" %></h4>
                  <h4><%= link_to :'Likes',like_tweet_path(tweet), method: :post, class: "btn btn-primary" %></h4>
                </div>


            <% end %>
          </div>
      
        <div class="col-md-5">
        </div>

    </div>
  </div>
</div>
