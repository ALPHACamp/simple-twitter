<div class="row">
  <div class="col-md-8">

    <%= link_to "new", new_tweet_path %>
    <form class="form-horizontal">
      <%#= form_for @tweet do |f| %>
      <%= form_for @tweet, :url => tweets_path, :method => :post do |f| %>
      <%#= form_for @tweet, url: {action: "create"} do |f| %>
      <div class="form-group">
        <%= f.text_area :description, size: "60x12", placeholder: "What's on your mind?", class: "form-control" %>
      </div>
        <!-- <div class="col-sm-offset-10"> -->
          <%= puts "Before submit!" %>
          <%= f.submit %>
          <%#= f.submit "create", class: "btn btn-primary" %>
          <%= puts "After submit!" %>
        <!-- </div> -->
      <% end %>
      <%# if @tweet.errors.any? %>
          <%#= @tweet.errors.full_messages.to_sentence %>
        <%# end %>
    </form>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Newest Tweet</h3>
      </div>
      <div class="panel-body">
        <% @tweets.each do |tweet| %>
        <div>
          <div class="avatar">
            <%= image_tag tweet.user.avatar, class: "img-responsive" %>
            <%# image_tag @user.avatar, class: "img-responsive img-circle"%>
          </div>
          <h4><%= link_to "@#{tweet.user.name}, #{tweet.created_at}", tweets_path(tweet) %></h4>
          <h4><%= tweet.description %></h4>
          <!-- notice!!!!!!!!!!!!! -->
          <%= link_to "Reply(#{})", tweet_replies_path(tweet), class: "btn btn-primary" %>
          <%= link_to "Like(#{})",root_path, class: "btn btn-danger" %>
          <%#= render partial: "shared/favorite", locals: {tweet: tweet} %>
          <%#= render partial: "shared/like", locals: {tweet: tweet} %>
          
        </div>
        <div class="clearfix"></div>
        <hr>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Popular</h3>
      </div>
      <div class="panel-body">
        <% @users.each do |user| %>
        <div>
          <div class="avatar-list float-left">
            <%= image_tag user.avatar, class: "img-responsive" %>
            <% #image_tag @user.avatar, class: "img-responsive img-circle"%>
          </div>
          <div class="small-box">
            <h3><%= link_to "@#{user.name}", tweets_user_path(user) %></h3>
            <h4><%= user.introduction %></h4>
            <!-- notice!!!!!!!!!!!!! -->
            <div class="float-right">
              <%= link_to "Follow", root_path , class: "btn btn-primary" %>
            </div>
            <%#= render partial: "shared/favorite", locals: {user: user} %>
            <%#= render partial: "shared/like", locals: {user: user} %>
          </div>
        </div>
        <div class="clearfix"></div>
        <hr>
        <% end %>
      </div>
    </div>  
  </div>
</div>


