<div class="container">
  <div class="row">    
    
    <div class="col-md-8">
      <%= form_for [@tweet] do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "Tweet", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit class: "btn btn-info" %>
            <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
          </div>
        <% end %> 


      <% @tweets.each do |tweet| %>
          <div class="seinbg">
            <%= image_tag(tweet.user.avatar, height: 60, width: 60, class: "img-circle") %>
            <h4><%= link_to tweet.user.name, tweet_path(tweet) %></h4>
            <h5>
              <em><%= tweet.created_at %> </em>
            </h5>
            <p><%= truncate(tweet.description, length: 80) %></p>
            <p><strong>
              Reply: <%= link_to @tweet.replies.count, tweet_path(tweet) %>
              / like: <%= @tweet.likes.count %>
            </strong></p>
        
            
            

          </div>
      <% end %>
    </div>

    <div class="col-md-4">

      <h2>Popular</h2>

      <% @users.each do |user| %>
        <div class="seinbg">
          <%= image_tag(user.avatar, height: 60, width: 60, class: "img-circle") %>
          <h4><%= link_to user.name, user_path(user) %></h4>
          <p><%= truncate(user.introduction, length: 80) %></p>
          
            

          <% if user != current_user %>
            <% if current_user.following?(user)%>
              <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-default" %>
            <% else %>
              <%= link_to 'Follow', followships_path(following_id: user), method: :post, class: "btn btn-info" %>
            <% end %>
          <% end %>

          
          
          
        </div>

      <% end %>
    


    </div>
    
  </div>
</div>

<style>
  .seinbg{
    
    border-style: solid;
    border-width: 1px 1px 1px 1px;
    border-color: #eee;
    border-radius: 5px;
    padding: 20px;
    margin: 10px;
  }
</style>

