<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <%= form_for [@tweet] do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control tweet-form", rows: "5" %>
        </div>

        <% if @tweet.errors.any? %>
          <%= @tweet.errors.full_messages.to_sentence %>
        <% end %>
        <div class="form-group tweet-btn">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
        <div class="clearfix"></div>
      <% end %>

      <%= render partial: "shared/tweet_list" %>
    </div>

    <div class="col-xs-4">
    </div>
  </div>
</div>


