<div class = "input">
	<%= form_for @tweet do |f| %>
		<div class="field">
			<%= f.text_area :description, placeholder: "What's on your mind?", class: 'input-area' %>
		</div>

		<div class="actions button">
			<%= f.submit "Tweet", class: "btn btn-primary btn-lg" %>
		</div>
	<% end %>
</div>
<div class = "tweet-list">
	<%= render partial: "shared/tweet" %>
</div>
<div class = "popular-tweet">
	<h1>Popular</h1>
	<% @popular_tweeter.each do |tweeter| %>
		<div class="tweet">
			<div>
				<%= image_tag tweeter.avatar, class: "avatar" %>
			</div>
			<div class="intro">
				<%= link_to "@#{tweeter.name}", user_path(tweeter.id) %><br>
				<%= tweeter.introduction %><br>
			</div>
			<div class="button"><%= render partial: "shared/followbutton", locals: {user: tweeter} %></div>
		</div>
	<% end %>
</div>
