<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8" id="left-col">
      <div class="tweet-field">
        <div class="row">
        
          <% if @tweet.errors.any? %>
            <h4>We have some errors here !</h4>
            <ul>
              <% @tweet.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
                <% end %>
            </ul>
            <hr>
            <% end %>
        
        </div>
        <%= form_for @tweet do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "What's on your mind?", class: "btn btn-default" %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary ctweet" %>
          </div>
        <% end %>
      </div>
      <div class="following-tweets">
        <% @tweets.each do |tweet| %>
           <div class="col-sm-6 col-md-4 all-tweets">
            <div class="single-tweet">
              <%= image_tag(tweet.user.avatar, height: '32', width: '32') %>
              <p>
                <%= link_to  "@#{tweet.user.name}", tweets_user_path(tweet.user.id), class:"class" %>
                <em>, <%= tweet.created_at.strftime("%Y-%m-%d") %>, <%= tweet.created_at.strftime("%I:%M%p") %></em>
              </p>
              <p><%= tweet.description %></p>
              <P>
                <%= link_to  "Reply(#{Reply.where(:tweet_id => tweet.id).length})", tweet_replies_path(tweet), class: "btn btn-danger" %>
                <% if tweet.is_liked?(current_user) %>
                  <%= link_to "Unlike(#{Like.where(:tweet_id => tweet.id).length})", unlike_tweet_path(tweet), method: :post, class: "btn btn-info" %>
                <% else %>
                  <%= link_to "Like(#{Like.where(:tweet_id => tweet.id).length})", like_tweet_path(tweet), method: :post, class: "btn btn-primary" %>
                <% end %>
              </P>
            </div>
          </div>  
        <% end %>
        </ul>
      </div>
    </div>
    <div class="col-xs-12 col-md-8" id="right-col">
      <div class="popular">
          <% @users.each do |user| %>
          <div class="user-item">
            <%= image_tag user.avatar, class: "img-responsive center-block" %>
            <div class="caption">
              <h2>@<%= user.name %></h2>
              <h4>Followers (<%= user.followers_count %>)</h4>
            </div>
            <p>
              <%= user.introduction %>
            </p>
            <p>
              <% if user != current_user %>
                <% if current_user.following?(user) %>
                    <%= link_to  "Unfollow", followship_path(user), method: :delete, class: "btn btn-primary ctweet" %>
                  <% else %>
                    <%= link_to  "Follow", followships_path(following_id: user), method: :post , class: "btn btn-primary ctweet"%>
                <% end %>
                <% else %>
                  <p><strong>It's you!</strong></p>
              <% end %>
            </p>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>