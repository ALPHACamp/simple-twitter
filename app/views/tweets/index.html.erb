<div class="container">
  <div class="col-left">
    <div class="my-tweet">
      <%= form_for @tweet do |f| %>
      <%= f.text_area :description, placeholder: "What's on your mind?" %>
      <%= f.submit %>
      <% end %>
      </div>
    <br>
    <div class="tweets">
      <% @tweets.each do |tweet| %>
      <li><%= link_to tweet.user.name, user_path(tweet.user) %></li>
      <li><%= tweet.description %></li>
      <% end %>
      <br>
    </div>

  </div>

  <div class="col-right">
    
  </div>




</div>