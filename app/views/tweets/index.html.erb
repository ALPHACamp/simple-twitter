<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_for @tweet, as: :x do |f| %>    
        <%= f.text_area :description %>
        <%= f.submit %>    
      <% end %>
      <ul>
        <% @tweets.each do |tweet| %>
        <li>
          <%= link_to tweet.user.name, tweets_user_path(tweet.user.id) %>
          <%= tweet.created_at.to_s[0..15] %>
          <%= tweet.description %>
          <%= link_to tweet_replies_path(tweet.id) do %>
          Relpy(<%= tweet.replies.count %>)
          <% end %>
          <span>like</span>
        </li>
        <% end %>
      </ul>  
    </div>
    <div class="col-md-4">
      <h1>popular</h1>
    </div>
  </div>
</div>

