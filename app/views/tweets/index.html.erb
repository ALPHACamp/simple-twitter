<div class="container">
  <h1>This is tweets index.</h1>
  <div class="row">
    <div class="col-8">
      <!-- 新增推文 -->
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
        </div>

        <div class="form-group float-right">
          <%= f.submit class: "btn btn-primary" %>
          <%= f.button "Clear", type: :reset, class: "btn btn-light" %>
        </div>
      <% end %>

      <div class="clearfix"></div>

      <hr>
      <!-- # 顯示 Tweets：排序依日期，最新的在前 -->
      <% @tweets.each do |tweet| %>
        <%= link_to "#{tweet.user.name}", tweets_user_path(tweet.user) %>,  
        <%= tweet.created_at.strftime("%Y-%m-%d") %>,
        <%= tweet.created_at.strftime("%H:%M") %>

        <%= simple_format tweet.description %>
        <hr>
      <% end %>
    </div>

    <div class="col-4">
      <h1>Popular</h1>
      <h2>使用者能在首頁看見跟隨者 (followers) 數量排列前 10 的使用者推薦名單</h2>
    </div>

  </div>

</div>
