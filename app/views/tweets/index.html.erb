<div class="row">
  <div class="col-md-8">
    <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "What's on your mind?", class:"form-control" %>
      </div>
      <div class="form-group clearfix">
        <%= f.submit "Tweet", class:"btn btn-primary pull-right" %>
      </div>
    <% end %>

    <%= render partial: "shared/tweet", locals: {tweets: @tweets} %>
  </div>

  <div class="col-md-4">
    <h1>all user</h1>
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= user.name %>
          <% if user!= current_user %>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", followship_path(user), method: :delete %>
            <% else %>
              <%= link_to "Follow", followships_path(following_id: user), method: :post %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
