


<div class="container">
  <div class="row">

    <div class="col-sm-8"> 


      <%= form_for @tweet do |f| %>

        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's in your mind?", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>


    
        <%= render partial: "share/tweetlist", locals: {tweets: @tweets} %>
    
    </div>

    <div class="col-sm-4"> 
        
          <h2>Popular</h2>


      <% @users.each do |user| %>
        <div class="row">
          <div class="tweet-item">
            <div class="col-sm-4">
              <%= image_tag user.avatar, class: "img-responsive center-block" %>
            </div>
            <div class="col-sm-8">
              <div class="caption">
                <h3><%= link_to user.name, tweets_user_path(user) %></h3>
                <h4><%= truncate(user.introduction, lenght:10) %></h4>
                <%= render partial: "share/follow", locals: {user: user} %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div> 




      
  </div>
</div>