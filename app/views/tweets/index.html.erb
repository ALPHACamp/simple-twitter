<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control text-area", rows: "5" %>
        </div>
        <div class="form-group btn-right">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="col-md-12">
        <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweet", locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>
    <div class="col-md-5">
      <h1>Popular</h1>
      <div class="col-md-12">
        <% @users.each do |user| %>
          <%= render partial: "shared/user", locals: {user: user} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
