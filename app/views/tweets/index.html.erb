<div class="row justify-content-md-center mt-4">
  <div class="col-md-6">
    <div id="tweet-form" class="mb-3">
      <%= form_for(@tweet) do |f| %>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control", rows: 6  %>
        </div>
        <div class="text-right">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div id="tweets-list">
      <% @tweets.each do |tweet| %>
        <%= render partial: "shared/tweets_list", locals: {tweet: tweet} %>
        
      <% end %>
    </div>
  </div>
  <div class=" col-sm-5 col-12 mr-5">
  <h3>Popular</h3>
   <% @users.each do |user| %>
     <%= render partial: "shared/user_list", locals: {user: user} %>
     
   <% end %>
  </div>
</div>