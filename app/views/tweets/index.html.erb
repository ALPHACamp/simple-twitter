<div class="container">


  <div class="col-md-8">
    <%= form_for [@tweet] do |f| %>
    <div class="form-group">
      <%= f.text_area :description, placeholder: "What's on your mind?", rows: "5",class: "form-control" %>
    </div>
    <div class="form-group text-right">
      <%= f.submit "Tweet",class: "btn btn-primary" %>   
    </div>
    <% end %>
    
    
    <% @tweets.each do |tweet|%>
      <div class="tweet-item">
        <div class="col-md-3">
          <%= link_to tweets_user_path(tweet.user) do%>
            <%if !tweet.user.avatar?%>
              <%= image_tag "https://openclipart.org/download/247319/abstract-user-flat-3.svg", class:"img-responsive img-rounded " %>
            <% else%>
              <%= image_tag tweet.user.avatar, class:"img-responsive img-rounded" %>
            <% end %>
          <% end %>
        </div>
        

        <div class="col-md-9">
          <h4>
            <%= link_to tweets_user_path(tweet.user) do%>
            <%= tweet.user.name %>
            <em><%= tweet.created_at %> </em>
            <% end %>
          </h4>
          
          <p><%= truncate(tweet.description, length: 200)%></p>
          <%= link_to "Reply(#{tweet.replies_count})" ,tweet_replies_path(tweet) %>
          <% if tweet.is_like?(current_user)%>
            <%= link_to unlike_tweet_path(tweet) ,method: :post do%>
            <%= '<i class = "glyphicon glyphicon-heart" aria-hidden="true"></i> '.html_safe%>
            <%= "Like(#{tweet.likes_count})"%>
            <% end %>   
          <% else %>
            <%= link_to like_tweet_path(tweet) ,method: :post do%>
            <%= '<i class = "glyphicon glyphicon-heart-empty" aria-hidden="true"></i> '.html_safe%>
            <%= "Like(#{tweet.likes_count})"%>
            <% end %>  
          <% end %>
          
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  
  
  </div>
    

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%=%> Popular</h3>
      </div>
      <div class="panel-body">
        <% @users.each do |user|%>
          <div class="user-item">
            <div class="col-md-3">
              <%= link_to tweets_user_path(user) do%>
                <%if !user.avatar?%>
                  <%= image_tag "https://openclipart.org/download/247319/abstract-user-flat-3.svg", class:"img-responsive img-rounded " %>
                <% else%>
                  <%= image_tag user.avatar, class:"img-responsive img-rounded" %>
                <% end %>
              <% end %>
            </div>
            

            <div class="col-md-9">
              <h4>
                <%= link_to user.name,tweets_user_path(user) %>
              </h4>
              
              <p><%= truncate(user.introduction, length: 200)%></p>
              <div class="text-right">
                <% if user != current_user %>
                  <%= render partial: "shared/follow", locals: {user: user}%>
                <% end %>
              </div>
              
              
              <hr>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end %>
      </div>  
    </div>
  </div>

</div>