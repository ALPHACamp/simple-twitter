
<div class="row">
  <div class="col-md-7">
    <div class="form-horizontal">
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, size: "60x12" , placeholder: "What's on your mind?", class: "form-control text-area" %>
        </div>
        <div class="col-sm-offset-10">
          <%= f.submit "Tweet", class: "pull-right btn btn-lg btn-primary" %>        
        </div>
      <% end %>
    </div>
    <br>
    
    <h2>最新Tweets</h2>
    <div class="tweets col-xs-12" id="tweets">
      <%= render partial: "shared/tweets"%>
    </div>
  </div>

  <div class="col-md-5">
    <div class="popular col-xs-12">
      <h2>風雲人物</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <% @users.each do |user| %>
          <div class="avatar-list float-left">
            <%= image_tag user.avatar, class: "img-responsive img-rounded", width: "20%" %>
          </div>
          <div class="small-box">
            <h3><%= link_to "#{user.name}", tweets_user_path(user) %></h3>
            <h4><%= user.introduction %></h4>
            <div class="float-right">
              <%= render partial: "shared/follow", locals: {user: user}%>
            </div>
          </div>  
          <div class="clearfix"></div>     
          <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>  









