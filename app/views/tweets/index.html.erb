<div class="row">
<!-- left===================================== -->
<div class="col-md-8">
  <div class="comment">
    <%= form_for @tweet do |f| %>
      <%= f.text_area :description,placeholder: "What's on your mind? (maxlength: 140)",maxlength: 140,class: "newtweet-content" %>
      <%= f.submit "Tweet", class: "btn-submit" %>
    <% end %>
  </div>

  <% @tweets.each do |tweet| %>

  <div class="row tweets">
    <div class="col-md-3">
      <img src="<%= tweet.user.avatar %>" alt="" class="avatar">
    </div>
    <div class="col-md-9">
      <div class="tweet_usr">
        <%= link_to users_tweets_path(tweet.user) do %>
          <h3><%= tweet.user.name %>
          ,
          <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %>
        </h3>
        <% end %>
      </div>
      <%= simple_format(tweet.description) %>
      <div class="tweet_RL">
        <%= link_to replies_path(tweet.id), class: "tweet_reply" do %>
          Reply(<%= tweet.replies_count %>)
        <% end %>
        <span class="tweet_like">
          <%= render partial: "shared/like",locals:{tweet:tweet} %>
          (<%= tweet.likes_count %>)</span>
      </div>
    </div>
  </div>
  <% end %>
</div> <!-- col-md-8 end-->

<!-- right===================================== -->
<div class="col-md-4">
  <h3>Popular</h3>

  <% @users.each do |user| %>

  <div class="row popular">
    <div class="col-md-3">
      <img src="<%= user.avatar %>" alt="" class="avatar">
    </div>
    <div class="col-md-9">
      <div class="popular_usr">
        <%= link_to users_tweets_path(user) do %>
          <h3><%= user.name %> </h3>
        <% end %>
      </div>
      <p class="popular_intro"><%= user.introduction %></p>
      <div class="popular-follow">
        <%= render partial: "shared/follow",locals:{user:user} %>
      </div>
    </div>
  </div>
  <% end %>

</div> <!-- col-md-4 end-->

</div>
