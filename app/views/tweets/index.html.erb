<div class="container-fluid">  
  <div class="row">
    <div class="col-md-7">
      <div class="container-fluid">
        <%= form_for :tweet , :url => {:controller=>'tweets', :action => 'create' } do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "寫些什麼吧～", class: "form-control", maxlength: 140, rows: 4, style: 'resize: none'%>
          </div>
          <div class="form-group">
            <%= f.submit 'Tweet it!', class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
        <div class="clearfix"></div>    
        <br>
        <% @tweets.each do |tweet| %>
          <div class="container-fluid">
            <div class="row well">
              <div class="col-md-4">    
                  <%= image_tag(tweet.user.avatar, :class => 'img-responsive') %>
              </div>
              <div class="col-md-7 tweet-content">
                <p>
                  <%= tweet.user.name %>, <%= tweet.created_at.strftime('%F') %>, <%= tweet.created_at.strftime('%R') %> 
                </p>
                <p><%= tweet.description %></p>
                <%= link_to "Reply(#{tweet.replies_count})", replies_tweet_path(tweet.id) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-5">   
    ds   
    </div>
  </div>
</div>
