<div class="row justify-content-md-center">
  <div class="col-md-7">
    <div id="tweet-form" class="mb-5">
      <%= form_for(@tweet) do |f| %>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control", rows: 5 %>
        </div>
        <div class="text-right">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <%= render 'shared/tweets_list' %>
  </div>
  <div class="col-md-5">
  <h3>Popular</h3>
   <% @users.each do |user| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to tweets_user_path(user) do%>
            @<%= user.name %>
          <% end %>
        </h5>
        <p class="card-text"><%= user.introduction %></p>

      </div>
    </div>
   <% end %>

  </div>
</div>
