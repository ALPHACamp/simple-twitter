<h2>首頁</h2>


<div class="container">
  <div class="row">
    <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "在想些什麼呢？", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit  class: "btn btn-primary" %>
        <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
      </div>
    <% end %>
  
  <% @tweets.each do |tweet| %>
    <div>
      <h4><%=  link_to tweet.user.name, tweets_user_path(tweet.user) %></h4>
      <% if tweet.user != current_user %>
        <% if current_user.following?(tweet.user) %>
          <%= link_to 'Unfollow', followship_path(tweet.user), method: :delete,class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'Follow', followships_path(following_id: tweet.user), method: :post,class: "btn btn-info" %>
        <% end %>
      <%end%>
      <p><%= simple_format tweet.description %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(tweet.created_at)   %> </em>
      </p>
    </div>
    <% if current_user.admin? %>
      <%= link_to "Delete", admin_tweet_path(tweet), method: :delete %>
    <%end%>

    <hr>
  <% end %>


  </div>
</div>