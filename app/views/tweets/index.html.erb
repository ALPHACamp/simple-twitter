<div class="row">

  <div class="col-md-8">

    <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control input-lg", rows: "6" %> 
      </div>
      <div class="form-group text-right">
        <%= f.submit "Tweet", class: "btn btn-primary btn-lg" %> 
      </div>
    <% end %>
      
    
    <% @tweets.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="media">
            <div class="media-left">
              <% if tweet.user.avatar? %>
                <%= image_tag tweet.user.avatar, class: "media-object", width: "100px" %>
              <% else %>
                <img src="https://api.fnkr.net/testimg/100x100/d3d3d3/FFF/?">
              <% end %>         
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to tweet.user.name, tweets_user_path(tweet.user) %> &nbsp;
                <%= tweet.created_at %> 
              </h4>
              <p><%= tweet.description %></p> <br>

              <p>
                <%= link_to fa_icon("reply 2x"), tweet_replies_path(tweet) %>
                <span class="lead"> <%= tweet.replies_count %> </span> &nbsp;
                <%= link_to fa_icon("heart-o 2x") %>
                <span class="lead"> <%= tweet.likes_count %> </span>
              </p>

            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-4">

    <h2>Popular</h2>

    <% @users.each do |user| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="media">
            <div class="media-left">
              <% if user.avatar? %>
                <%= image_tag user.avatar, class: "media-object", width: "100px" %>
              <% else %>
                <img src="https://api.fnkr.net/testimg/100x100/d3d3d3/FFF/?">
              <% end %>    
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to user.name, tweets_user_path(user) %> &nbsp;
              </h4>
              <p>
                <%= truncate(user.introduction, length: 120) %>
              </p>
              <%= fa_icon("users 2x") %>
              <span class="lead"><%= user.followers_count %></span>
            </div>  
          </div>
        </div>
      </div>
    <% end %>
    
  </div>

</div>