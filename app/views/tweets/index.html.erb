<h1>user site</h1>

<div class="container">
  <div class="row">


    <%= form_for(@tweet) do |f| %>
      <div class="form-group" style="width: 40rem;">
        <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
      </div>
      <div class="form-group right">
        <%= f.submit "Tweet", class: "btn btn-primary" %>
        <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
      </div>
    <% end %>    
    <div class="clearfix"></div>

    <hr>



    <% @tweets.each do |tweet| %>
      <div class="card" style="width: 40rem;">
        <img class="card-img" src="..." alt="Card image cap">
        <div class="card-block">
          <small class="text-muted">
            <%= link_to "#{tweet.user.name}", tweets_user_path(tweet.user) %>,
            <%= tweet.created_at.to_formatted_s(:db)%>
          </small>
          <p class="card-text"><%= truncate(tweet.description,  length: 80) %></p>
        </div>
        <%= link_to "Reply", tweet_replies_path(tweet) %>
        <%= render partial: "shared/like", locals: {tweet: tweet} %>

      </div>
    <% end %>
    

    <%= render partial: "shared/followcard", locals: {users: @users} %>
 

    <br>

 
      
  </div>
</div>