<div class="container">
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= user.name %>
        <%= link_to 'Follow', followships_path(following_id: user), method: :post %>
        <%= link_to 'Unfollow', followship_path(user), method: :delete %>
      </li>
    <% end %>
  </ul>
  <div class="row">
    <%= form_for [@tweet] do |f| %>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "Whats on your mind?", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Tweet", class: "btn btn-primary" %>
      </div>
    <% end %>

    <% @tweets.reverse.each do |tweet| %>
      <h3><%= link_to tweet.user.name, tweets_user_path(tweet.user) %></h3>
        <p class="label label-default"><%= tweet.description %><p>
    <% end %>  
  </div>
</div>