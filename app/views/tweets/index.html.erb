<div class="container">
  <div class="row">
      

    <div class="col-md-8">
      <div class="row blank-tweet">
        <%= form_for @tweet do |f| %>
          <%= f.text_area :description, class: "form-control form-group", rows: 8, maxlength: 140, placeholder: "What's on your mind?" %>
          <%= f.submit "Tweet", class: "btn btn-primary btn-md pull-right" %>
        <% end %>
      </div>

      <div class="row">
        <% @tweets.each do |tweet| %>
          <%= render partial: "shared/tweet", locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>


    <div class="col-md-4">
      <h2>Popular</h2>
      <% @users.each do |user| %>
        <div class="media user-item user-media">
          
            <div class="media-left media-top">
              <%= image_tag user.avatar, class: "media-object" %>
            </div>
            
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to "@#{user.name}", tweets_user_path(user) %>
              </h4>
              <p><%= truncate(user.introduction, length: 200) %></p>
              <%= render partial: "shared/follow", locals: {user: user} %>
            </div>
          
        </div>
      <% end %>
    </div>


  </div>
</div>