<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_for(@tweet) do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "Compose new tweet...", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Tweet", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "shared/tweets", tweets: @tweets %>
    </div>

    <div class="col-md-4">
      <h1>Popular</h1>
      <%= render 'shared/user_info', users: @users %>
    </div>
  </div>
</div>
