<div class="container">
  <div class="tweet-index">
    <div class="tweet-box clearfix">
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", size: "1x6", class: "form-control" %>
          <% if @tweet.errors.present? %>
            <p class="error"><%= @tweet.errors.full_messages.to_sentence %></p>
          <% end %>
        </div>
        <%= f.submit 'tweet', class: "btn btn-default btn-left" %>
      <% end %>
    </div>
  
    <% @tweets.reverse.each do |tweet| %>
      <div class="tweet-block">
        <% for img_id in 0..26 %>
          <% if image_path(tweet.user.avatar).include?('/user'+img_id.to_s+'.jpg') %>
            <%= image_tag('/avatar/user'+img_id.to_s+'.jpg', class: "user-avatar") %>
          <% end %>
        <% end %>
        <div class="user-text">
          <h4><%= link_to tweet.user.name, tweets_user_path(tweet.user) %></h4>
          <p class="text-muted"><em><%= tweet.created_at.to_s(:db) %></em></p>
          <p><%= simple_format tweet.description %></p>
          <%= link_to 'Reply?', tweet_replies_path(tweet) %>
        </div>
      </div>
    <% end %>
  </div>
</div>