<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary " %>
        </div>

      <% end %>
      <div>
        <ul>
          <% @tweets.each do |tweet| %>
            <%= image_tag tweet.user.avatar, class: "img-responsive img-rounded" %>
            <li><%= tweet.updated_at %></li>
            <li><%= tweet.description %></li>
            <li><%= link_to "Reply", tweet_replies_path(tweet)%></li>
            <hr/>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-xs-4">
      <h3>popular</h3>
      <div>
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to "@"+user.name, tweets_user_path(user)%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
