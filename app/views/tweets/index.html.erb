

<div class="container">
  <div class="row">
    
    <div class="col-md-10">

      
      <div class="col-md-8">
        <div class="blank-tweet">
          <%= form_for @tweet do |f| %>
            <%= f.text_area :description, class: "form-control", placeholder: "What's on your mind?" %>
            <%= f.submit "Tweet", class: "btn btn-primary" %>
          <% end %>
        </div>

        <% @tweets.each do |tweet| %>
          <div class="media tweet-item">
            <div class="media-left media-middle">
              <%= image_tag tweet.user.avatar, class: "media-object" %>
            </div>
            <div class="media-body">
              <h5 class="media-heading">
                <%= link_to "@#{tweet.user.name}", tweets_user_path(tweet.user) %>
                <%= time_ago_in_words(tweet.created_at) %> ago
              </h5>
              <!--<p><%= truncate(tweet.description, length: 80) %></p>-->
              <p><%= tweet.description %></p>
              <%= link_to "Reply", tweet_replies_path(tweet) %>
              <%= render partial: "shared/like", locals: {tweet: tweet} %>
            </div>
          </div>
        <% end %>
      </div>


      <div class="col-md-4">
        <h2>Popular</h2>
        <% @users.each do |user| %>
          <div class="media user-item user-media">
            <div class="media-left media-top">
              <%= image_tag user.avatar, class: "media-object" %>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to "@#{user.name}", tweets_user_path(user) %>
              </h4>
              <!--<p><%= truncate(user.introduction, length: 80) %></p>-->
              <p><%= user.introduction %></p>
            </div>
            <div>
              <%= render partial: "shared/follow", locals: {user: user} %>
            </div>
          </div>
        <% end %>
      </div>


    </div>

  </div>
</div>