<div class="container">
  <div class="row">
  
      <div class="col-md-7">
        <%= form_for (@tweet) do |f| %>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Tweet", class: "btn btn-primary" %>
            </div>
        <% end %>
        <br>
        <br>
        <br>
            <!-- 顯示Tweet-->
            <% @tweets.each do |tweet| %>
                <div class="tweet-item">
                  <div class ="avatar">
                    <%= image_tag (tweet.user.avatar if tweet.user.avatar?),size: "150" %>
                  </div>

                  <div>
                    <h4><%= tweet.user.name %>,<em><%=tweet.created_at%></em></h4>
                    <p><%= simple_format tweet.description %></p>
                  </div>

                  <div>

                    <%= render partial: "shared/like", locals: {tweet: tweet} %>   
                    </div>
                </div>
              <% end %>

              <div class="col-md-5">
          
                <h1>Top 10 人氣王 <small>(追隨者最高)</small></h1>
              </div>
              
                 <%= @users.each do |user| %>       
                <%= image_tag user.avatar, class: "img-responsive center-block" %>
                <br>
                <h3><%= user.name %>追蹤數：<%= user.followers_count %></span>
                </h3>
                <%= simple_format user.introduction, length: 200 %>
                <%= render partial: "shared/follow", locals: {user: user} %> 
              <div class="clearfix"></div>
              <% end %>

    <hr>
   

    </div>
  </div>
</div>
