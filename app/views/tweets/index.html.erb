<div class="container">
  <h1>前台</h1>
  
  
  <div>
    <% @tweets.each do |tweet| %>
        <div class="seinbg">
          <%= image_tag(tweet.user.avatar, height: 60, width: 60, class: "img-circle") %>
          <h4><%= tweet.user.name %></h4>
          <p><%= truncate(tweet.description, length: 80) %></p>
        </div>
    <% end %>
  </div>

</div>

<style>
  .seinbg{
    width: 500px;
    border-style: solid;
    border-width: 1px 1px 1px 1px;
    border-color: #eee;
    border-radius: 5px;
    padding: 20px;
    margin: 10px;
  }
</style>

