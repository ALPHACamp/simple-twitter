<div class="container">
  <div class="col-md-7  col-sm-7">
    <%= form_for @tweet do |f| -%>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "What's on your minds?", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Tweet",class: "btn btn-primary" %>
      </div>
    <% end %>

    <% @tweets.each do |tweet| %>
      <%= render partial: "shared/tweet", locals: {tweet: tweet} %>
    <% end %>

  </div>


  <div class="col-md-5 col-sm-5">
    <% @users.each do |user| -%>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-4 col-sm-4">
            <%= image_tag user.avatar, width:'60px', class: "img-reponsive center-block " %>
          </div>
          
          <div class="col-md-8 col-sm-8">
            <%= link_to user.name, tweets_user_path(user) %>
            <br>
            <%= truncate(user.introduction, length:30) %>
            <br>

            <%= render partial: "shared/follow", locals: {user: user} %>
          </div>
        </div>

      </div>

    <% end %>
  </div>

  
</div>
