<div class="container">
  <div class="row">

<!--------------------------------------- 左邊區塊 (站內所有推播) --------------------------------------->

    <div class="col-md-8">

      <br />

      <!-- 新增推播失敗的錯誤提示 -->
      <% if @tweet.errors.any? %>
        <%= @tweet.errors.full_messages.to_sentence %>
      <% end %>

      <!-- 新增推播表格 -->
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control" %>
          <br />
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>

      <br />

      <!-- 站內所有推播(最新的在前) -->

      <h3>最新推播</h3>

        <% @tweets.each do |tweet| %>
          <div class="tweet-item">
              
            <div class="col-md-3">
              <div class="text-center">

                <% if tweet.user.avatar? %>
                  <%= image_tag tweet.user.avatar.url, height: '100px' %>
                <% else %>
                  <%= image_tag ("800x600.png"), height: '100px' %>
                <% end %>

              </div>
            </div>

            <div class="col-md-9">  

              <%= link_to user_tweets_path(tweet.user) do %>     
                <p class="tweet-user-name"><%= tweet.user.name %></p>
              <% end %>

              <p class="time-tag">, <%= time_tag(tweet.created_at) %></p>

              <p><%= simple_format tweet.description %></p>

              <%= link_to "Reply(#{tweet.replies_count})", tweet_replies_path(tweet) %>

              <p class="like-item">Like(<%= "#{tweet.likes_count}" %>)</p>

              <!-- 呼叫like/unlike button -->
              <%= render partial: "shared/like", locals: {tweet: tweet} %>
            </div><!-- col-md-9 -->

            <div class="clearfix"></div>

          </div><!-- tweet-item -->
        <% end %>


    </div><!-- col-md-6 -->

<!--------------------------------------- 右邊區塊 (Popular) --------------------------------------->
    
    <div class="col-md-4">

      <!-- 跟隨者最多的使用者 -->
      <h3>Popular</h3>

        <% @users.each do |user| %>
          <div class="popular-user">
            <%= link_to user_tweets_path(user) do %>

              <% if user.avatar? %>
                <%= image_tag user.avatar.url, height: '100px' %>
              <% else %>
                <%= image_tag ("800x600.png"), height: '100px' %>
              <% end %>

              <h5><%= user.name %>

            <% end %>

            <p><%= user.introduction %></p>

            <!-- 呼叫follow/unfollow button -->
            <%= render partial: "shared/follow", locals: {user: user} %>
          </div><!-- popular-user -->
        <% end %>

    </div><!-- col-md-4 -->





  </div><!-- row -->
</div><!-- container -->