<h3>front</h3>
<%= form_for @tweet do |f| %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>

<hr />

<h3>popular</h3>
<div>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to "@"+user.name, tweets_user_path(user)%></li>
    <% end %>
  </ul>
</div>

<hr />

<h3>tweets</h3>
<div>
  <ul>
    <% @tweets.each do |tweet| %>
      <li><%= tweet.description %></li>
      <li><%= link_to "Reply", tweet_replies_path(tweet)%></li>
    <% end %>
  </ul>
</div>
