<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8" id="left-col">
      <div class="tweet-field">
        <!-- 顯示錯誤訊息 -->
        <div class="row">
          <% if @tweet.errors.any? %>
            <h4>We have some errors here !</h4>
            <ul>
              <% @tweet.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
                <% end %>
            </ul>
            <hr>
            <% end %>
        </div>
        <!-- 輸入tweet的地方 -->
        <%= form_for @tweet do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "What's on your mind?", class: "btn btn-default" %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary ctweet" %>
          </div>
          <% end %>
      </div>
      <!-- 顯示所有的tweets -->
      <div class="following-tweets">
        <% @tweets.each do |tweet| %>
          <div class="col-sm-6 col-md-4 all-tweets">
            <div class="single-tweet">
              <div class="user-avatar">
                <%= image_tag(tweet.user.avatar, height: '128', width: '128') %>
              </div>
              <div class="user-tweet">
                <div class="user-name">
                  <strong>
                    <%= link_to  "@#{tweet.user.name}", tweets_user_path(tweet.user.id) %>
                  </strong>
                  <em>,
                    <%= tweet.created_at.strftime("%Y-%m-%d") %>,
                      <%= tweet.created_at.strftime("%I:%M%p") %>
                  </em>
                </div>
                <div class="user-description">
                  <%= tweet.description %>
                </div>
                <div class="user-re-li">
                  <%= link_to  "Reply(#{Reply.where(:tweet_id => tweet.id).length})", tweet_replies_path(tweet), class: "btn btn-info btn-group-xs" %>
                    <% if tweet.is_liked?(current_user) %>
                      <%= link_to "Unlike(#{Like.where(:tweet_id => tweet.id).length})", unlike_tweet_path(tweet), method: :post, class: "btn btn-warning btn-group-xs" %>
                      <% else %>
                      <%= link_to "Like(#{Like.where(:tweet_id => tweet.id).length})", like_tweet_path(tweet), method: :post, class: "btn btn-danger btn-group-xs" %>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
    <!-- 顯示追蹤數前10的使用者 -->
    <div class="col-xs-12 col-md-8" id="right-col">
      <% @users.each do |user| %>
        <div class="single-tweet">
          <div class="user-avatar">
            <%= image_tag user.avatar, class: "img-responsive center-block", height: '128', width: '128' %>
          </div>
          <div class="user-tweet">
            <div class="user-name">
              <h2>
                <%= link_to  "@#{user.name}", tweets_user_path(user.id) %>
              </h2>
              <i>
                <p>Followers (
                  <%= user.followers_count %>)</p>
              </i>
            </div>
            <div class="user-introduction">
              <%= user.introduction.truncate(70) %>
            </div>
            <div class="user-re-li">
              <% if user != current_user %>
                <% if current_user.following?(user) %>
                  <%= link_to  "Unfollow", followship_path(user), method: :delete, class: "btn btn-primary ctweet" %>
                  <% else %>
                  <%= link_to  "Follow", followships_path(following_id: user), method: :post , class: "btn btn-primary ctweet"%>
                <% end %>
                <% else %>
                <strong>It's you!</strong>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>  
    </div>
  </div>
</div>