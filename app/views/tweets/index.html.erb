<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="col-md-7">
      <%= form_for @tweet do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control", id: "tweet-new" %>
        </div>
        <div class="form-group clearfix">
          <%= f.submit 'Tweet', class: "btn btn-primary tweet-button" %>
        </div>
      <% end %>

      <% @tweets.each do |tweet| %>
        <div class="tweet-item clearfix">
          <div class="tweet-image">
            <img src="http://via.placeholder.com/80x80">
          </div>
          
          <div class="tweet-content">
            <div class="tweet-info"><%= tweet.user.name %>, <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></div>
            <p><%= tweet.description %></p>
            <%= link_to 'Reply', "#", class: "reply-btn" %>
            <%= render partial: "shared/like", locals: {object: tweet} %>
          </div>
        </div>
        <br>
      <% end %>
    </div>

    <div class="col-md-5">
      <h2 id="index-popular">Popular</h2><br>
      <% @users.each do |user| %>
        <div class="user-item clearfix">
          <div class="user-image">
            <img src="http://via.placeholder.com/80x80">
          </div>
          
          <div class="user-content">
            <h4><%= user.name %></h4>
            <p><%= truncate(user.introduction, length: 100) %></p>
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>