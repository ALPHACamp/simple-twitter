<div class="container">
  <div class="col-md-7  col-sm-7">
    <%= form_for @tweet do |f| -%>
      <div class="form-group">
            <%= f.text_area :description, placeholder: "What's on your minds?", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Tweet",class: "btn btn-primary" %>
          </div>
    <% end %>

    <% @tweets.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-3 col-sm-3">
            <%= image_tag tweet.user.avatar, width:'60px', class: "img-reponsive center-block " %>
          </div>
          
          <div class="col-md-9 col-sm-9">
            <%= tweet.user.name %>, 

            <%= tweet.created_at.to_date %>, 
            <%= tweet.created_at.strftime("%H:%M") %>
            <br>

            <%= tweet.description %>
            <br>

            <%= link_to tweet_replies_path(tweet) do %>
              reply(<%= tweet.replies_count %>)
            <% end %>
            &nbsp;
            like(<%= tweet.likes_count %>)

          </div>

        </div>
      </div>
    <% end %>

  </div>


  <div class="col-md-5 col-sm-5">
    <% @users.each do |user| -%>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-4 col-sm-4">
            <%= image_tag user.avatar, width:'60px', class: "img-reponsive center-block " %>
          </div>
          
          <div class="col-md-8 col-sm-8">
            <%= link_to user.name, tweets_user_path(user) %>
            <br>
            <%= truncate(user.introduction, length:30) %>
            <br>

            <%= render partial: "shared/follow", locals: {user: user} %>
          </div>
        </div>

      </div>

    <% end %>
  </div>

  
</div>
