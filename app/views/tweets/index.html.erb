<h1>Tweets index</h1>

<%=form_for @tweet  do |f|%>
<%= f.text_field :description  %>
<%=f.submit %>
<%end%>

<ul>
  <% @tweets.each do |t| %>
    <li>
      <%=t.description%>
      <%=t.created_at%>
      <%=link_to "reply", tweet_replies_path(t)%>
    </li>
  <%end%>
</ul>

<%= link_to "admin",admin_tweets_path %>