<div class="row">
  <div class="col-md-8">

    <div class="form-horizontal">
      <%= form_for @tweet do |f| %>
      <%#= form_for @tweet, :url => tweets_path, :method => :post do |f| %>
      <%#= form_for @tweet, url: {action: "create"} do |f| %>
      <div class="form-group">
        <%= f.text_area :description, size: "60x12", placeholder: "What's on your mind?", class: "form-control" %>
      </div>
      <div class="col-sm-6">
        <% if @tweet.errors.any? %>
          <%= @tweet.errors.full_messages.to_sentence %>
        <% end %>
      </div>
        <div class="col-sm-offset-10">
          <%= f.submit "create", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <br />

    <!-- 使用者能瀏覽所有的推播 (tweet) -->
    <h2>Newesr Tweet</h2>
    <%= render partial: "shared/tweets" %>
  </div>
  
  <!-- 使用者能在首頁看見跟隨者 (followers) 數量排列前 10 的使用者推薦名單 -->
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Popular</h3>
      </div>
      <div class="panel-body">
        <% @users.each do |user| %>
        <div>
          <div class="avatar-list float-left">
            <%= image_tag user.avatar, class: "img-responsive img-circle" %>
            <% #image_tag @user.avatar, class: "img-responsive img-circle"%>
          </div>
          <div class="small-box">
            <h3><%= link_to "@#{user.name}", tweets_user_path(user) %></h3>
            <h4><%= user.introduction %></h4>
            <!-- notice!!!!!!!!!!!!! -->
            <div class="float-right">
              <%= link_to "Follow", root_path , class: "btn btn-primary" %>
            </div>
            <%#= render partial: "shared/favorite", locals: {user: user} %>
            <%#= render partial: "shared/like", locals: {user: user} %>
          </div>
        </div>
        <div class="clearfix"></div>
        <hr>
        <% end %>
      </div>
    </div>  
  </div>
</div>


