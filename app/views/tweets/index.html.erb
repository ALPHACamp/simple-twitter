<div id="index" class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="tweet-form">
        <%= form_for @tweet do |f| %>
          <div class="form-group">
            <%= f.text_area :description, placeholder: "What's on your mind?", class: "form-control"%>
          </div>
          <div class="form-group button-group">
            <%= f.submit "Tweet", class: "btn" %>
            <%= f.button "Cancel", type: :reset, class: "btn" %>
          </div>
        <% end %>
      </div>
      <% @tweets.each do |t| %>
        <div class="tweet-msg">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag t.user.avatar %>
            </div>
            <div class="col-md-10">
              <%= link_to "@#{t.user.name},#{t.created_at.to_s(:db)}", tweets_user_path(t.user) %>
              <p><%= t.description %></p>
              <%= link_to "Reply(#{t.replies_count})", tweet_replies_path(t) %>
              <%= render partial: "shared/like", locals: { t: t} %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h3 class="title">Popular</h3>
      <% @users.each do |u| %>
        <div class="pop-user">
          <div class="row">
            <div class="col-md-4">
              <%= image_tag u.avatar %>
            </div>
            <div class="col-md-8">
              <%= link_to "@#{u.name}", tweets_user_path(u), class: "name" %>
              <p><%= u.introduction %></p>
              <div class="button-group">
                <% if u != current_user %>
                  <%= render partial: "shared/follow", locals: { u: u} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
