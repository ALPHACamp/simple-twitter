<div class="container">
  <div class="row">
    <div class="col-md-11">

      <div class="col-xs-8">
        <div class="row">
          <%= form_for @tweet do |f| %>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "What's on your mind?", :cols => 55, :rows => 5,  class: "form-control" %>

            </div>

            <div class="form-group">
              <%= f.submit class: "btn btn-info" , style: 'float: right' %>
            </div>
            <% end %>
        </div>
        <br>
        <div class="row">
          <% @tweets.each do |tweet| %>
           <div class='col-xs-12 tweet-box'>
            <div class="col-xs-3">
               <%= image_tag tweet.user.avatar, class: "img-responsive img-rounded center-block" %>
            </div>
            <div class="col-xs-9">


              <div class="caption">

                <p>
                  <%= link_to tweet.user.name, tweets_user_path(tweet.user) %>
                    <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %>
                </p>
                <p>
                  <%= truncate(tweet.description, length: 80) %>
                </p>
<%= link_to "Reply(#{tweet.replies_count})", tweet_replies_path(tweet), class: "links" %>
              </div>


            </div>
          </div>
            <% end %>


        </div>
      </div>

      <div class="col-xs-4">
        <div class="col-xs-12">
          <h2>Popular</h2>
          <div class="panel-body">
            <!--POPULAR -->
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
