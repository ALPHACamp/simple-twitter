
<div class="container">
  <div class="row">

    <%= render partial: "share/userdetails", locals: {user: @tweet.user} %>

    <div class="col-sm-8"> 
        <h2>Tweets</h2>
        <div class="tweet-item">
         <div class="tweet-item">
            <%= image_tag @tweet.user.avatar, class: "img-responsive center-block" %>
            <div class="caption">
              <h3><%= link_to @tweet.user.name, tweets_user_path(@tweet.user) %></h3>
              <h4><%= truncate(@tweet.description, length: 80) %></h4>
            </div>
          </div>
        </div>
      <h2>Replies</h2>
      <% @replies.each do |reply| %>
        <div class="tweet-item">
         <div class="tweet-item">
            <%= image_tag reply.user.avatar, class: "img-responsive center-block" %>
            <div class="caption">
              <h3><%= link_to reply.user.name, tweets_user_path(reply.user) %></h3>
              <h4><%= truncate(reply.comment, length: 80) %></h4>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_for [@tweet, @reply] do |f| %>

        <div class="form-group">
          <%= f.text_area :comment, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>


    </div> 




      
  </div>
</div>