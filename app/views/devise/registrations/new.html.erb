<div class="container text-center">
  <h2>使用者註冊</h2><br />
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <hr>

    <form class="form-group" role="form">

      <div class="field">
        <%= f.label :email%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
      </div>

      <div class="field">
        <%= f.label :name%>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password"  %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Password"  %>
      </div>
    </form>

    <div class="actions">
      <br /><%= f.submit "註冊", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
<hr>
<div class="container text-center">
  <br /><%= render "devise/shared/links" %><br />
</div>

