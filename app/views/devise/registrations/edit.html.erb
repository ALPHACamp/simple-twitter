<div class="divtitle"><h3><b>編輯資料</b> </h3></div>

<div class="card" style="max-width: 800px;">
  <div class="card-block">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "你的名字" %><br />
    <%= f.text_field :name, autofocus: true%>
  </div>
  <hr>

  <div class="field">
    <%= f.label "你的信箱" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  <hr>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :introduction, "自我介紹" %><br />
    <%= f.text_area :introduction, options = {style:"width: 250px; ", class: 'form-control'}%>
  </div>
  <hr>

  <div class="field">
  <%= f.label :avatar, "上傳頭相" %>
  <%= f.file_field :avatar, options = {style:"width: 250px;", class: 'form-control'} %>
  </div>
  <hr>

  <div class="field">
    <%= f.label "修改密碼" %> <i>（不修改密碼請留空）</i><br />
    <% if @minimum_password_length %>
      <em>密碼最低字元需求：<%= @minimum_password_length %></em>
      <br />
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "確認修改密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <hr>

  <div class="field">
    <%= f.label "當前密碼" %> <i>（修改資訊前請先輸入密碼）</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <hr>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
</div>
</div>
