<div class="container col-md-4 col-md-offset-4">
  <div class="panel panel-default u-margin-top-40px">
    <div class="panel-heading">
    <h3 class="panel-title text-center">修改密碼</h3>
    </div>

    <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :password %> <i>(輸入你的新密碼)</i><br />
        <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

       <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%>
      </div>

       <div class="field form-group">
        <%= f.label :current_password %> <i>請輸入你的舊密碼</i><br />
        <%= f.password_field :current_password, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="actions form-group">
        <%= f.submit "修改密碼" ,class:"btn btn-primary form-control"%>
      </div>
      <div class="actions form-group">
        <%=link_to"放棄修改", tweets_path ,class:"btn btn-default form-control"%>
      </div>
    <% end %>

    </div>

  </div>
</div>