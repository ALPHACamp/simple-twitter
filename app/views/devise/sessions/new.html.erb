<div class="container">
  <div class="row">
    <div style="text-align:center">      

      <h2 style="color:lightgray">登入</h2>
      <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, 'Email', :style=>"color:lightgray" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password, '密碼', :style=>"color:lightgray" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <br>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me, '記住我', :style=>"color:lightgray"  %>
          </div>
        <% end -%>
        <br>
        <div class="actions">
          <%= f.submit "登入" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
