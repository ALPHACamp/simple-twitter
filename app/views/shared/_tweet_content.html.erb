<style>
  .tweet-replies span{
    margin-right: 30px;
  }

</style>

<% @tweets.each do |tweet| %>
  <div class="tweet-content">

    <div class="col-md-3">
      <div class="user-avatar">
        <%= image_tag tweet.user.avatar if tweet.user.avatar?  %>
      </div>
    </div>

    <div class="col-md-9">

      <div class="tweet-title">
        <p><%= link_to tweet.user.name, tweets_user_path(tweet.user) %>,
        <%= tweet.created_at.to_date %>,
        <%= tweet.created_at.strftime("%H:%M") %> </p>
      </div>

      <div class="tweet-description">
        <p><%= simple_format tweet.description %></p>
      </div>

      <div class="tweet-replies tweet-likes">
        <span><%= link_to 'Replies',tweet_replies_path(tweet)%></span>

        <% unless tweet.is_liked?(current_user) %> 
          <span><%= link_to 'like',like_tweet_path(tweet),method: :post,class:"text-danger"%></span>
        <% else %>
          <span><%= link_to 'unlike',unlike_tweet_path(tweet),method: :post,class:"text-danger"%></span> 
        <% end %>
      </div>
 

    </div>   
  </div>
<% end %>

