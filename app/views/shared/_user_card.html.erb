<div class="card mb-3">
  <div class="card-body">
    <div class="float-left w-25 pr-3 text-center">
      <% if user.avatar? %>
        <%= image_tag user.avatar, width: '100px', class: "img-fluid" %>
      <% else %>
        <img src="data:image/svg+xml;base64," width="100" height="100" class="img-fluid" >
      <% end %>
    </div>
    <div class="float-right w-75">
      <p class="card-title"><%= link_to "@"+user.name, tweets_user_path(user) %></p>
      <p class="card-text"><%= user.introduction %></p>
      <p class="text-right"><%= render partial: "shared/follow_button", locals: {user: user} %></p>
    </div>
  </div>
</div>
