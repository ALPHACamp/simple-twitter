<div class="col-md-3">
  <%= render partial: "shared/avatar", locals: {avatar: tweet.user.avatar} if tweet.user.avatar? %>
</div>
<div class="col-md-9">
  <p>
    <%= link_to tweet.user.name, tweets_user_path(tweet.user) %>
    <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %>
  </p>
  <p><%= tweet.description %></p>
</div>