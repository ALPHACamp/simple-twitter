<nav>
  <div class="nav-wrapper container">
    <%= link_to 'LOGO', root_path, class: "brand-logo" %>
    <ul class="right hide-on-med-and-down">
      <% if current_user %>
        <% if user_signed_in? %>
          <li>
            <%= link_to tweets_user_path(current_user) do %>
              <%= image_tag current_user.avatar, class: 'navbar-avatar' if current_user.avatar? %>
            <% end %>    
          </li>
          <li>【 Hi, <%= current_user.name %> 】 </li>
        <% else %>
          <li>Hi, Guest :)</li>
        <% end %>

