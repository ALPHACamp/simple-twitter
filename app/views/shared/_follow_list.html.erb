<div class="col-4">
  <%= image_tag follow.avatar, class: "img-thumbnail list-item-img", title: "使用者圖片", alt: "尚未上傳" %>
</div>
<div class="col-8">
  <p><%= link_to(follow.name, tweets_user_path(follow)) %></p>
  <p class="list-text"><%= follow.introduction %></p>
  <% if current_user.following?(follow) %>
    <%= link_to 'Unfollow', followship_path(follow), method: :delete, class: "btn btn-danger" %>
  <% elsif follow == current_user %>
    <%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: follow), method: :post,  class: "btn btn-primary" %>
  <% end %>           
</div>
