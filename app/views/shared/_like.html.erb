<% if tweet.is_liked?(current_user) %>
  <%= link_to unlike_tweet_path(tweet.id), method: :post do %>
  <i class="btn btn-default fas fa-thumbs-up" aria-hidden="true" style="color: #9F88FF">(<%= tweet.likes_count %>)</i>
  <% end %>                      
<% else %>  
  <%= link_to like_tweet_path(tweet.id), method: :post do%>    
   <i class="btn btn-default far fa-thumbs-up" aria-hidden="true" style="color: #9F88FF">(<%= tweet.likes_count %>)</i>
  <% end %> 
<% end %>    
