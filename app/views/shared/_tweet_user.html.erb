<div class="thumbnail">
  <%= image_tag @user.avatar, class:"tweet_user_avatar"%> 
</div>
        
<h3 class="text-center"><%= @user.name %></h3>

<p><%= @user.introduction %></p>

<h3>Tweets <%= @tweets.count %></h3>
<h3>Following <%= @followings.count %></h3>
<h3>Follower</h3>
<h3>Like <%= @likes.count %></h3> 


<div class="usertweet-content">
  <% if @user.name == current_user.name %>
    <%= link_to 'Edit Profile',edit_user_path(@user),class:"btn btn-primary" %>
  <% else %>
    <%= render partial:"shared/like" %>
  <% end %>
</div>   