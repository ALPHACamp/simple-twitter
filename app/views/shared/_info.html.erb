<div class="row">
  <div class="info">
    <% if user.avatar? %>
        <%= image_tag @user.avatar, width:"300px", class: "img-responsive center-block" %>
      <% else %>
        <%= image_tag "http://via.placeholder.com/200x200", width:"300px", class: "img-responsive center-block" %>
      <% end %>
    <h4><%= user.name %></h4>
    <p><%= user.introduction %></p>
    <ul class="list-group">
      <li class="list-group-item">Tweets <%= user.tweets.count %></li>
      <li class="list-group-item">Following <%= user.followships.count %></li>
      <li class="list-group-item">Follower <%= user.followers_count %></li>
      <li class="list-group-item">Like <%= user.likes_count %></li>
    </ul>

    <div class="btn-group">
      <% if user==current_user %>
        <%= link_to "Edit profile", edit_user_path, class: "btn btn-primary" %>  
      <% else %>        
        <% if current_user.following?(user)%>
          <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'Follow', followships_path(following_id: user), method: :post, class: "btn btn-primary" %>
        <% end %> 
      <% end %>
    </div>
  </div>
</div>  