<div class="col-md-12">
  <div class="col-md-12">
    <%= image_tag user.avatar , size: "150", class: "img-responsive " if user.avatar?%>
  </div>
  <div class="col-md-12">
    <p><%= user.name %></p>
    <p><%= user.introduction %></p>
  </div>
  <div class="col-md-12">
    <p><%= link_to  "Tweets(#{user.tweets.count})", tweets_user_path(user) %></p>
  </div>
  <div class="col-md-12">
    <p><%= link_to "Following(#{user.followships.count})" , followings_user_path(user) %></p>
  </div>
  <div class="col-md-12">
    <p><%= link_to "Follower(#{user.followers.count})" , followers_user_path(user) %></p>
  </div>
  <div class="col-md-12">
    <p>Like</p>
  </div>
  <div class="col-md-12">
    <p>Edit Profile/Follow</p>
  </div>    
</div>