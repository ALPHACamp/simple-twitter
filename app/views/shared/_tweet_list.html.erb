<% object.each do |tweet| %>
  <div class="tweet-item clearfix">
    <div class="tweet-image">
      <img src="http://via.placeholder.com/80x80">
    </div>
          
    <div class="tweet-content">
      <div class="tweet-info"><%= tweet.user.name %>, <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></div>
      <p><%= tweet.description %></p>

      <%= link_to "Reply(#{tweet.replies_count})", replies_path(tweet), class: "reply-btn" %>
      <%= render partial: "shared/like", locals: {object: tweet} %>

      <% if current_user.admin? && flag %>
        <%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-sm delete-btn" %>
      <% end %>
    </div>
  </div>
  <br>
<% end %>