  <div class="tweet-list">
    <div class="avatar">
      <%= image_tag tweet.user.avatar, class: "img-responsive img-rounded" %>
    </div>
    <div class="tweet-content">
      <h5><%= link_to tweet.user.name, tweets_user_path(tweet.user) %> <em>,<%=time_ago_in_words(tweet.created_at) %> ago </em></h5>
      <p><%= tweet.description %></p>
      <ul class = "tweet-link">
        <li><%= render partial: "shared/like", locals: {tweet: tweet} %></li>
        <li><%= link_to "replies (#{tweet.replies.size})", tweet_replies_path(tweet) %></li>
        <li>
          <li> likes <%= tweet.likes_count%></li>
      </ul>
      <br>
    </div>
  </div>