<div class="tweet-item">
  <!-- Left -->
  <div class="tweet-item tweet-avatar">
    <%= image_tag tweet.user.avatar.url, size: "150x150", class: "img-responsive" %>
  </div>
  <!-- Right -->
  <div class="tweet-item tweet-texts">
    <!-- @username, create time -->
    <p><%= tweet.user.name %>, <%= tweet.created_at %></p>
    <!-- tweets description -->
    <p><%= tweet.description%></p>
    <!-- Number of replies & likes -->
    <p>
      <%= link_to(tweet_replies_path(tweet)) do %>
        Reply(<%= tweet.replies_count %>)
      <% end %>
      like(<%= tweet.likes_count %>)
    </p>
  </div>
</div>