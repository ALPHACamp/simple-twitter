<% @tweets.each do |tweet| %>
  <div class="tweet-item">
    <div class="row">
      <div class="col-md-3">
        <%= image_tag tweet.user.avatar, class: "img-responsive" %>
      </div>
      <div class="col-md-9">
        <h5><%= tweet.user.name %>, <%= tweet.created_at.strftime("%Y-%m-%d, %H:%M") %></h5>
        <p><%= simple_format tweet.description %></p>
        <p></p>
      </div>
             
    </div>
  </div>
<% end %>