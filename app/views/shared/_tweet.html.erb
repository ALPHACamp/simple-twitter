<div class = "tweet">
	<div>
		<%= image_tag tweet.user.avatar, class: "avatar" %>
	</div>
	<div class = "context">
		<%= link_to "@#{tweet.user.name} ,#{tweet.created_at.localtime.strftime '%Y-%m-%d %H:%M:%S'}", tweets_user_path(tweet.user) %><br>
		<%= tweet.description %><br>
		<%= link_to "Reply(#{tweet.replies.size})", tweet_replies_path(tweet) %>&nbsp;&nbsp;
		<span class= "likes"><%= "like(#{tweet.likes.size})" %></span>
		<% if current_user.admin? %>
			<%= link_to 'Delete', admin_tweet_path(tweet), method: :delete, data:{ confirm: "Are you sure?" }  %>
		<% end %>
	</div>
</div>