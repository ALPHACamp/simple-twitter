<div class="panel panel-default">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag(tweet.user.avatar.url, height: 130, width: 130) %>
    </div>
    <div class="col-md-10">
      <h4><%= tweet.user.name %></h4>
      <p><%= simple_format tweet.description %></p>
      <p class="text-muted">
        <em><%= tweet.created_at.to_time.to_s.split('+').first %> </em>
      </p>
      <%= link_to "Reply", tweet_replies_path(tweet) %>
      <% if tweet.is_liked?(current_user) %>
        <%= link_to "unlike", unlike_tweet_path(tweet), method: :post %>
      <% else %>
        <%= link_to "like", like_tweet_path(tweet), method: :post %>
      <% end %>
    </div>
  </div>
</div>
