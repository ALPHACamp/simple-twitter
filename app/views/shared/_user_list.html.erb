
<div id="user-<%= user.id %>" class="container border rounded">
  <div class="row">
    <div class="col-3">
      <% if user.avatar.url %>
        <%= image_tag user.avatar.url, class: "img-fluid img-thumbnail" %>
      <% else %>
        THere is no photo
      <% end %>
    </div>

    <div class="col-9">
      <h5><%= link_to user.name, tweets_user_path(user) %></h5>
      <p>
        <%= user.introduction %>
      </p>
      <span id="follow-<%= user.id %>">
        <%= render :partial => "shared/follow_list", locals:{user: user} %>
      </span>
    </div>
  </div>
</div>