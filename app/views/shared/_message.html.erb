<div class="row tweet-box">
  <div class="col-xs-3">
    <div class="tweet-avatar">
      <%= image_tag(message.user.avatar, class: "img-responsive center-block") %>
    </div>
  </div>
  <div class="col-xs-9">
    <p><%= link_to "@#{message.user.name}", tweets_user_path(message.user) %><%= ", #{message.created_at}" %></p>
    <% if is_tweet %>
      <p><%= message.description %></p>
      <p><%= link_to "Reply", tweet_replies_path(message.id) %></p>
    <% else %>
      <p><%= message.comment %></p>
    <% end %>
  </div>
</div>