<div class="user_content_left">
  <div>
    <% if user.avatar.url %>
      <%= image_tag user.avatar.url, class: "img-fluid img-thumbnail" %>
    <% else %>
      THere is no photo
    <% end %>
  </div>
  
  <h4><%= user.name %></h4>
  <p>
    <%= user.introduction %>
  </p>
  
  <% if current_user == user %>
    <h6><%= link_to "tweets #{current_user.tweets.count}", tweets_user_path(current_user) %> </h6>
    <h6><%= link_to "Followings #{current_user.followings.count}", followings_user_path(current_user) %></h6>
    <h6><%= link_to "Followers #{current_user.followers.count}", followers_user_path(current_user) %></h6>
    <h6><%= link_to "Likes #{current_user.likes.count}", likes_user_path(current_user) %></h6>
    <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>
  <% else %>
    <h6>Tweets <%= user.tweets.count %></h6>
    <h6>Following <%= user.followings.count %></h6>
    <h6>Follower <%= user.followers.count %></h6>
    <h6>Likes <%= user.likes.count %> </h6>


    <% if current_user&.follow?(user.id) %>
      <%= link_to "Unfollow", followship_path(id:user.id), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "Follow", followships_path(id:user), method: :post, class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>