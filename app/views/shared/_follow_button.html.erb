<% if user == current_user %>
  <button class= "btn btn-success" disabled > It's Me (<%= user.followers_count %>) </button>
<% else %>
  <% if not current_user.is_following?(user) %>
    <%= link_to followships_path(following_id: user.id), method: :post, class: "btn btn-primary" do%>
      Follow (<%= user.followers_count %>)
    <% end %>
  <% else %>
    <%= link_to followship_path(user), method: :delete, class: "btn btn-danger" do%>
      Unfollow (<%= user.followers_count %>)
    <% end %>
  <% end %>
<% end %>

