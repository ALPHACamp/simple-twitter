<% if current_user.is_followed?(follow_object) %>
  <%= link_to "Unfollow", followship_path(follow_object.id), method: :delete, class: "btn btn-warning", data: { disable_with: "Waiting..." } %>
<% else %>
  <%= link_to "Follow", followships_path(following_id: follow_object.id), method: :post, class: "btn btn-primary", data: { disable_with: "Waiting..." } %>
<% end %>
