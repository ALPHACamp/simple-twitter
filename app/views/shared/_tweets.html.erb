<div class="tweets">
  <% objects.each do |t| %>
  <div class="tweet-info clearfix">
    <div class="col-sm-6 col-md-4">
      <%= image_tag t.user.avatar, class: "img-responsive center-block", size: "130x120" %>
    </div>
    <div class="col-sm-6 col-md-8">
      <div class="info-item">
        <%= link_to tweets_user_path(t.user) do %>
          <h3><%= t.user.name %> , <%= t.created_at %></h3>
        <% end %>
        <p><%= truncate(t.description, length: 40){ link_to "continue", "#" } %></p>
        <% if current_user.like?(t) %>
          <%= link_to unlike_tweet_path(t), method: :post, class: "btn" do %>
            <em>Unlike</em>
          <% end %>
        <% else %>
          <%= link_to like_tweet_path(t), method: :post, class: "btn" do %>
            <em>Like(<%= t.likes_count %>)</em>
          <% end %>
        <% end %>
        <%= link_to tweet_replies_path(t, t.replies), class: "btn" do %>
          <em>Relpy(<%= t.replies_count %>)</em>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>