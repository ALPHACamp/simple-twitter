
  <% @tweets.each do |tweet|%>
  <img src="http://via.placeholder.com/50x50" class="img-responsive img-rounded"> <br>
<!--   <%= image_tag tweet.user.avatar %>  -->
 
  <%= link_to tweet.user.name, tweets_user_path(tweet.user) %> <br>
  <%= tweet.description %> <br>
  <%= link_to "Reply(#{tweet.replies_count})", tweet_replies_path(tweet) %> <br>
  <%= render "shared/like", :tweet => tweet %>

  <% end %>

