<% if current_user&.like?(tweet.id) %>
  <%= link_to "unlike (#{tweet.likes_count})", unlike_tweet_path(tweet),class: "btn btn-outline-danger btn-sm", method: :post, remote: true %>
<% else %>
  <%= link_to "likes (#{tweet.likes_count})", like_tweet_path(tweet),class: "btn btn-outline-primary btn-sm", method: :post, remote: true %>
<% end %>