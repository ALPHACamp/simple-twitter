<%= link_to "Reply(#{tweet.replies.size})", tweet_replies_path(tweet) %>
<% if current_user.like?(tweet) %>
   <%= link_to "Unlike(#{tweet.like_users.size})", unlike_tweet_path(tweet), method: :post %>
<% else %>
   <%= link_to "Like(#{tweet.like_users.size})", like_tweet_path(tweet), method: :post %>
<% end %>