<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'Unfollow', followship_path(user), class: "btn deep-purple lighten-4", method: :delete %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user), method: :post, class: "btn blue" %>
  <% end %>
<% else %>
  <%= link_to 'Edit Profile', edit_user_path(user), class: 'btn' %>
<% end %>