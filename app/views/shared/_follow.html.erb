<% if user != current_user %>
  <% if current_user.is_following?(user) %>
    <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-info btn-sm pull-right" %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user.id), method: :post, class: "btn btn-primary btn-sm pull-right" %>
  <% end %>
<% end %>