<% if current_user != user %>
  <% if current_user.is_following?(user)%>
    <%= link_to "Unfollow", followship_path(id: current_user.id, following_id: user.id), class: "btn btn-primary", method: :delete %>
  <% else %>
    <%= link_to "Follow", followships_path(id: current_user.id, following_id: user.id), class: "btn btn-primary", method: :post%>
  <% end%>
<%else%>
    <%= link_to "Profile",tweets_user_path(current_user), class: "btn btn-primary"%>
<% end%>