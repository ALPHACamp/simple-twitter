<% if current_user.is_following?(user) %>
  <%= link_to followship_path(user), method: :delete, class: "btn btn-danger" do%>
    <%= fa_icon "heart", text: "Unfollow" %>
  <% end %>
<% else %>
  <%= link_to followships_path(following_id: user), method: :post, class: "btn btn-primary" do%>
    <%= fa_icon "heart-o", text: "Follow" %>
  <% end %>
<% end %>
