<div class="user-block">
  <div class="user-img">
    <%= image_tag user.avatar.large.url , class: "img-responsive center-block" %>
  </div>
  <div class="user-info">
    <h1><%= user.name %></h1>
    <p><%= simple_format user.introduction %></p>
    <div class="user-item">
      <%= link_to tweets_user_path(user) do %>
        <p>Tweets <%= user.tweets.size %></p>
      <% end %>
      <%= link_to followers_user_path(user) do %>
        <p>Follower <%= user.followers_count %></p>
      <% end %>
      <%= link_to followings_user_path(user) do %>
        <p>Following <%= user.followings.size %></p>
      <% end %>
      <%= link_to likes_user_path(user) do %>
        <p>Like <%= user.likes_count %></p>
      <% end %>
      <div class="edit-btn">
        <% if user == current_user %>
          <%= link_to "Edit Profile",edit_user_path(user), class: "btn btn-primary" %>
        <% else %>
          <% if current_user.following?(user) %>
            <%= link_to "Unfollow", followship_path(user), method: :delete, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Follow", followships_path(following_id: user), method: :post, class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>