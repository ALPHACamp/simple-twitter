<div class="speak-item row">
  <div class="col-xs-3">
     <%= render partial: "shared/avatar", locals: {avatar: tweet.user.avatar} if tweet.user.avatar? %>
     
  </div>

  <div class="col-xs-9">
    <p>
      <%= link_to tweet.user.name,tweets_user_path(tweet.user) %> ,
      <%= tweet_time.strftime("%Y-%m-%d, %H:%M") %>

    </p>
    <p> <%=tweet_des %></p>


  </div>
  <div class="col-xs-9 col-xs-offset-3">
    <div id="reply" class= "reply-item">
      <%= link_to "Reply(#{tweet.replies_count})",tweet_replies_path(tweet),class: "address" %>
    </div>
    

  </div>


</div>