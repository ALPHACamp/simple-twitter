<% if user != current_user %>  
  <% if current_user.following?(user) %>
    <%= link_to 'You are Following'.html_safe, followship_path(user), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Follow'.html_safe, followships_path(following_id: user), method: :post, class: "btn btn-outline-primary" %>
  <% end %>
<% end %>  