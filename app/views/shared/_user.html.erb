<div class="col-md-12 col-sm-12">
  <div class="text-center user-tweet-item">
    <%= image_tag user.avatar, class: "img-responsive img-rounded"  if user.avatar? %>
    <%= image_tag "fallback/avatar.png",
      class: " img-rounded" if !user.avatar?%>
  </div>
</div>
<div class="col-md-12 col-sm-12">
  <h2><strong><%= user.name %></strong></h2>
  <p><%= user.introduction %></p>
  <h3><%= link_to "tweets (#{@tweeted.count})" %></h3>
  <h3><%= link_to "following (#{user.followings.count})" %></h3>
  <h3><%= link_to 'follower'  %></h3>
  <h3><%= link_to 'like' %></h3>
</div>
<% if user == current_user %>
  <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-primary" %>
<% end %>      
<% if user != current_user %>
  <% if current_user.following?(user)%>
    <%= link_to 'Unfollow', followship_path(user), method: :delete , class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user), method: :post , class: "btn btn-default" %>
  <% end %>
<% end %>