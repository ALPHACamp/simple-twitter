<% @users.each do |user| %>
  <div class="user-item">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag user.avatar, class: "img-responsive" %>
      </div>
      <div class="col-md-8">
        <h4><%= link_to user.name, tweets_user_path(user) %></h4>
        <p><%= simple_format user.introduction %></p>
        <!--使用新增追蹤按鈕的prtial-->  
        <%= render partial: "shared/follow", locals:{user:user} %>
      </div>
      
    </div>
  </div>
<% end %>
