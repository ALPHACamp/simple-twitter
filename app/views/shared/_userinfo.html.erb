<div class="form-group">
  <div class="clearfix">
    <%= render partial: "shared/avatar", locals: {user_avatar: user}%>
    <h3><%= user.name %></h3>
    <p><%= user.introduction %></p>
    <p>Tweet <%= user.tweets.count %></p>
    <p>Following <%= user.followings.count %></p>
    <p>Follower <%= user.followers.count %></p>
    <p>likes  <%= user.likes.count %></p>

    <% if user != current_user %>
      <p><%= render partial: "shared/follow", locals: {user: user} %></p>
    <% else %>
      <p><%= link_to "Edit Profile", edit_user_path(user), class:"btn btn-info" %></p>
    <% end %>

    
  </div>
</div>
