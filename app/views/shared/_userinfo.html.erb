     <div class="user-profile-image">
        <% if user.avatar? %>
          <%= link_to tweets_user_path(user) do %>
            <%= image_tag user.avatar, class: "img-responsive  img-rounded" %>
          <% end %>
        <% end %>
      </div>
      <h3><%= user.name %></h3>
      <p><%= user.introduction %></p>
      <p>Tweets</p>
      <%=link_to "Following", followings_user_path(user) %>
      <%=link_to "Follower (#{user.followers_count})", followers_user_path(user) %>
      <p>Like</p>
      <% if current_user == user %>
        <br>
        <%= link_to "Edit Profile", edit_user_path(user) , class: "btn btn-primary" %>
      <% else %>
        <%= render partial: "shared/follow", locals: {user: user} %>
      <% end %>