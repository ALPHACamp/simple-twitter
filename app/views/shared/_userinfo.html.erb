<div class="col-md-3">
  <%= image_tag user.avatar, class: "avatar-styled" %>
  <h1><%= user.name %></h1>
  <p class="user-introduction"><%= user.introduction %></p>
  <h2><%= link_to "Tweet  #{user.tweets_count}", tweets_user_path(user), class: "gray-link" %></h2>
  <h2><%= link_to "Following  #{user.followings.count}", followings_user_path(user), class: "gray-link" %></h2>
  <h2><%= link_to "Follower  #{user.followers_count}", followers_user_path(user), class: "gray-link" %></h2>
  <h2><%= link_to "Like  #{user.likes_count}", likes_user_path(user), class: "gray-link" %></h2>
  <hr>
  <% if user == current_user %>
    <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-primary" %>
  <% else %>
    <% if current_user.following?(user)%>
      <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'Follow', followships_path(following_id: user), method: :post, class: "btn btn-primary" %>
    <% end %>
  <% end %>  
</div>