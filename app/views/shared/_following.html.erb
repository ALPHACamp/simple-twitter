<div class="edit-btn">
  <% if @user == current_user %>
    <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-primary btn-block btn-lg" %>
  <% end %>

  <% if @user != current_user %>
    <% if current_user.following?(@user)%>
      <%= link_to "Unfollow", followship_path(@user), method: :delete, class: "btn btn-primary btn-block btn-lg" %>
    <% else %>
      <%= link_to "Follow", followships_path(following_id: @user.id), method: :post, class: "btn btn-primary btn-block btn-lg" %>
    <% end %>
  <% end %>
</div>
