<div id="user_avatar" class="mb-3">
<% if @user.avatar? %>
  <%= image_tag @user.avatar, width: '200px', class: "" %>
<% else %>
  <img src="data:image/svg+xml;base64," width="200" height="200" class="img-thumbnail d-block" >
<% end %>
</div>
<h2><%= @user.name %></h2>
<div id="user_introduction">
  <%= @user.introduction %>
</div>
<div id="user_state" class="mt-3 mb-3">
  <ul class="list-group">
    <li class="list-group-item">Tweets: <%= @user.tweets.count %></li>
    <li class="list-group-item">Following: </li>
    <li class="list-group-item">Follower: </li>
    <li class="list-group-item">
      <%= link_to likes_user_path(@user) do%>
        Like: <%= @user.liked_tweets.count %>
      <% end %>
    </li>

  </ul>
</div>
<% if @user == current_user %>
  <%= link_to "Edit porfile", edit_user_path(@user), class: "btn btn-primary" %>
<% else %>
  <%= link_to "Follow", followships_path(following_id: @user.id), method: :post, class: "btn btn-primary"  %>
<% end %>
