<div class = "box">
  <%= image_tag @user.avatar, class: "img-responsive img-circle" %>
  <h1><%= @user.name %></h1>
  <h2><%= @user.introduction %></h2>
  <br />

  <h4> <%= link_to "Tweets #{@user.tweets.count}"%></h4>
  <h4> <%= link_to "Following #{@user.followings.count}", followings_user_path  %></h4>
  <h4> <%= link_to "Follower",followers_user_path %></h4>
  <h4> <%= link_to "like #{@user.likes.count}",likes_user_path %></h4>
  <br>
  <%= render partial: "shared/follow", locals: {user: @user} %>

</div>
<div class="clearfix"></div>