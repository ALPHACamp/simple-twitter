<%- tweets.each do |f| %>
	<div class="thumbnail">
		<%= image_tag f.user.avatar, width:'100px', id:"tweet-avatar" %>
		<div id="tweet-details-block">
			<h5 class="text-primary"><%= link_to(tweets_user_path(:id => f.user)) do %>@<%= f.user.name %><%end%> <%= f.created_at %></h5>
			<p><%= simple_format f.description %></p>
			<%= link_to "replies", tweet_replies_path(f.id) %>
		</div>
	</div>
<% end %>