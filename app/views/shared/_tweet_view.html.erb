<% tweets.each do |tweet| %>
  <div class="tweet-item row">
    <div class="col=4 tweet-item-img">
      <%= image_tag tweet.user.avatar, class: "img-thumbnail", title: "使用者圖片", alt: "使用者尚未上傳" %>
    </div>
    <div class="col-8">
      <p><%= link_to(tweet.user.name, tweets_user_path(tweet.user)) %>, <%= tweet.created_at.strftime("%F %T") %></p>
      <p><%= tweet.description %></p>
      <%= link_to 'Like', like_tweet_path(tweet), method: :post, class: "btn btn-primary" %> 
      <%= link_to 'Unlike', unlike_tweet_path(tweet), method: :post, class: "btn btn-info" %>
    </div>
  </div>
<% end %>
