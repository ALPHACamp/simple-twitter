<img src="http://via.placeholder.com/200x200" alt="avatar">
<h2><%= user.name %></h2>
<p>introduction: <%= user.introduction %></p>
<ul>
  <li>Tweets <%= user.tweets.count %></li>
  <li>Following</li>
  <li>Follower</li>
  <li>
    <%= link_to "Like", likes_user_path(user) %>
    <%= user.likes.count %>
  </li>
</ul>
<% if user == current_user %>
  <%= link_to('Edit Profile', edit_user_path(current_user)) %>
<% else %>
  <button>Follow</button>
<% end %>
