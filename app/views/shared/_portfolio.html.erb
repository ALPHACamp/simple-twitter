<div class="col-xs-12 col-md-8 portfolio">
  <div class="avatar">
    <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
  </div>
  <div class="user-name">
    <%= @user.name %>
  </div>
  <div class="introduction">
    <%= @user.introduction %>
  </div>
  <div class="user-re-li">
    <ul>
      <li>
        <%= link_to "Tweets (#{Tweet.all.where(:user_id => @user.id).length})", tweets_user_path %>
      </li>
      <li>
        <%= link_to "Following (#{Followship.all.where(:following_id => @user.id).length})", followings_user_path %>
      </li>
      <li>
        <%= link_to "Follower (#{Followship.all.where(:user_id => @user).length})", followers_user_path %>
      </li>
      <li>
        <%= link_to "Like (#{Like.all.where(:user_id => @user).length})", likes_user_path %>
      </li>
    </ul>
  </div>
  
  <div class="editorfollow">
    <% if current_user != @user %>
      <% if current_user.following?(@user) %>
        <%= link_to  "Unfollow", followship_path(@user), method: :delete, class: "btn btn-primary ctweet" %>
        <% else %>
        <%= link_to  "Follow", followships_path(following_id: @user), method: :post , class: "btn btn-primary ctweet"%>
      <% end %>
      <% else %>
      <%= link_to "Edit", edit_user_path, class: "btn btn-primary ctweet" %>
    <% end %>
  </div>