<div class="col-xs-12 col-md-4">
  <div class="avatar">
    <%= image_tag user.avatar, width: '300px', class: "img img-responsive" %>
  </div>
  <div class="user-name">
    <h2>@<%= user.name.capitalize %></h2>    
  </div>
  <br>
  <div class="introduction">
    <% if user.introduction? %>
    <p><%= user.introduction %></p>
    <% else %>
    <p>Tell everyone who is you!</p>
    <% end %>
  </div>
  <br>
  <div class="user-re-li">
    <ul>
      <li>
        <%= link_to "Tweets (#{Tweet.all.where(:user_id => user.id).length})", tweets_user_path(user.id) %>
      </li>
      <li>
        <%= link_to "Following (#{Followship.all.where(:user_id => user.id).length})", followings_user_path(user.id) %>
      </li>
      <li>
        <%= link_to "Follower (#{Followship.all.where(:following_id => user).length})", followers_user_path(user.id) %>
      </li>
      <li>
        <%= link_to "Like (#{Like.all.where(:user_id => user).length})", likes_user_path(user.id) %>
      </li>
    </ul>
  </div>
  <br>
  <hr class="hrlogin">
  <div class="editorfollow">
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to  "Unfollow", followship_path(user), method: :delete, class: "btn btn-danger ctweet" %>
        <% else %>
        <%= link_to  "Follow", followships_path(following_id: user), method: :post , class: "btn btn-info ctweet"%>
      <% end %>
      <% else %>
      <%= link_to "Edit", edit_user_path(user.id), class: "btn btn-success ctweet" %> <br>
      <br>
      <%= link_to "Change Password", edit_user_registration_path(user.id), class: "btn btn-warning ctweet" %>
    <% end %>
  </div>