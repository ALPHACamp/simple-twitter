<div class="col-xs-12 col-md-4">
  <div class="avatar">
    <% if current_user.avatar %>
      <%= image_tag user.avatar, width: '300px', class: "img img-responsive" %>
    <% else %>
      <%= image_tag 'fallback/default-avatar', width: '300px', class: "img img-responsive" %>
    <% end %>
  </div>
  <div class="user-name">
    <h2>@<%= user.name.capitalize %></h2>
  </div>
  <br>
  <div class="introduction">
    <% if user.introduction? %>
      <p><%= user.introduction %></p>
    <% else %>
      <p>Tell everyone who is you!</p>
    <% end %>
  </div>
  <br>
  <div class="user-re-li">
    <ul>
      <li>
        <%= link_to "Tweets (#{user.tweets.count})", tweets_user_path(user) %>
      </li>
      <li>
        <%= link_to "Following (#{user.followings.count})", followings_user_path(user) %>
      </li>
      <li>
        <%= link_to "Follower (#{user.followers.count})", followers_user_path(user) %>
      </li>
      <li>
        <%= link_to "Like (#{user.likes_count})", likes_user_path(user) %>
      </li>
    </ul>
  </div>
  <br>
  <hr class="hrlogin">
  <div class="editorfollow">
    <% if current_user != user %>
      <%= render  "shared/follow", object_user: user %>
    <% else %>
      <%= link_to "Edit", edit_user_path(user), class: "btn btn-success ctweet" %> <br>
      <br>
      <%= link_to "Change Password", edit_user_registration_path(user), class: "btn btn-warning ctweet" %>
    <% end %>
  </div>